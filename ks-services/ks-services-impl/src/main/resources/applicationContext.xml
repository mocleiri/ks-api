<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
   
   
   	<!-- entry point service -->
    <bean id="lprService" class="org.kuali.student.enrollment.lpr.service.impl.LuiPersonRelationServiceImpl"/>

    <!-- advices -->
    <bean id="lprAuthorizationBean"
          class="org.kuali.student.enrollment.lpr.service.impl.LuiPersonRelationServiceAuthorizationImpl"/>
 	<bean id="lprValidationBean"
          class="org.kuali.student.enrollment.lpr.service.impl.LuiPersonRelationServiceValidationImpl"/>
  
  	
    <!--
        <aop:config>
       <aop:aspect id="lprCreateMethod" ref="lprAuthorizationBean">
          <aop:around pointcut="execution(* org.kuali.student.enrollment.lpr.service.impl.LuiPersonRelationService.create*(..))"
                   method="createBulkRelationshipsForPersonAuthorization"/>
       </aop:aspect>
    </aop:config>
    -->
   <aop:config>
    <aop:aspect id="securityAspect" ref="lprAuthorizationBean">
     <aop:pointcut id="lprCreateAuthPointcut" expression="bean(*lprService)"/>
      <aop:around pointcut-ref="lprCreateAuthPointcut" method="createBulkRelationshipsForPersonAuthorization"/>
    </aop:aspect>
    <aop:aspect id="validationAspect" ref="lprValidationBean">
     <aop:pointcut id="lprCreateValidatePointcut" expression="bean(*lprService)"/>
     <aop:around pointcut-ref="lprCreateValidatePointcut" method="createBulkRelationshipsForPersonValidation" />
  	</aop:aspect>
   </aop:config>
</beans>