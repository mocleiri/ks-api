<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="personRelationConverter" class="org.kuali.student.enrollment.lpr.conversion.PersonRelationConverter">
        <property name="dynamicAttributeConverter" ref="dynamicAttributesConverter"/>
        <property name="personRelationStateConverter" ref="personRelationStateConverter"/>
        <property name="personRelationTypeConverter" ref="personRelationTypeConverter"/>
    </bean>

    <bean name="dynamicAttributesConverter"
          class="org.kuali.student.enrollment.lpr.conversion.DynamicAttributeConverter"/>

    <bean name="personRelationTypeConverter"
          class="org.kuali.student.enrollment.lpr.conversion.PersonRelationTypeConverter">
        <property name="dynamicAttributeConverter" ref="dynamicAttributesConverter"/>
    </bean>

    <bean name="personRelationStateConverter"
          class="org.kuali.student.enrollment.lpr.conversion.PersonRelationStateConverter">
        <property name="dynamicAttributeConverter" ref="dynamicAttributesConverter"/>
    </bean>
</beans>