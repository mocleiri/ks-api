<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <bean id="persistList"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="m1" />
                <ref bean="m2" />
                <ref bean="m3" />
                <ref bean="m4" />
                <ref bean="m5" />
                <ref bean="m6" />
            </list>
        </property>
    </bean>
	
	<bean id="msgUS" abstract="true" class="org.kuali.student.core.messages.entity.MessageEntity">
		<property name="locale" value="US" />
	</bean>

	<bean id="msgCA" abstract="true" class="org.kuali.student.core.messages.entity.MessageEntity">
		<property name="locale" value="CA" />
	</bean>
	
   	<bean id="m1"	parent="msgUS"	p:groupName="Address"	p:id="City"		p:value="Enter the US city where you live:"/>
   	<bean id="m2"	parent="msgUS"	p:groupName="Address"	p:id="State"	p:value="State:"/>
   	<bean id="m3"	parent="msgUS"	p:groupName="Name"		p:id="Last"		p:value="Enter your last name:"/>
   	
   	<bean id="m4"	parent="msgCA"	p:groupName="Address"	p:id="City"		p:value="Enter the Canadian city where you live:"/>
   	<bean id="m5"	parent="msgCA"	p:groupName="Address"	p:id="State"	p:value="Province:"/>
   	<bean id="m6"	parent="msgCA"	p:groupName="Name"		p:id="Last"		p:value="Enter your surName:"/>

</beans>