<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <bean id="persistList"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="messageEntity1" />
                <ref bean="messageEntity2" />
                <ref bean="messageEntity3" />
            </list>
        </property>
    </bean>
   <bean id="messageEntity1"
          class="org.kuali.student.core.messages.entity.MessageEntity">
        <property name="id"             value="1" />
        <property name="locale"         value="US" />
        <property name="groupName"      value="Address" />
        <property name="value"          value="address value 1" />
    </bean>
    <bean id="messageEntity2"
          class="org.kuali.student.core.messages.entity.MessageEntity">
        <property name="id"             value="2" />
        <property name="locale"         value="US" />
        <property name="groupName"      value="Address" />
        <property name="value"          value="address value 2" />
    </bean>
    <bean id="messageEntity3"
          class="org.kuali.student.core.messages.entity.MessageEntity">
        <property name="id"             value="3" />
        <property name="locale"         value="CA" />
        <property name="groupName"      value="Address" />
        <property name="value"          value="address value 3" />
    </bean>
    
</beans>