<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:security="http://www.springframework.org/schema/security"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/security 
           http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:ks-spring-security.properties</value>
			</list>
		</property>
	</bean>
	
	<!-- uncomment to enable CAS and uncomment the line entry-point-ref="casProcessingFilterEntryPoint" below -->
	<!--  <import resource="ks-spring-security-cas.xml"/> -->
	
	<!--  <security:http auto-config="false" entry-point-ref="casProcessingFilterEntryPoint" > -->
	<security:http auto-config="false">
    	<security:intercept-url pattern="/logout.html*" filters="none"/>
    	<security:intercept-url pattern="/services/*" filters="none"/>
        <security:intercept-url pattern="/**" access="ROLE_KS_USER"/>
        <security:form-login />
        <security:logout/>
    </security:http>

<!--	<security:authentication-provider user-service-ref='ksRiceUserDetailsService'/>-->

	<!--List of Custom Providers that can be registered with the default authentication manager -->
	<!--If one returns null then the authentication control is passed onto the next	-->
  	<bean id="daoAuthenticationProvider" 
      	class="org.kuali.rice.kim.KimAuthenticationProvider">
      	<property name="userDetailsService" ref="ksRiceUserDetailsService"/>
    	<security:custom-authentication-provider />
   	</bean>
   	
   	<bean id="daoAuthenticationProvider2" 
      	class="org.springframework.security.providers.dao.DaoAuthenticationProvider">
      	<property name="userDetailsService" ref="ksUserDetailsService"/>
    	<security:custom-authentication-provider />
   	</bean>
    
	<bean id="ksUserDetailsService" class="org.kuali.student.security.spring.KSDefaultUserDetailsService">
		<!-- uncomment if you do not want to use the default roles of ROLE_KS_ADMIN, ROLE_KS_USER
		<property name="authorities">
			<list>
				<value>ROLE_KS_FACULTY</value>
			</list>
		</property>
		-->
	</bean>


	<!--Enabling Kim identity service to authenticate the users	-->
	<!--Using KSB client proxy to fetch the service	-->
	<bean id="identityServiceClient" class="org.kuali.rice.ksb.messaging.KSBClientProxyFactoryBean">
		<!--  We should be reading these from ks-spring-security.properties (see above), but it looks like we're being bitten by
		      http://jira.springframework.org/browse/SPR-5719. Once that's resolved, remove these and un-comment
		      next two lines -->
		<property name="serviceEndpointInterface" value="org.kuali.rice.kim.service.IdentityService" />
		<property name="serviceQName" value="{http://rice.kuali.org/wsdl/kim}kimIdentityServiceSOAP" />
		<!--
		<property name="serviceEndpointInterface" value="${ks.default.security.rice.serviceEndpointInterface}" />
		<property name="serviceQName" value="${ks.default.security.rice.serviceQName}" />
		-->
	</bean>
	
	<bean id="ksRiceUserDetailsService" class="org.kuali.student.security.spring.KSRiceDefaultUserDetailsService">
		<property name="identityService" ref="identityServiceClient"/>
  	</bean>
	
	<bean id="authenticationGwtRpcFilter" class="org.kuali.student.security.filter.AuthenticationGwtRpcFilter">
    	<security:custom-filter after="CAS_PROCESSING_FILTER"/>
  	</bean>
	
</beans>