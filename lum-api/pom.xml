<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.umd.ks.poc</groupId>
	<artifactId>lum-api</artifactId>
	<packaging>jar</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<parent>
		<groupId>edu.umd.ks.poc</groupId>
		<artifactId>lum</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.kuali.student.poc.common</groupId>
			<artifactId>common-ws</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
			<version>1.8.0-BETA</version>
		</dependency>
	</dependencies>

	<build>
			<plugins>
				<plugin>
					<groupId>org.apache.cxf</groupId>
					<artifactId>cxf-java2ws-plugin</artifactId>
					<version>${cxf.version}</version>
					<dependencies>
						<dependency>
							<groupId>org.apache.cxf</groupId>
							<artifactId>
								cxf-rt-frontend-jaxws
							</artifactId>
							<version>${cxf.version}</version>
						</dependency>
						<dependency>
							<groupId>org.apache.cxf</groupId>
							<artifactId>
								cxf-rt-frontend-simple
							</artifactId>
							<version>${cxf.version}</version>
						</dependency>
					</dependencies>
					<configuration>
						<argline>-s ${project.build.directory}/generated/src -classdir ${project.build.outputDirectory}</argline>
					</configuration>
					<executions>
						<execution>
							<id>generate-wsdl1</id>
							<phase>process-classes</phase>
							<configuration>
								<className>
									edu.umd.ks.poc.lum.lu.service.LuService
								</className>
								<serviceName>
									LuService
								</serviceName>
								<genWsdl>true</genWsdl>
								<genWrapperbean>true</genWrapperbean>
								<verbose>true</verbose>
							</configuration>
							<goals>
								<goal>java2ws</goal>
							</goals>
						</execution>
												<execution>
							<id>generate-wsdl2</id>
							<phase>process-classes</phase>
							<configuration>
								<className>
									edu.umd.ks.poc.lum.scat.service.ScatService
								</className>
								<serviceName>
									ScatService
								</serviceName>
								<genWsdl>true</genWsdl>
								<genWrapperbean>true</genWrapperbean>
								<verbose>true</verbose>
							</configuration>
							<goals>
								<goal>java2ws</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
	</build>
</project>