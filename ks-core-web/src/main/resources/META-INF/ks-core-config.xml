<config>
  
    <param name="module.name">ks-core-web</param>

    <param name="app.code" override="false">ks-core-web</param>
	<param name="app.context.name" override="false">${app.code}</param>
    <param name="http.port" override="false">8181</param>  
    <param name="rice.ksb.loadKNSModuleConfiguration">false</param>
    <param name="rice.logging.configure">true</param>
    <param name="log4j.settings.path">classpath:log4j.properties</param>
    <param name="serviceNamespace">KSCore</param>
    
    <param name="application.host" override="false">localhost</param>
    <param name="application.http.scheme" override="false">http</param>
    <param name="appserver.url" override="false">${application.http.scheme}://${application.host}:${http.port}</param>
    <param name="application.url" override="false">${appserver.url}/${app.context.name}</param>   
	<param name="serviceServletUrl" override="false">${application.url}/services/</param>
	
    
    <!-- this is dev only parameter, currently can't create quartz tables with jpa -->
    <param name="useQuartzDatabase">false</param>

    <!-- Datasource Configuration -->

    <param name="rice.ksb.jpa.enabled">true</param>

    <param name="rice.ksb.registry.jpa.PersistenceXmlLocation">META-INF/ksb-persistence.xml</param>
    <param name="rice.ksb.registry.jpa.PersistenceUnitName">ksb-registry-unit</param>
    <param name="rice.ksb.registry.jpa.GenerateDdl">true</param>

    <param name="rice.ksb.message.jpa.PersistenceXmlLocation">META-INF/ksb-persistence.xml</param>
    <param name="rice.ksb.message.jpa.PersistenceUnitName">ksb-message-unit</param>
    <param name="rice.ksb.message.jpa.GenerateDdl">true</param>

    <!-- these are defaulted to false already, helpful to turn on for debug -->
    <param name="rice.jpa.JpaProperties.hibernate.show_sql">true</param>
    <param name="rice.jpa.JpaProperties.hibernate.use_sql_comments">false</param>
    <param name="rice.jpa.JpaProperties.hibernate.format_sql">false</param>

    <param name="rice.jpa.DatabasePlatform">org.hibernate.dialect.DerbyDialect</param>
    <param name="rice.jpa.UseSerialization">false</param>

    <param name="datasource.ojb.platform">Derby</param>
 
    <param name="datasource.driver.name">org.apache.derby.jdbc.ClientDriver</param>
    <param name="datasource.url">jdbc:derby://localhost:1527/derby/rice-db;create=true</param>
    <!--
    <param name="datasource.url">jdbc:derby:target/derby/rice-db;create=true</param>
    -->    
    <param name="datasource.username">rice</param>
    <param name="datasource.password">r1c3</param>
    <param name="datasource.pool.validationQuery">values(1)</param>
    <param name="datasource.pool.maxWait">600</param>
    <param name="datasource.pool.size">5</param>
    <param name="datasource.pool.maxSize">10</param>
    <param name="datasource.pool.minSize">10</param>
    
    <param name="ks.core.datasource.url">jdbc:derby://localhost:1527/derby/core;create=true</param>
    <param name="ks.core.datasource.username">kscore</param>
    <param name="ks.core.datasource.password">kscore</param>
    

    <!-- Keystore Configuration -->
    <param name="keystore.file">${rice.base}../../src/main/resources/rice.keystore</param>
    <param name="keystore.alias">rice</param>
    <param name="keystore.password">r1c3pw</param>

    <param name="config.location">${user.home}/ks-core-config.xml</param> 
    <param name="config.location">classpath:META-INF/common-config-defaults.xml</param>

</config>