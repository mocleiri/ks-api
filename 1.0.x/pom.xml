<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-parent</artifactId>
    <version>4</version>
  </parent>
  <groupId>org.kuali.student</groupId>
  <artifactId>student-parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kuali Student</name>
  <description>
    Kuali Student is a next-generation student system.
    Kuali Student offers a flexible, scalable, cost-effective system that can be configured to meet the business 
    requirements of any higher education institution.  The student-centric design will help students, faculty, 
    and institutions deal with the dynamic learning environment.
  </description>
  <organization>
    <name>Kuali Student</name>
    <url>http://student.kuali.org/</url>
  </organization>
  <url>http://student.kuali.org/</url>
  <inceptionYear>2006</inceptionYear>
  <repositories>
    <repository>
      <id>kuali.central</id>
      <url>http://kuali.googlecode.com/svn/repository</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>
  <scm>
    <connection>scm:svn:https://test.kuali.org/svn/student/deploymentlab/trunk/1.0.x</connection>
    <developerConnection>scm:svn:https://test.kuali.org/svn/student/deploymentlab/trunk/1.0.x</developerConnection>
    <url>https://test.kuali.org/svn/student/deploymentlab/maven/trunk/1.0.x</url>
  </scm>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
            <encoding>${project.build.sourceEncoding}</encoding>
            <!-- Don't compile sources that are in jars -->
            <compilerArgument>-implicit:none</compilerArgument>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.kuali.impex</groupId>
          <artifactId>maven-impex-plugin</artifactId>
          <version>1.0.0-SNAPSHOT</version>
          <dependencies>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.12</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <modules>
    <module>ks-security</module>
    <module>ks-core</module>
    <module>brms</module>
    <module>ks-lum</module>
    <module>ks-web</module>
  </modules>
</project>