<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-cfg-dbs</artifactId>
    <version>1.0.0-m5-SNAPSHOT</version>
  </parent>
  <artifactId>ks-lum-db</artifactId>
  <name>KS LUM Database</name>
  <description>Kuali Student Learning Unit Management Database</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/impex/schema</directory>
      </resource>
      <resource>
        <directory>${project.build.directory}/generated-sql/impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.kuali.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <configuration>
          <runOnlyOnSchemaChange>false</runOnlyOnSchemaChange>
          <delimiter>/</delimiter>
          <delimiterType>row</delimiterType>
          <username>KSEMBEDDED</username>
          <password>KSEMBEDDED</password>
          <schema>KSEMBEDDED</schema>
          <url>jdbc:oracle:thin:@localhost:1521:XE</url>
          <driver>oracle.jdbc.OracleDriver</driver>
          <orderFile>ascending</orderFile>
          <keepFormat>true</keepFormat>
          <schemaXMLName>ks-lum-db</schemaXMLName>
          <targetDatabase>oracle</targetDatabase>
        </configuration>
        <executions>
          <execution>
            <id>generate-datadtd</id>
            <goals>
              <goal>datadtd</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-oracle-sql</id>
            <configuration>
              <targetDatabase>oracle</targetDatabase>
            </configuration>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-mysql-sql</id>
            <configuration>
              <targetDatabase>mysql</targetDatabase>
            </configuration>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>10.2.0.3.0</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>