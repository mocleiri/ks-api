<rule>
  <name>hello-drools</name>
  <modelVersion>1.0</modelVersion>
  <attributes/>
  <lhs>
    <fact>
      <constraintList>
        <constraints>
          <fieldConstraint>
            <fieldName>emailAddress</fieldName>
            <operator>==</operator>
            <connectives/>
            <value>len@ubc.ca</value>
            <constraintValueType>1</constraintValueType>
          </fieldConstraint>
          <fieldConstraint>
            <fieldName>calculateAverage</fieldName>
            <operator>&gt;=</operator>
            <connectives>
              <connectiveConstraint>
                <operator>|| &gt;=</operator>
                <constraintValueType>0</constraintValueType>
              </connectiveConstraint>
              <connectiveConstraint>
                <constraintValueType>0</constraintValueType>
              </connectiveConstraint>
            </connectives>
            <value>10</value>
            <constraintValueType>3</constraintValueType>
          </fieldConstraint>
        </constraints>
      </constraintList>
      <factType>Email</factType>
    </fact>
    <fact>
      <factType>Message</factType>
      <boundName>$message</boundName>
    </fact>
  </lhs>
  <rhs>
    <setField>
      <variable>$message</variable>
      <fieldValues>
        <fieldValue>
          <field>valid</field>
          <value>true</value>
          <type>Boolean</type>
        </fieldValue>
        <fieldValue>
          <field>message</field>
          <value>Email address is valid</value>
          <type>String</type>
        </fieldValue>
      </fieldValues>
    </setField>
  </rhs>
</rule>