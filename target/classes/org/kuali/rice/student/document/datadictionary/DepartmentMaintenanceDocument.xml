<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xmlns:dd="http://rice.kuali.org/dd" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd         http://rice.kuali.org/dd         http://rice.kuali.org/dd/dd.xsd">

  <bean id="DepartmentMaintenanceDocument" parent="DepartmentMaintenanceDocument-parentBean"/>

  <bean id="DepartmentMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.student.bo.Department"/>
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl"/>
    <property name="maintainableSections">
      <list>
        <ref bean="DepartmentMaintenanceDocument-EditDepartment"/>
      </list>
    </property>
    <property name="lockingKeys">
      <list>
        <value>departmentCode</value>
      </list>
    </property>

    <property name="documentTypeName" value="DepartmentDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="workflowAttributes">
    	<ref bean="DepartmentMaintenanceDocument-workflowAttributes"/>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="DepartmentMaintenanceDocument-EditDepartment" parent="DepartmentMaintenanceDocument-EditDepartment-parentBean"/>

  <bean id="DepartmentMaintenanceDocument-EditDepartment-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Department"/>
    <property name="title" value="Edit Department"/>
    <property name="maintainableItems">
      <list>
        <bean parent="MaintainableFieldDefinition" p:name="departmentCode" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="departmentDescription" p:required="true"/>
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="DepartmentMaintenanceDocument-workflowAttributes" parent="DepartmentMaintenanceDocument-workflowAttributes-parentBean"/>
  
  <bean id="DepartmentMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true"/>
</beans>