<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="LearningUnit" parent="LearningUnit-parentBean" />

  <bean id="LearningUnit-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.student.bo.LearningUnit" />
    <property name="inquiryDefinition" >
      <ref bean="LearningUnit-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="LearningUnit-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="LearningUnitName" />
    <property name="objectLabel" value="Learning Unit" />
    <property name="attributes" >
      <list>
        <ref bean="LearningUnit-id" />
        <ref bean="LearningUnit-state" />
        <ref bean="LearningUnit-title" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="LearningUnit-id" parent="LearningUnit-id-parentBean" />

  <bean id="LearningUnit-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="id" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Learning Unit Identifier" />
    <property name="shortLabel" value="Identifier" />
    <property name="maxLength" value="9" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
  </bean>
  <bean id="LearningUnit-state" parent="LearningUnit-state-parentBean" />

  <bean id="LearningUnit-state-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="state" />
    <property name="label" value="Learning Unit State" />
    <property name="shortLabel" value="State" />
    <property name="maxLength" value="100" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="102" />
    </property>
  </bean>
  <bean id="LearningUnit-title" parent="LearningUnit-title-parentBean" />

  <bean id="LearningUnit-title-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="title" />
    <property name="label" value="Learning Unit Title" />
    <property name="shortLabel" value="Title" />
    <property name="maxLength" value="100" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="102" />
    </property>
  </bean>
  
<!-- Business Object Inquiry Definition -->


  <bean id="LearningUnit-inquiryDefinition" parent="LearningUnit-inquiryDefinition-parentBean" />

  <bean id="LearningUnit-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Learning Unit Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Learning Unit" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="id" />
              <bean parent="FieldDefinition"
                    p:attributeName="state" />
              <bean parent="FieldDefinition"
              		p:attributeName="title"  />
            </list>
          </property>
        </bean>
        
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Departments" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="departments" />
                <property name="businessObjectClass" value="org.kuali.rice.student.bo.Department" />
                <property name="numberOfColumns" value="1" />
                <property name="summaryTitle" value="Department" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="departmentCode" />   
                    <bean parent="FieldDefinition"
                          p:attributeName="departmentDescription" />                                                                                     
                  </list>
                </property>
                <property name="summaryFields">
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="departmentDescription" />                                                                                     
                  </list>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="LearningUnit-lookupDefinition" parent="LearningUnit-lookupDefinition-parentBean" />

  <bean id="LearningUnit-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Learning Unit Lookup" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="state" />
        <bean parent="FieldDefinition"
              p:attributeName="title"  />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="state" />
        <bean parent="FieldDefinition"
              p:attributeName="title"  />
      </list>
    </property>
  </bean>
</beans>
