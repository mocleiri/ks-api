<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Department" parent="Department-parentBean" />

  <bean id="Department-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.student.bo.Department" />
    <property name="inquiryDefinition" >
      <ref bean="Department-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Department-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="departmentCode" />
    <property name="objectLabel" value="Department" />
    <property name="attributes" >
      <list>
        <ref bean="Department-departmentCode" />
        <ref bean="Department-departmentDescription" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Department-departmentCode" parent="Department-departmentCode-parentBean" />

  <bean id="Department-departmentCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="departmentCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Department Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="4" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="6" />
    </property>
  </bean>
  <bean id="Department-departmentDescription" parent="Department-departmentDescription-parentBean" />

  <bean id="Department-departmentDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="departmentDescription" />
    <property name="label" value="Department Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="100" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="47" />
    </property>
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Department-inquiryDefinition" parent="Department-inquiryDefinition-parentBean" />

  <bean id="Department-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Department Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="departmentCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="departmentDescription" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Department-lookupDefinition" parent="Department-lookupDefinition-parentBean" />

  <bean id="Department-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Department Lookup" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="departmentCode" />
        <bean parent="FieldDefinition"
              p:attributeName="departmentDescription" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="departmentCode" />
        <bean parent="FieldDefinition"
              p:attributeName="departmentDescription" />
      </list>
    </property>
  </bean>
</beans>
