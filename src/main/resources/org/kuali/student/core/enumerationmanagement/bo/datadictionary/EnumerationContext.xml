<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="EnumerationContext" parent="EnumerationContext-parentBean"/>
    
    <bean id="EnumerationContext-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.student.core.enumerationmanagement.bo.EnumerationContext" />
        <property name="titleAttribute" value="id"/>
        <property name="objectLabel" value="Enumeration Context"/>
        <property name="lookupDefinition">
            <ref bean="EnumerationContext-lookupDefinition"/>
        </property>
        <property name="inquiryDefinition">
            <ref bean="EnumerationContext-inquiryDefinition"/>
        </property>
        <property name="collections">
          <list>
            <bean parent="CollectionDefinition" p:name="enumerationContextValueList" p:shortLabel="Enumeration Values" p:summary="Enumeration Values" p:label="Enumeration Value List" p:description="Enumeration Values in this context."/>
          </list>
        </property>
        <property name="attributes">
            <list>
                <ref bean="EnumerationContext-id"/>
                <ref bean="EnumerationContext-contextKey"/>
                <ref bean="EnumerationContext-contextValue"/>
            </list>
        </property>
    </bean>
    
    <bean id="EnumerationContext-id" parent="EnumerationContext-id-parentBean"/>
    
    <bean id="EnumerationContext-id-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Id"/>
        <property name="maxLength" value="19"/>
        <property name="validationPattern">
            <bean parent="NumericValidationPattern"/>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="30"/>
        </property>
        <property name="name" value="id"/>
        <property name="label" value="Id"/>
    </bean>
    
    <bean id="EnumerationContext-contextKey" parent="EnumerationContext-contextKey-parentBean"/>
    
    <bean id="EnumerationContext-contextKey-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Context Key"/>
        <property name="maxLength" value="255"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern">
                <property name="allowWhitespace" value="true"/>
            </bean>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="50"/>
        </property>
        <property name="name" value="contextKey"/>
        <property name="label" value="Context Key"/>
    </bean>
    
    <bean id="EnumerationContext-contextValue" parent="EnumerationContext-contextValue-parentBean"/>
    
    <bean id="EnumerationContext-contextValue-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Context Value"/>
        <property name="maxLength" value="255"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern">
                <property name="allowWhitespace" value="true"/>
            </bean>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="50"/>
        </property>
        <property name="name" value="contextValue"/>
        <property name="label" value="Context Value"/>
    </bean>
    
    
  <bean id="EnumerationContext-lookupDefinition" parent="EnumerationContext-lookupDefinition-parentBean"/>

  <bean id="EnumerationContext-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="lookupFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="id"/>
        <bean parent="FieldDefinition" p:attributeName="contextKey"/>
        <bean parent="FieldDefinition" p:attributeName="contextValue"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="id"/>
        <bean parent="FieldDefinition" p:attributeName="contextKey"/>
        <bean parent="FieldDefinition" p:attributeName="contextValue"/>
      </list>
    </property>
    <property name="title" value="Enumeration Context Lookup"/>
  </bean>
  
  <bean id="EnumerationContext-inquiryDefinition" parent="EnumerationContext-inquiryDefinition-parentBean"/>
  
  <bean id="EnumerationContext-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
        <list>
            <bean parent="InquirySectionDefinition">
                <property name="title" value="Enumeration Context"/>
                <property name="numberOfColumns" value="1"/>
                <property name="inquiryFields">
                    <list>
                        <bean parent="FieldDefinition" p:attributeName="id"/>
                        <bean parent="FieldDefinition" p:attributeName="contextKey"/>
                        <bean parent="FieldDefinition" p:attributeName="contextValue"/>
                    </list>
                </property> 
            </bean>
            <bean parent="InquirySectionDefinition">
                <property name="title" value="Enumeration Values"/>
                <property name="numberOfColumns" value="1"/>
                <property name="inquiryFields">
                    <list>
                        <bean parent="InquiryCollectionDefinition">
                            <property name="attributeName" value="enumerationContextValueList"/>
                            <property name="businessObjectClass" value="org.kuali.student.core.enumerationmanagement.bo.EnumerationContextValue"/>
                            <property name="numberOfColumns" value="1"/>
                            <property name="summaryTitle" value="Enumeration Code"/>
                            <property name="inquiryFields">
                              <list>
                                <bean parent="FieldDefinition" p:attributeName="enumerationValue.code"/>
                                <bean parent="FieldDefinition" p:attributeName="active"/>                             
                              </list>
                            </property>
                            <property name="summaryFields">
                              <list>
                                <bean parent="FieldDefinition" p:attributeName="enumerationValue.code"/>
                              </list>
                            </property>
                          </bean>
                    </list>
                </property> 
            </bean>
        </list>
    </property>
  </bean>
    
</beans>