<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
	<bean id="enForm" abstract="true" class="org.kuali.student.core.messages.entity.MessageEntity">
        <property name="locale"         value="en" />
        <property name="groupName"      value="formexample" />
	</bean>

   	<bean parent="enForm" p:id="name"               p:value="Name"/>
   	<bean parent="enForm" p:id="description"        p:value="Description"/>
   	<bean parent="enForm" p:id="date"               p:value="Date"/>
   	<bean parent="enForm" p:id="formmsg"            p:value="Form Values: "/>
   	<bean parent="enForm" p:id="submit"             p:value="Submit"/>

	<bean id="itForm" abstract="true" class="org.kuali.student.core.messages.entity.MessageEntity">
        <property name="locale"         value="it" />
        <property name="groupName"      value="formexample" />
	</bean>

   	<bean parent="itForm" p:id="name"               p:value="Nome"/>
   	<bean parent="itForm" p:id="description"        p:value="Descrizone"/>
   	<bean parent="itForm" p:id="date"               p:value="Data"/>
   	<bean parent="itForm" p:id="formmsg"            p:value="Forma Valori: "/>
   	<bean parent="itForm" p:id="submit"             p:value="Sottomettere"/>
</beans>