<?xml version="1.0" encoding="UTF-8"?>
<descriptor-repository version="1.0">

	<jdbc-connection-descriptor
		jcd-alias="dataSource"
		default-connection="false"
		jdbc-level="3.0"
		eager-release="false"
		batch-mode="false"
		useAutoCommit="0"
		ignoreAutoCommitExceptions="false">
    	<sequence-manager className="org.kuali.rice.core.ojb.ConfigurableSequenceManager">
      		<attribute attribute-name="property.prefix" attribute-value="datasource.ojb.sequenceManager" />
    	</sequence-manager>
    	<object-cache class="org.apache.ojb.broker.cache.ObjectCachePerBrokerImpl" />
    </jdbc-connection-descriptor>

	<class-descriptor class="org.kuali.rice.student.bo.Department" table="KS_DEPT_T">
	    <field-descriptor name="departmentCode" column="DEPT_CD" jdbc-type="VARCHAR" primarykey="true" index="true"/>
	    <field-descriptor name="departmentDescription" column="DEPT_DESC" jdbc-type="VARCHAR" index="true"/>

	    <field-descriptor name="objectId" column="OBJ_ID" jdbc-type="VARCHAR" index="true"/>
	    <field-descriptor name="versionNumber" column="VER_NBR" jdbc-type="BIGINT" locking="true"/>
	</class-descriptor>

	<class-descriptor class="org.kuali.rice.student.bo.LearningUnit" table="LEARN_UNIT_T">
		<field-descriptor name="id" column="LU_ID" jdbc-type="INTEGER" index="true" autoincrement="true" sequence-name="LU_ID_SEQ"/>
		<field-descriptor name="state" column="STATE" jdbc-type="VARCHAR" />
		<field-descriptor name="title" column="TITLE" jdbc-type="VARCHAR" />

	    <field-descriptor name="objectId" column="OBJ_ID" jdbc-type="VARCHAR" index="true"/>
	    <field-descriptor name="versionNumber" column="VER_NBR" jdbc-type="BIGINT" locking="true"/>
	</class-descriptor>


</descriptor-repository>