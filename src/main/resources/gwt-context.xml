<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

       
	<!-- This config file is used to load messages and inject message service into GWT app -->
	<import resource="classpath:messages-context.xml" />

	<!-- Spring to GWT servlet mapping -->
	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
				<entry
					key="/org.kuali.student.ui.kitchensink.KitchenSink/MessageService">
					<ref bean="messageServiceGwtController" />
				</entry>
			</map>
		</property>
	</bean>

	<!-- Controllers -->
	<bean id="messageServiceGwtController" class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="messagesServiceGwt" />
		<property name="servletInstance" ref="messagesServiceGwt" />
	</bean>
	
	<!-- GWT Message Servlet -->
	<bean id="messagesServiceGwt"
		class="org.kuali.student.common.ui.server.messages.MessagesService">
		<property name="serviceImpl" ref="messageServiceImpl" />
	</bean>

	<bean id="dataLoadListener" class="org.kuali.student.common.util.jpa.LoadJpaBeanFileListener">
		<property name="loadJpaBean">
			<bean class="org.kuali.student.common.util.jpa.LoadJpaBean" />
		</property>
		<property name="entityClass" value="org.kuali.student.core.messages.entity.MessageEntity" />
		<property name="persistenceUnit" value="MessageManagement"/>
		<property name="preloadMap">
			<map>
				<entry key="common" value="classpath:org\kuali\student\common\ui\gwt-messages.xml" />
			</map>
		</property>
	</bean>

</beans>