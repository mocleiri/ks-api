<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
    <bean id="courseListContext" class="org.kuali.student.lum.lu.naturallanguage.contexts.CourseListContextImpl">
        <property name="luDao" ref="luDao" />
    </bean>
    
    <bean id="contextRegistry"
        class="org.kuali.student.lum.lu.naturallanguage.ContextRegistry">
        <constructor-arg>
            <map>
                <entry key="kuali.reqCompType.courseList.none">
                    <ref local="courseListContext"/>
                </entry>
                <entry key="kuali.reqCompType.courseList.all">
                    <ref local="courseListContext"/>
                </entry>
                <entry key="kuali.reqCompType.courseList.nof">
                    <ref local="courseListContext"/>
                </entry>
                <entry key="kuali.reqCompType.courseList.1of2">
                    <ref local="courseListContext"/>
                </entry>
                <entry key="kuali.reqCompType.grdCondCourseList">
                    <bean class="org.kuali.student.lum.lu.naturallanguage.contexts.GradeConditionCourseListContextImpl">
                        <property name="luDao" ref="luDao" />
                    </bean>
                </entry>
                <entry key="kuali.reqCompType.gradecheck">
                    <bean class="org.kuali.student.lum.lu.naturallanguage.contexts.GradeCheckContextImpl">
                        <property name="luDao" ref="luDao" />
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean id="reqComponentTranslator"
        class="org.kuali.student.lum.lu.naturallanguage.translators.ReqComponentTranslator">
        <property name="luDao" ref="luDao" />
        <property name="contextRegistry" ref="contextRegistry" />
    </bean>

    <bean id="statementTranslator"
        class="org.kuali.student.lum.lu.naturallanguage.translators.StatementTranslator">
        <property name="luDao" ref="luDao" />
        <property name="reqComponentTranslator" ref="reqComponentTranslator" />
    </bean>

    <bean id="naturalLanguageTranslator"
        class="org.kuali.student.lum.lu.naturallanguage.translators.NaturalLanguageTranslatorImpl">
        <property name="reqComponentTranslator" ref="reqComponentTranslator" />
        <property name="statementTranslator" ref="statementTranslator" />
    </bean>
</beans>