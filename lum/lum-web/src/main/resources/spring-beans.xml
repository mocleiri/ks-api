<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:simple="http://cxf.apache.org/simple"
	xsi:schemaLocation="
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
		  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		  http://cxf.apache.org/simple http://cxf.apache.org/schemas/simple.xsd">

	<context:property-placeholder
		location="classpath:application.properties" />


	<bean id="scatService" class="edu.umd.ks.poc.lum.web.scat.server.impl.ScatRpcServiceImpl">
		<property name="service" ref="scatClient" />
	</bean>


	<bean id="scatClient"
		class="org.kuali.student.poc.common.ws.beans.JaxWsClientFactoryBean">
		<property name="wsdlLocation"
			value="classpath:wsdl/ScatService.wsdl" />
		<property name="serviceEndpointInterface"
			value="edu.umd.ks.poc.lum.scat.service.ScatService" />
		<property name="serviceQNameString"
			value="{http://edu.umd.ks/poc/lum/scat}ScatService" />
	 	<property name="address"
			value="${ks.servicelocation.ScatService}" />
	</bean>
	

	<bean id="luClient"
		class="org.kuali.student.poc.common.ws.beans.JaxWsClientFactoryBean">
		<property name="wsdlLocation"
			value="classpath:wsdl/LuService.wsdl" />
		<property name="serviceEndpointInterface"
			value="edu.umd.ks.poc.lum.lu.service.LuService" />
		<property name="serviceQNameString"
			value="{http://edu.umd.ks/poc/lum/lu}LuService" />
	 	<property name="address"
			value="${ks.servicelocation.LuService}" />
	</bean>

	<bean id="luService" class="edu.umd.ks.poc.lum.web.lu.server.impl.LuRpcServiceImpl">
		<property name="service" ref="luClient" />
		<property name="wfService" ref="simpleDocActionClient"/>
	</bean>

	<simple:client id="wfClient" 
		serviceClass="org.kuali.rice.kew.webservice.SimpleWorkflowUtilityService"
		serviceName="s:SimpleWorkflowUtilityService"
		xmlns:s="KS-Rice"
		address="${ks.servicelocation.WorkflowUtilityService}"
		wsdlLocation="classpath:wsdl/WorkflowUtilityService.wsdl">
		<simple:dataBinding>
			<bean class="org.apache.cxf.aegis.databinding.AegisDatabinding" /> 
		</simple:dataBinding>		
	</simple:client>

	<bean id="workflowUtilityService" class="edu.umd.ks.poc.lum.web.kew.server.impl.WorkflowUtilityRpcServiceImpl">
		<property name="wfService" ref="wfClient" />
		<property name="luService" ref="luClient" />
	</bean>

 
	<simple:client id="simpleDocActionClient" 
		serviceClass="org.kuali.rice.kew.webservice.SimpleDocumentActionsWebService"
		serviceName="s:simpleDocumentActionsService"
		xmlns:s="KS-Rice"
		address="${ks.serviceLocation.WorkflowActionService}"
		wsdlLocation="classpath:wsdl/SimpleDocumentActionsService.wsdl">
		<simple:dataBinding>
			<bean class="org.apache.cxf.aegis.databinding.AegisDatabinding" /> 
		</simple:dataBinding>		
	</simple:client>

</beans>
