<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali</artifactId>
    <version>75</version>
  </parent>
  <groupId>org.kuali.student.deploy</groupId>
  <artifactId>deploy</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kuali Student</name>
  <url>http://${kuali.site.hostname}/deploy/</url>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>shutdown-remote-tomcat</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>/home/tomcat/ks-key.pem</argument>
                <argument>root@demo.ks.kuali.org</argument>
                <argument>/usr/local/tomcat/bin/shutdown.sh</argument>
                <argument>60</argument>
                <argument>-force</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>cleanup-remote-tomcat</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>/home/tomcat/ks-key.pem</argument>
                <argument>root@demo.ks.kuali.org</argument>
                <argument>/usr/local/tomcat/bin/cleanup.sh</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>startup-remote-tomcat</id>
            <phase>initialize</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>/home/tomcat/ks-key.pem</argument>
                <argument>root@demo.ks.kuali.org</argument>
                <argument>/usr/local/tomcat/bin/startup.sh</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>