<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali</artifactId>
    <version>75</version>
  </parent>
  <groupId>org.kuali.student.deploy</groupId>
  <artifactId>deploy</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kuali Student</name>
  <url>http://${kuali.site.hostname}/deploy/</url>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <ks.deploy.auth>/home/tomcat/ks-key.pem</ks.deploy.auth>
    <ks.deploy.remote.war.file>${ks.deploy.remote.tomcat.home}/webapps/ROOT.war</ks.deploy.remote.war.file>
    <ks.deploy.remote.war.dir>${ks.deploy.remote.tomcat.home}/webapps/ROOT</ks.deploy.remote.war.dir>
    <ks.hudson.base.dir>/opt/hudson/home/jobs/</ks.hudson.base.dir>
    <ks.deploy.local.war.file>${ks.hudson.base.dir}/${ks.hudson.jop}/workspace/${ks.hudson.svn.suffix}/ks-web/ks-embedded/target/ks-embedded-${ks.deploy.version}.war</ks.deploy.local.war.file>
  </properties>
  <profiles>
    <profile>
      <id>1.1</id>
      <properties>
        <ks.hudson.job>1.1-full-build</ks.hudson.job>
        <ks.hudson.svn.suffix>ks-1.1</ks.hudson.svn.suffix>
        <ks.deploy.version>1.1-SNAPSHOT</ks.deploy.version>
      </properties>
    </profile>
    <profile>
      <id>demo</id>
      <properties>
        <ks.deploy.remote.user>root</ks.deploy.remote.user>
        <ks.deploy.remote.hostname>demo.ks.kuali.org</ks.deploy.remote.hostname>
        <ks.deploy.remote.tomcat.home>/usr/local/tomcat</ks.deploy.remote.tomcat.home>
        <ks.deploy.remote.shutdown>${ks.deploy.remote.tomcat.home}/bin/shutdown.sh</ks.deploy.remote.shutdown>
        <ks.deploy.remote.shutdown.timeout>60</ks.deploy.remote.shutdown.timeout>
        <ks.deploy.remote.shutdown.force>-force</ks.deploy.remote.shutdown.force>
        <ks.deploy.remote.cleanup>${ks.deploy.remote.tomcat.home}/bin/cleanup.sh</ks.deploy.remote.cleanup>
        <ks.deploy.remote.startup>${ks.deploy.remote.tomcat.home}/bin/startup.sh</ks.deploy.remote.startup>
      </properties>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>stop-remote-tomcat</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>${ks.deploy.remote.shutdown}</argument>
                <argument>${ks.deploy.remote.shutdown.timeout}</argument>
                <argument>${ks.deploy.remote.shutdown.force}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>remove-remote-war-dir</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>rm</argument>
                <argument>-rf</argument>
                <argument>${ks.deploy.remote.war.dir}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>remove-remote-war-file</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>rm</argument>
                <argument>-f</argument>
                <argument>${ks.deploy.remote.war.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>copy-local-war-file-to-remote</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/scp</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.local.war.file}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}:${ks.deploy.remote.war.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>cleanup-remote-tomcat</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>${ks.deploy.remote.cleanup}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>start-remote-tomcat</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>${ks.deploy.remote.startup}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>