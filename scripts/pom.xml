<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali</artifactId>
    <version>75</version>
  </parent>
  <groupId>org.kuali.student.deploy</groupId>
  <artifactId>deploy</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kuali Student</name>
  <url>http://${kuali.site.hostname}/student/deploy/</url>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <ks.deploy.auth>/home/tomcat/ks-key.pem</ks.deploy.auth>
    <ks.deploy.remote.war.file>${ks.deploy.remote.tomcat.home}/webapps/ROOT.war</ks.deploy.remote.war.file>
    <ks.deploy.remote.war.dir>${ks.deploy.remote.tomcat.home}/webapps/ROOT</ks.deploy.remote.war.dir>
    <ks.hudson.base.dir>/opt/hudson/home/jobs/</ks.hudson.base.dir>
    <ks.hudson.working.copy>${ks.hudson.base.dir}/${ks.hudson.job}/workspace/${ks.hudson.svn.suffix}/</ks.hudson.working.copy>
    <ks.hudson.ks-embedded.dir>${ks.hudson.working.copy}/ks-web/ks-embedded</ks.hudson.ks-embedded.dir>
    <ks.hudson.ks-embedded-db.dir>${ks.hudson.working.copy}/ks-cfg-dbs/ks-embedded-db</ks.hudson.ks-embedded-db.dir>
    <ks.deploy.local.war.file>${ks.hudson.ks-embedded.dir}/target/ks-embedded-${ks.deploy.version}.war</ks.deploy.local.war.file>
    <ks.deploy.local.config.file>${project.basedir}/ks-embedded-config.xml</ks.deploy.local.config.file>
    <ks.deploy.embedded.config><![CDATA[
      <config>
        <param name="appserver.url">http://${ks.deploy.remote.hostname}</param>
        <param name="app.context.name"/>
        <param name="app.code"/>
        <param name="application.url">${appserver.url}</param>
        <param name="externalizable.help.url">/kr/static/help/</param>
        <param name="externalizable.images.url">/kr/static/images/</param>
        <param name="kr.externalizable.images.url">${externalizable.images.url}</param>
        <param name="travel.externalizable.images.url">${externalizable.images.url}</param>
        <param name="datasource.url">${ks.impex.url}</param>
        <param name="datasource.username">${ks.impex.username}</param>
        <param name="datasource.password">${ks.impex.password}</param>
        <param name="datasource.pool.maxSize">20</param>
        <param name="ks.core.datasource.pool.maxSize">20</param>
        <param name="ks.lum.datasource.pool.maxSize">20</param>
        <param name="encryption.key">i44AED6CACC70B4CE47B1A0488ECB1288</param>
      </config>]]>
    </ks.deploy.embedded.config>
    <ks.deploy.remote.shutdown.timeout>60</ks.deploy.remote.shutdown.timeout>
    <ks.deploy.remote.shutdown.force>-force</ks.deploy.remote.shutdown.force>
  </properties>
  <profiles>
    <profile>
      <id>1.1</id>
      <properties>
        <ks.hudson.job>1.1-full-build</ks.hudson.job>
        <ks.hudson.svn.suffix>ks-1.1</ks.hudson.svn.suffix>
        <ks.deploy.version>1.1-SNAPSHOT</ks.deploy.version>
      </properties>
    </profile>
    <profile>
      <id>1.2</id>
      <properties>
        <ks.hudson.job>1.2-full-build</ks.hudson.job>
        <ks.hudson.svn.suffix>trunk</ks.hudson.svn.suffix>
        <ks.deploy.version>1.2-SNAPSHOT</ks.deploy.version>
      </properties>
    </profile>
    <profile>
      <id>demo</id>
      <properties>
        <ks.deploy.remote.config.file>/usr/local/tomcat/kuali/main/dev/ks-embedded-config.xml</ks.deploy.remote.config.file>
        <ks.deploy.remote.user>root</ks.deploy.remote.user>
        <ks.deploy.remote.hostname>demo.ks.kuali.org</ks.deploy.remote.hostname>
        <ks.deploy.remote.tomcat.home>/usr/local/tomcat</ks.deploy.remote.tomcat.home>
        <ks.deploy.remote.shutdown>${ks.deploy.remote.tomcat.home}/bin/shutdown.sh</ks.deploy.remote.shutdown>
        <ks.deploy.remote.cleanup>${ks.deploy.remote.tomcat.home}/bin/cleanup.sh</ks.deploy.remote.cleanup>
        <ks.impex.url>jdbc:oracle:thin:@demo.ks.kuali.org:1521:KS</ks.impex.url>
        <ks.impex.username>KSDEMO</ks.impex.username>
        <ks.impex.dba.password>gw570229</ks.impex.dba.password>
        <ks.impex.password>KSEDMO</ks.impex.password>
        <ks.deploy.remote.startup>${ks.deploy.remote.tomcat.home}/bin/startup.sh</ks.deploy.remote.startup>
      </properties>
    </profile>
    <profile>
      <id>dev</id>
      <properties>
        <ks.deploy.remote.config.file>/usr/local/tomcat/kuali/main/dev/ks-embedded-config.xml</ks.deploy.remote.config.file>
        <ks.deploy.remote.user>root</ks.deploy.remote.user>
        <ks.deploy.remote.hostname>deploy.ks.kuali.org</ks.deploy.remote.hostname>

        <ks.deploy.remote.tomcat.home>/usr/local/tomcat_deploy</ks.deploy.remote.tomcat.home>
        <ks.deploy.remote.shutdown>su - deploy -c ${ks.deploy.remote.tomcat.home}/bin/shutdown.sh</ks.deploy.remote.shutdown>
        <ks.deploy.remote.cleanup>${ks.deploy.remote.tomcat.home}/bin/cleanup.sh</ks.deploy.remote.cleanup>
        <ks.deploy.remote.startup>${ks.deploy.remote.tomcat.home}/bin/startup.sh</ks.deploy.remote.startup>

        <ks.impex.url>jdbc:oracle:thin:@deploy.ks.kuali.org:1521:KS</ks.impex.url>
        <ks.impex.username>KSDEV</ks.impex.username>
        <ks.impex.password>KSDEV</ks.impex.password>
        <ks.impex.dba.password>gw570229</ks.impex.dba.password>
      </properties>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>generate-ks-embedded-config</id>
            <phase>initialize</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo file="${ks.deploy.local.config.file}">${ks.deploy.embedded.config}</echo>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>stop-remote-tomcat</id>
            <phase>clean</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <exec executable="/usr/bin/ssh">
                  <!-- <arg line="-i ${ks.deploy.auth} ${ks.deploy.remote.user}@${ks.deploy.remote.hostname} ${ks.deploy.remote.shutdown} ${ks.deploy.remote.shutdown.timeout} ${ks.deploy.remote.shutdown.force}"/> -->
                  <arg line='-i /home/tomcat/ks-key.pem root@deploy.ks.kuali.org su - deploy -c "/usr/local/tomcat_deploy/bin/shutdown.sh 60 -force"'/>
                </exec>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>stop-remote-tomcat</id>
            <phase>none</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>${ks.deploy.remote.shutdown}</argument>
                <argument>${ks.deploy.remote.shutdown.timeout}</argument>
                <argument>${ks.deploy.remote.shutdown.force}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>remove-remote-war-dir</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>rm</argument>
                <argument>-rf</argument>
                <argument>${ks.deploy.remote.war.dir}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>remove-remote-war-file</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>rm</argument>
                <argument>-f</argument>
                <argument>${ks.deploy.remote.war.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>copy-local-config-file-to-remote</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/scp</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.local.config.file}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}:${ks.deploy.remote.config.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>copy-local-war-file-to-remote</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/scp</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.local.war.file}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}:${ks.deploy.remote.war.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>reset-remote-database</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <workingDirectory>${ks.hudson.ks-embedded-db.dir}</workingDirectory>
              <executable>/opt/java/apache-maven-3.0/bin/mvn</executable>
              <arguments>
                <argument>clean</argument>
                <argument>install</argument>
                <argument>-Pks-db,oracle</argument>
                <argument>-Dks.impex.username=${ks.impex.username}</argument>
                <argument>-Dks.impex.password=${ks.impex.password}</argument>
                <argument>-Dks.impex.dba.password=${ks.impex.dba.password}</argument>
                <argument>-Dks.impex.url=${ks.impex.url}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>cleanup-remote-tomcat</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>${ks.deploy.remote.cleanup.1}</argument>
                <argument>${ks.deploy.remote.cleanup.2}</argument>
                <argument>${ks.deploy.remote.cleanup.3}</argument>
                <argument>${ks.deploy.remote.cleanup.4}</argument>
                <argument>${ks.deploy.remote.cleanup}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>start-remote-tomcat</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/usr/bin/ssh</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>${ks.deploy.remote.startup.1}</argument>
                <argument>${ks.deploy.remote.startup.2}</argument>
                <argument>${ks.deploy.remote.startup.3}</argument>
                <argument>${ks.deploy.remote.startup.4}</argument>
                <argument>${ks.deploy.remote.startup}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>