  <properties>
    <ks.deploy.ssh.path>/usr/bin/ssh</ks.deploy.ssh.path>
    <ks.deploy.scp.path>/usr/bin/scp</ks.deploy.scp.path>
    <ks.deploy.mvn.path>/opt/java/apache-maven-3.0/bin/mvn</ks.deploy.mvn.path>
    <ks.deploy.auth>/home/tomcat/ks-key.pem</ks.deploy.auth>

    <ks.deploy.remote.user>root</ks.deploy.remote.user>
    <ks.deploy.remote.war.file>${ks.deploy.remote.tomcat.home}/webapps/ROOT.war</ks.deploy.remote.war.file>
    <ks.deploy.remote.war.dir>${ks.deploy.remote.tomcat.home}/webapps/ROOT</ks.deploy.remote.war.dir>
    <ks.deploy.remote.tomcat.cleanup>${ks.deploy.remote.tomcat.home}/bin/cleanup.sh</ks.deploy.remote.tomcat.cleanup>
    <ks.deploy.remote.tomcat.startup>${ks.deploy.remote.tomcat.home}/bin/startup.sh</ks.deploy.remote.tomcat.startup>
    <ks.deploy.remote.tomcat.shutdown>${ks.deploy.remote.tomcat.home}/bin/forced-shutdown.sh</ks.deploy.remote.tomcat.shutdown>

    <ks.hudson.base.dir>/opt/hudson/home/jobs</ks.hudson.base.dir>
    <ks.hudson.working.dir>${ks.hudson.base.dir}/${ks.hudson.job}/workspace/${ks.hudson.svn.suffix}</ks.hudson.working.dir>
    <ks.hudson.ks-embedded.dir>${ks.hudson.working.dir}/ks-web/ks-embedded</ks.hudson.ks-embedded.dir>
    <ks.hudson.ks-embedded-db.dir>${ks.hudson.working.dir}/ks-cfg-dbs/ks-embedded-db</ks.hudson.ks-embedded-db.dir>

    <ks.impex.dba.password>gw570229</ks.impex.dba.password>

    <ks.deploy.local.war.file>${ks.hudson.ks-embedded.dir}/target/ks-embedded-${ks.deploy.version}.war</ks.deploy.local.war.file>
    <ks.deploy.local.config.file>${project.basedir}/ks-embedded-config.xml</ks.deploy.local.config.file>
    <ks.deploy.embedded.config><![CDATA[
      <config>
        <param name="appserver.url">http://${ks.deploy.remote.public.url}</param>
        <param name="app.context.name"/>
        <param name="app.code"/>
        <param name="application.url">${appserver.url}</param>
        <param name="externalizable.help.url">/kr/static/help/</param>
        <param name="externalizable.images.url">/kr/static/images/</param>
        <param name="kr.externalizable.images.url">${externalizable.images.url}</param>
        <param name="travel.externalizable.images.url">${externalizable.images.url}</param>
        <param name="datasource.url">${ks.impex.url}</param>
        <param name="datasource.username">${ks.impex.username}</param>
        <param name="datasource.password">${ks.impex.password}</param>
        <param name="datasource.pool.maxSize">20</param>
        <param name="ks.core.datasource.pool.maxSize">20</param>
        <param name="ks.lum.datasource.pool.maxSize">20</param>
        <param name="encryption.key">i44AED6CACC70B4CE47B1A0488ECB1288</param>
      </config>]]>
    </ks.deploy.embedded.config>

    <ks.deploy.shutdown.remote.tomcat.phase>pre-integration-test</ks.deploy.shutdown.remote.tomcat.phase>
    <ks.deploy.remove.old.war.dir.phase>pre-integration-test</ks.deploy.remove.old.war.dir.phase>
    <ks.deploy.generate.config.file.phase>pre-integration-test</ks.deploy.generate.config.file.phase>
    <ks.deploy.install.new.war.file.phase>integration-test</ks.deploy.install.new.war.file.phase>
    <ks.deploy.copy.config.file.phase>integration-test</ks.deploy.copy.config.file.phase>
    <ks.deploy.reset.remote.db.phase>integration-test</ks.deploy.reset.remote.db.phase>
    <ks.deploy.cleanup.remote.tomcat.phase>post-integration-test</ks.deploy.cleanup.remote.tomcat.phase>
    <ks.deploy.start.remote.tomcat.phase>post-integration-test</ks.deploy.start.remote.tomcat.phase>

  </properties>
  <profiles>
    <profile>
      <id>1.1</id>
      <properties>
        <ks.hudson.job>1.1-full-build</ks.hudson.job>
        <ks.hudson.svn.suffix>ks-1.1</ks.hudson.svn.suffix>
        <ks.deploy.version>1.1-SNAPSHOT</ks.deploy.version>
      </properties>
    </profile>
    <profile>
      <id>1.2</id>
      <properties>
        <ks.hudson.job>1.2-full-build</ks.hudson.job>
        <ks.hudson.svn.suffix>trunk</ks.hudson.svn.suffix>
        <ks.deploy.version>1.2-SNAPSHOT</ks.deploy.version>
      </properties>
    </profile>
    <profile>
      <id>demo</id>
      <properties>
        <ks.deploy.remote.hostname>demo.ks.kuali.org</ks.deploy.remote.hostname>
        <ks.deploy.remote.public.url>${ks.deploy.remote.hostname}</ks.deploy.remote.public.url>
        <ks.deploy.remote.tomcat.home>/usr/local/tomcat</ks.deploy.remote.tomcat.home>
        <ks.deploy.remote.config.file>${ks.deploy.remote.tomcat.home}/kuali/main/dev/ks-embedded-config.xml</ks.deploy.remote.config.file>
        <ks.impex.url>jdbc:oracle:thin:@demo.ks.kuali.org:1521:KS</ks.impex.url>
        <ks.impex.username>KSDEMO</ks.impex.username>
        <ks.impex.password>KSEDMO</ks.impex.password>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>stop-remote-tomcat</id>
                <phase>${ks.deploy.shutdown.remote.tomcat.phase}</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${ks.deploy.ssh.path}</executable>
                  <arguments>
                    <argument>-i</argument>
                    <argument>${ks.deploy.auth}</argument>
                    <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                    <argument>${ks.deploy.remote.tomcat.shutdown}</argument>
                  </arguments>
                </configuration>
              </execution>
              <execution>
                <id>copy-local-config-file-to-remote</id>
                <phase>${ks.deploy.copy.config.file.phase}</phase>
              </execution>
              <execution>
                <id>cleanup-remote-tomcat</id>
                <phase>${ks.deploy.cleanup.remote.tomcat.phase}</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${ks.deploy.ssh.path}</executable>
                  <arguments>
                    <argument>-i</argument>
                    <argument>${ks.deploy.auth}</argument>
                    <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                    <argument>${ks.deploy.remote.tomcat.cleanup}</argument>
                  </arguments>
                </configuration>
              </execution>
              <execution>
                <id>start-remote-tomcat</id>
                <phase>${ks.deploy.start.remote.tomcat.phase}</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${ks.deploy.ssh.path}</executable>
                  <arguments>
                    <argument>-i</argument>
                    <argument>${ks.deploy.auth}</argument>
                    <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                    <argument>${ks.deploy.remote.tomcat.startup}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>dev</id>
      <properties>
        <ks.deploy.remote.tomcat.user>deploy</ks.deploy.remote.tomcat.user>
        <ks.deploy.remote.tomcat.home>/usr/local/tomcat_${ks.deploy.remote.tomcat.user}</ks.deploy.remote.tomcat.home>
        <ks.deploy.remote.config.file>${ks.deploy.remote.tomcat.home}/kuali/main/dev/ks-embedded-config.xml</ks.deploy.remote.config.file>
        <ks.deploy.remote.hostname>deploy.ks.kuali.org</ks.deploy.remote.hostname>
        <ks.deploy.remote.public.url>dev.ks.kuali.org</ks.deploy.remote.public.url>
        <ks.impex.url>jdbc:oracle:thin:@deploy.ks.kuali.org:1521:KS</ks.impex.url>
        <ks.impex.username>KSDEV</ks.impex.username>
        <ks.impex.password>KSDEV</ks.impex.password>
      </properties>
    </profile>
    <profile>
      <id>staging</id>
      <properties>
        <ks.deploy.remote.hostname>deploy.ks.kuali.org</ks.deploy.remote.hostname>
        <ks.deploy.remote.public.url>staging.ks.kuali.org</ks.deploy.remote.public.url>
        <ks.deploy.remote.tomcat.user>staging</ks.deploy.remote.tomcat.user>
        <ks.deploy.remote.tomcat.home>/usr/local/tomcat_${ks.deploy.remote.tomcat.user}</ks.deploy.remote.tomcat.home>
        <ks.deploy.remote.config.file>${ks.deploy.remote.tomcat.home}/kuali/main/dev/ks-embedded-config.xml</ks.deploy.remote.config.file>
        <ks.impex.url>jdbc:oracle:thin:@deploy.ks.kuali.org:1521:KS</ks.impex.url>
        <ks.impex.username>KSSTAGING</ks.impex.username>
        <ks.impex.password>KSSTAGING</ks.impex.password>
      </properties>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>copy-local-config-file-to-remote</id>
            <phase>${ks.deploy.copy.config.file.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.scp.path}</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.local.config.file}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}:${ks.deploy.remote.config.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>stop-remote-tomcat</id>
            <phase>${ks.deploy.shutdown.remote.tomcat.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.ssh.path}</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>su</argument>
                <argument>--login</argument>
                <argument>${ks.deploy.remote.tomcat.user}</argument>
                <argument>--command</argument>
                <argument>${ks.deploy.remote.tomcat.shutdown}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>remove-remote-war-dir</id>
            <phase>${ks.deploy.remove.old.war.dir.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.ssh.path}</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>rm</argument>
                <argument>-rf</argument>
                <argument>${ks.deploy.remote.war.dir}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>copy-local-war-file-to-remote</id>
            <phase>${ks.deploy.install.new.war.file.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.scp.path}</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.local.war.file}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}:${ks.deploy.remote.war.file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>reset-remote-database</id>
            <phase>${ks.deploy.reset.remote.db.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.mvn.path}</executable>
              <workingDirectory>${ks.hudson.ks-embedded-db.dir}</workingDirectory>
              <arguments>
                <argument>clean</argument>
                <argument>install</argument>
                <argument>-Pks-db,oracle</argument>
                <argument>-Dks.impex.username=${ks.impex.username}</argument>
                <argument>-Dks.impex.password=${ks.impex.password}</argument>
                <argument>-Dks.impex.dba.password=${ks.impex.dba.password}</argument>
                <argument>-Dks.impex.url=${ks.impex.url}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>cleanup-remote-tomcat</id>
            <phase>${ks.deploy.cleanup.remote.tomcat.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.ssh.path}</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>su</argument>
                <argument>--login</argument>
                <argument>${ks.deploy.remote.tomcat.user}</argument>
                <argument>--command</argument>
                <argument>${ks.deploy.remote.tomcat.cleanup}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>start-remote-tomcat</id>
            <phase>${ks.deploy.start.remote.tomcat.phase}</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${ks.deploy.ssh.path}</executable>
              <arguments>
                <argument>-i</argument>
                <argument>${ks.deploy.auth}</argument>
                <argument>${ks.deploy.remote.user}@${ks.deploy.remote.hostname}</argument>
                <argument>su</argument>
                <argument>--login</argument>
                <argument>${ks.deploy.remote.tomcat.user}</argument>
                <argument>--command</argument>
                <argument>${ks.deploy.remote.tomcat.startup}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>generate-local-config-file</id>
            <phase>${ks.deploy.generate.config.file.phase}</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>Generating ${ks.deploy.local.config.file}</echo>
                <echo file="${ks.deploy.local.config.file}">${ks.deploy.embedded.config}</echo>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>