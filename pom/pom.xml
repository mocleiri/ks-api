    <connection>scm:svn:https://test.kuali.org/svn/student/deploymentlab/tags/kuali-70</connection>
    <developerConnection>scm:svn:https://test.kuali.org/svn/student/deploymentlab/tags/kuali-70</developerConnection>
    <url>https://test.kuali.org/svn/student/deploymentlab/tags/kuali-70</url>
  </scm>
