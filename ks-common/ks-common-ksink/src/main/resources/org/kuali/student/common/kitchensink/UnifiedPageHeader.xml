<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KS-KitchenSink-UnifiedPageHeader-View-Base" parent="KS-Uif-FormView">
        <!--<property name="headerText" value="Toolbar Example"/>-->
        <property name="headerText" value="Unified Header - View Title"/>

        <!--<property name="header.headerText" value="The Page Title"/>-->
        <!--<property name="header.areaTitleText" value="The View Title"/>-->

        <property name="header.rightGroup">
            <bean parent="Uif-VerticalBoxGroup" p:cssClasses="ks-unified-header-rightGroup-container">
                <property name="items">
                    <list>
                        <bean id="ksUnifiedHeaderRightGroupActionId" parent="Uif-HorizontalBoxGroup" p:cssClasses="ks-unified-header-rightGroup-action" p:onDocumentReadyScript="addBootstrapImageToLink('ksUnifiedHeaderRightGroupActionId');">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-ActionLink" p:actionScript="alert('You clicked the Copy link');" p:actionLabel="Copy" p:actionImagePlacement="LEFT">
                                        <property name="actionImage">
                                            <bean parent="Uif-Image" p:altText="Copy" p:title="Copy" p:source="icon-plus-sign"/>
                                        </property>
                                    </bean>
                                    <bean parent="Uif-ActionLink" p:actionScript="alert('You clicked the Comment link');" p:actionLabel="Comment" p:actionImagePlacement="LEFT">
                                        <property name="actionImage">
                                            <bean parent="Uif-Image" p:altText="Comment" p:title="Comment" p:source="icon-comment"/>
                                        </property>
                                    </bean>
                                    <bean parent="Uif-ActionLink" p:actionScript="alert('You clicked the Print link');" p:actionLabel="Print" p:actionImagePlacement="LEFT">
                                        <property name="actionImage">
                                            <bean parent="Uif-Image" p:altText="Print" p:title="Print" p:source="icon-print"/>
                                        </property>
                                    </bean>
                                    <bean parent="Uif-ActionLink" p:actionScript="alert('You clicked the Delete link');" p:actionLabel="Delete" p:actionImagePlacement="LEFT">
                                        <property name="actionImage">
                                            <bean parent="Uif-Image" p:altText="Delete" p:title="Delete" p:source="icon-remove"/>
                                        </property>
                                    </bean>
                                    <bean parent="Uif-ActionLink" p:actionScript="alert('You clicked the Edit link');" p:actionLabel="Edit" p:actionImagePlacement="LEFT">
                                        <property name="actionImage">
                                            <bean parent="Uif-Image" p:altText="Edit" p:title="Edit" p:source="icon-edit"/>
                                        </property>
                                    </bean>
                                    <bean parent="Uif-ActionLink" p:actionScript="alert('You clicked the Manage link');" p:actionLabel="Manage" p:actionImagePlacement="LEFT">
                                        <property name="actionImage">
                                            <bean parent="Uif-Image" p:altText="Manage" p:title="Manage" p:source="icon-wrench"/>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                        <bean parent="Uif-HorizontalBoxGroup" p:cssClasses="ks-unified-header-rightGroup-status">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message" p:messageText="Last modified by USER on Friday, May 17 at 05:15a.m."/>
                                    <bean parent="KS-Lozenge-Orange-Uif-Message" p:messageText="Detail Status"/>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <bean id="Demo-StandardLayout-CollectionSectionsPage" parent="Uif-Page" p:headerText="Page Title">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelTop"  id="KS-KitchenSink-TextField-Example5">
                                <property name="propertyName" value="stringField1"/>
                                <property name="label" value="Field Label"/>
                                <!-- the following two properties are the default for Uif-InputField-LabelTop:
                                    <property name="labelPlacement" value="TOP"/>
                                    <property name="fieldLabel.renderColon" value="false"/>
                                -->
                                <property name="instructionalText" value="Instructional text can go here"/>
                                <property name="constraintText" value="Constraint text can go here"/>
                                <property name="helpSummary" value="Additional help or information for this field can go here."/>
                                <!--<property name="uppercaseValue" value="true"/>-->
                                <property name="control">
                                    <bean parent="Uif-TextControl">
                                        <property name="size" value="25"/>
                                        <property name="maxLength" value="10"/>
                                        <property name="watermarkText" value="watermark can go here"/>
                                        <!--<property name="textExpand" value="true"/>-->
                                    </bean>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
