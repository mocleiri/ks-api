                <property name="templateOptions">
                    <map merge="true">
                        <entry key="aaSorting" value="[[1,'asc']]"/>
                        <entry key="bPaginate" value="true"/>
                        <entry key="sPaginationType" value="two_button"/>
                        <entry key="bFilter" value="false"/>
                        <!-- bInfo removes "Page x of y" text: -->
                        <entry key="bInfo" value="false"/>
                        <!-- bLengthChange removes "Show [10 v] entries" drop-down: -->
                        <entry key="bLengthChange" value="false"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="KS-KitchenSink-CollectionPaginationOptions-FullNumberPagingDefault" parent="KS-KitchenSink-Collection-Base">
