    <!--View for tables-->

    <bean id="KS-KitchenSink-CollectionPaginationOptions-View" parent="KS-KitchenSink-CollectionPaginationOptions-View-Base">
        <property name="headerText" value="Collection Pagination"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:headerText="Pagination Options">
                    <property name="items">
                        <list>
                            <bean parent="KS-KitchenSink-Page-Summary">
                                <property name="messageText">
                                    <value>
                                        Options for paginating data in Collections
                                    </value>
                                </property>
                            </bean>
                            <ref bean="KS-KitchenSink-CollectionPaginationOptions-Content"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--Container for tables-->

    <bean id="KS-KitchenSink-CollectionPaginationOptions-Content" parent="KS-KitchenSink-VerticalBoxSection-Contents">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionPaginationOptions-NoPaging-Section">
                    <property name="items">
                        <list merge="true">
                            <bean parent="KS-KitchenSink-MessageField"
                                  p:messageText="No paging."/>
                        </list>
                    </property>
                </bean>
                <bean parent="KS-KitchenSink-CollectionPaginationOptions-TwoButtonPagingDefault-Section">
                    <property name="items">
                        <list merge="true">
                            <bean parent="KS-KitchenSink-MessageField"
                                  p:messageText="Default KRAD Two Button paging."/>
                        </list>
                    </property>
                </bean>
                <bean parent="KS-KitchenSink-CollectionPaginationOptions-FullNumberPagingDefault-Section">
                    <property name="items">
                        <list merge="true">
                            <bean parent="KS-KitchenSink-MessageField"
                                  p:messageText="Default KRAD Full Number paging."/>
                        </list>
                    </property>
                </bean>
                <bean parent="KS-KitchenSink-CollectionPaginationOptions-TwoButtonPaging-Section">
                    <property name="items">
                        <list merge="true">
