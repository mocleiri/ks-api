<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.umd.ks.poc</groupId>
	<artifactId>lum-overlay</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<parent>
		<groupId>edu.umd.ks.poc</groupId>
		<artifactId>lum</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<properties>
		<cxf.overlay.version>2.1.3</cxf.overlay.version>
		<spring.version>2.5.4</spring.version>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<!-- Using 2.0.1 version because webXml doesn't work with latest one  -->
					<version>2.0.1</version>
					<configuration>
						<dependentWarExcludes>
							WEB-INF/lib/**, WEB-INF/web.xml
						</dependentWarExcludes>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<dependencies>
					<dependency>
						<groupId>taglibs</groupId>
						<artifactId>standard</artifactId>
						<version>1.1.2</version>
					</dependency>
					<dependency>
						<groupId>javax.servlet</groupId>
						<artifactId>jstl</artifactId>
						<version>1.1.2</version>
					</dependency>
				</dependencies>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.7</version>
				<configuration>
					<webAppConfig>
						<contextPath>/lum-umd</contextPath>
					</webAppConfig>

					<stopPort>9966</stopPort>
					<stopKey>foo</stopKey>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<version>1.0-alpha-1</version>
				<configuration>
					<port>8080</port>
					<path>/lum-umd</path>
					<warDirectory>
						${project.build.directory}/${project.build.finalName}
					</warDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>gwt</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
		            <plugin>
		                <groupId>org.apache.maven.plugins</groupId>
		                <artifactId>maven-compiler-plugin</artifactId>
		                <configuration>
		                    <source>1.6</source>
		                    <target>1.6</target>
		                    <excludes>
		                        <exclude>**/KSBClient*.java</exclude>
		                    </excludes>
		                </configuration>
		             </plugin>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<webXml>src/main/config/gwt-web.xml</webXml>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<!-- GWT -->
				<dependency>
					<groupId>edu.umd.ks.poc</groupId>
					<artifactId>lum-web</artifactId>
					<version>0.0.1-SNAPSHOT</version>
					<type>war</type>
				</dependency>

				<dependency>
					<groupId>edu.umd.ks.poc</groupId>
					<artifactId>lum-web</artifactId>
					<version>0.0.1-SNAPSHOT</version>
					<type>pom</type>
				</dependency>

			</dependencies>
		</profile>

		<profile>
			<id>rice</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<webXml>
								src/main/config/rice-web.xml
							</webXml>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<!-- Rice -->
				<dependency>
					<groupId>org.kuali.rice</groupId>
					<artifactId>rice-web</artifactId>
					<version>0.9.4-SNAPSHOT</version>
					<type>war</type>
				</dependency>

				<dependency>
					<groupId>org.kuali.rice</groupId>
					<artifactId>rice-web</artifactId>
					<version>0.9.4-SNAPSHOT</version>
					<type>pom</type>
				</dependency>

			</dependencies>
		</profile>

		<profile>
			<id>gwt-rice</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<webXml>src/main/config/gwt-rice-web.xml</webXml>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<!-- GWT -->
				<dependency>
					<groupId>edu.umd.ks.poc</groupId>
					<artifactId>lum-web</artifactId>
					<version>0.0.1-SNAPSHOT</version>
					<type>war</type>
				</dependency>

				<dependency>
					<groupId>edu.umd.ks.poc</groupId>
					<artifactId>lum-web</artifactId>
					<version>0.0.1-SNAPSHOT</version>
					<type>pom</type>
				</dependency>

				<!-- Rice -->
				<dependency>
					<groupId>org.kuali.rice</groupId>
					<artifactId>rice-web</artifactId>
					<version>0.9.4-SNAPSHOT</version>
					<type>war</type>
				</dependency>

				<dependency>
					<groupId>org.kuali.rice</groupId>
					<artifactId>rice-web</artifactId>
					<version>0.9.4-SNAPSHOT</version>
					<type>pom</type>
				</dependency>

			</dependencies>
		</profile>

	</profiles>

	<dependencies>
		<!-- Lum Services: Adding as dependency rather than doing overlay b/c i had depdencncy issues -->
		<dependency>
			<groupId>edu.umd.ks.poc</groupId>
			<artifactId>lum-impl</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>org.kuali.student.poc.common</groupId>
					<artifactId>common-cxf</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate</artifactId>
				<version>3.2.6.ga</version>
				<exclusions>
					<exclusion>
						<groupId>asm</groupId>
						<artifactId>asm-attrs</artifactId>
					</exclusion>
					<exclusion>
						<groupId>cglib</groupId>
						<artifactId>cglib</artifactId>
					</exclusion>
				</exclusions>
			</dependency>

			<dependency>
				<groupId>asm</groupId>
				<artifactId>asm</artifactId>
				<version>1.5.3</version>
			</dependency>

			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-web</artifactId>
				<version>2.5.4</version>
			</dependency>

			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-webmvc</artifactId>
				<version>2.5.4</version>
			</dependency>

			<!--  Spring jpa & dao modules, used by rice, has been replaced with spring-orm 2.5.4-->
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-jpa</artifactId>
				<version>2.0.4</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-dao</artifactId>
				<version>2.0.4</version>
				<scope>provided</scope>
			</dependency>


			<!-- Include both oracle and derby -->
			<dependency>
				<groupId>org.apache.derby</groupId>
				<artifactId>derby</artifactId>
				<version>10.3.2.1</version>
				<scope>runtime</scope>
			</dependency>

			<dependency>
				<groupId>com.oracle</groupId>
				<artifactId>ojdbc14</artifactId>
				<version>10.2.0.3.0</version>
			</dependency>

			<!-- Using ks-services pom was causing cxf dependency issues, so adding them here -->
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-ws-security</artifactId>
				<version>${cxf.overlay.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-bindings-soap</artifactId>
				<version>${cxf.overlay.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-frontend-jaxws</artifactId>
				<version>${cxf.overlay.version}</version>
			</dependency>

			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-bindings-soap</artifactId>
				<version>${cxf.overlay.version}</version>
			</dependency>

			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-transports-http</artifactId>
				<version>${cxf.overlay.version}</version>
			</dependency>

		</dependencies>

	</dependencyManagement>




</project>