<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties" ref="configProperties" />
	</bean>

	<bean id="config" class="org.kuali.rice.core.config.spring.ConfigFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath:lum-rice-config.xml</value>
			</list>
		</property>
	</bean>
	
	<bean id="configProperties" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="config" />
		<property name="targetMethod" value="getProperties" />
	</bean>
	
	<import resource="classpath:org/kuali/rice/config/RiceJTASpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/config/RiceDataSourceSpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/config/RiceSpringBeans.xml"/>
		 
	<import resource="classpath:lum-context.xml"/>	
	 
	<bean id="LumWebService"
		class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition"
		abstract="true">
		<property name="servicePath" value="lum-services"/>
		<property name="priority" value="3" />
		<property name="retryAttempts" value="0" />
		<property name="busSecurity" value="false" />
		<property name="jaxWsService" value="true" />
	</bean>

	<bean class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean parent="LumWebService">
				<property name="service" ref="luServiceImpl" />
				<property name="serviceNameSpaceURI" value="http://edu.umd.ks/poc/lum/lu" />
				<property name="localServiceName" value="LuService" />
				<property name="serviceInterface" value="edu.umd.ks.poc.lum.lu.service.LuService" />
			</bean>
		</property>
	</bean>

	<bean class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean parent="LumWebService">
				<property name="service" ref="scatServiceImpl" />
				<property name="serviceNameSpaceURI" value="http://edu.umd.ks/poc/lum/lu" />
				<property name="localServiceName" value="ScatService" />
				<property name="serviceInterface" value="edu.umd.ks.poc.lum.scat.service.ScatService" />
			</bean>
		</property>
	</bean>

	<bean id="simpleWorkflowUtilityService"
		class="org.kuali.rice.kew.webservice.impl.SimpleWorkflowUtilityServiceImpl">
	</bean>

	<bean class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
	        <bean class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition">
	          <property name="service">
	            <ref bean="simpleWorkflowUtilityService" />
	          </property>
	          <property name="localServiceName" value="SimpleWorkflowUtilityService" />
	          <property name="priority" value="3" />
	          <property name="retryAttempts" value="0" />
	          <property name="busSecurity" value="false"/>
	        </bean>
		</property>
	</bean>

</beans>
