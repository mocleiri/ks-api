<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-dbs</artifactId>
    <version>1.1.0-M7-SNAPSHOT</version>
  </parent>
  <artifactId>ks-embedded-db</artifactId>
  <name>KS Embedded DB</name>
  <description>Kuali Student Embedded Database</description>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <version>1.0.1-SNAPSHOT</version>
        <configuration>
          <username>KSNOMERGE</username>
          <password>KSNOMERGE</password>
          <url>jdbc:oracle:thin:@localhost:1521:XE</url>
          <driver>oracle.jdbc.OracleDriver</driver>
          <targetDatabase>oracle</targetDatabase>
          <schemaXMLResources>
            <param>classpath:ks-embedded-db-schema.xml</param>
            <!-- 
            <param>classpath:ks-core-db-schema.xml</param>
            <param>classpath:ks-lum-db-schema.xml</param>
            <param>classpath:ks-rice-db-schema.xml</param>
             -->
          </schemaXMLResources>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>${oracle.ojdbc.version}</version>
          </dependency>
          <dependency>
            <groupId>org.kuali.student.db</groupId>
            <artifactId>ks-embedded-db</artifactId>
            <version>${project.version}</version>
          </dependency>
          <dependency>
            <groupId>org.kuali.student.db</groupId>
            <artifactId>ks-core-db</artifactId>
            <version>${project.version}</version>
          </dependency>
          <dependency>
            <groupId>org.kuali.student.db</groupId>
            <artifactId>ks-lum-db</artifactId>
            <version>${project.version}</version>
          </dependency>
          <dependency>
            <groupId>org.kuali.student.db</groupId>
            <artifactId>ks-rice-db</artifactId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>