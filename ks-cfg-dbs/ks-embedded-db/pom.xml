<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-cfg-dbs</artifactId>
    <version>1.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>ks-embedded-db</artifactId>
  <name>KS Embedded Database</name>
  <description>Kuali Student Embedded Database</description>
  <properties>
    <ks.embedded.url>jdbc:oracle:thin:@localhost:1521:XE</ks.embedded.url>
    <ks.embedded.schema>KSEMBEDDED</ks.embedded.schema>
    <ks.embedded.username>KSEMBEDDED</ks.embedded.username>
    <ks.embedded.password>KSEMBEDDED</ks.embedded.password>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources/impex</directory>
      </resource>
      <resource>
        <directory>${project.build.directory}/generated-sql/impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.kuali.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <configuration>
          <targetDatabase>${ks.db.type}</targetDatabase>
          <driver>${ks.db.driver}</driver>
          <url>${ks.embedded.url}</url>
          <schema>${ks.embedded.schema}</schema>
          <username>${ks.embedded.username}</username>
          <password>${ks.embedded.password}</password>
          <schemaXMLResources>
            <param>classpath:ks-core-db-schema.xml</param>
            <param>classpath:ks-lum-db-schema.xml</param>
            <param>classpath:ks-rice-db-schema.xml</param>
          </schemaXMLResources>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-core-db</artifactId>
            <version>${project.version}</version>
          </dependency>
          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-lum-db</artifactId>
            <version>${project.version}</version>
          </dependency>
          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-rice-db</artifactId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>