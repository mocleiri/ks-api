<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.dbs</groupId>
    <artifactId>ks-dbs</artifactId>
    <version>1.1.0-M7-SNAPSHOT</version>
  </parent>
  <artifactId>ks-lum-db</artifactId>
  <name>KS LUM DB</name>
  <description>Kuali Student Learning Unit Management Database</description>
  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/generated-impex</directory>
      </resource>
      <resource>
        <directory>${project.build.directory}/generated-sql</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <configuration>
          <dataXMLDir>${project.build.directory}/generated-impex/data</dataXMLDir>
          <schemaDir>${project.build.directory}/generated-impex</schemaDir>
          <schemaXMLFile>${project.build.directory}/generated-impex/${project.artifactId}-schema.xml</schemaXMLFile>
        </configuration>
        <executions>
          <execution>
            <id>morph-xml</id>
            <goals>
              <goal>morphschema</goal>
              <goal>morphdata</goal>
            </goals>
            <configuration>
              <dataXMLDir>${basedir}/src/main/impex/data</dataXMLDir>
            </configuration>
          </execution>
          <execution>
            <id>generate-oracle-sql</id>
            <goals>
              <goal>schemasql</goal>
              <goal>datadtd</goal>
              <goal>datasql</goal>
            </goals>
            <configuration>
              <targetDatabase>oracle</targetDatabase>
            </configuration>
          </execution>
          <execution>
            <id>generate-mysql-sql</id>
            <goals>
              <goal>schemasql</goal>
              <goal>datadtd</goal>
              <goal>datasql</goal>
            </goals>
            <configuration>
              <targetDatabase>mysql</targetDatabase>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>