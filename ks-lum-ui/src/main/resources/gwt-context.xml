<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:simple="http://cxf.apache.org/simple"
	xsi:schemaLocation="
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
		  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		  http://cxf.apache.org/simple http://cxf.apache.org/schemas/simple.xsd">

	<!-- Spring to GWT servlet mapping -->
	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
				<entry
					key="/org.kuali.student.lum.ui.requirements.Requirements/RequirementsService">
					<ref bean="requirementsServiceGwtController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.course.Course/LuRpcService">
					<ref bean="LuRpcGwtServletController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.main.LUMMain/LuRpcService">
					<ref bean="LuRpcGwtServletController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.main.LUMMain/MessageService">
					<ref bean="messageServiceGwtController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.main.LUMMain/OrgRpcService">
					<ref bean="OrgRpcGwtServletController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.main.LUMMain/CluProposalRpcService">
					<ref bean="CluProposalRpcGwtServletController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.main.LUMMain/SecurityRpcService">
					<ref bean="SecurityRpcGwtServletController" />
				</entry>
				<entry
					key="/org.kuali.student.lum.lu.ui.main.LUMMain/ServerProperties">
					<ref bean="ServerPropertiesServletController" />
				</entry>
			</map>
		</property>
	</bean>

	<!-- Controllers -->
	<bean id="requirementsServiceGwtController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="requirementsRpcGwtServlet" />
		<property name="servletInstance"
			ref="requirementsRpcGwtServlet" />
	</bean>

	<bean id="LuRpcGwtServletController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="LuRpcGwtServlet" />
		<property name="servletInstance" ref="LuRpcGwtServlet" />
	</bean>

	<bean id="CluProposalRpcGwtServletController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="CluProposalRpcGwtServlet" />
		<property name="servletInstance" ref="CluProposalRpcGwtServlet" />
	</bean>

	<bean id="ServerPropertiesServletController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="ServerPropertiesServlet" />
		<property name="servletInstance" ref="ServerPropertiesServlet" />
	</bean>

	<bean id="messageServiceGwtController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="messagesServiceGwt" />
		<property name="servletInstance" ref="messagesServiceGwt" />
	</bean>

	<bean id="OrgRpcGwtServletController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="OrgRpcGwtServlet" />
		<property name="servletInstance" ref="OrgRpcGwtServlet" />
	</bean>

	<bean id="SecurityRpcGwtServletController"
		class="org.kuali.student.common.ws.ServletWrappingController">
		<property name="servletName" value="SecurityGwtServlet" />
		<property name="servletInstance" ref="SecurityGwtServlet" />
	</bean>

	<!-- GWT Servlets -->
	<bean id="requirementsRpcGwtServlet"
		class="org.kuali.student.lum.ui.requirements.server.gwt.RequirementsRpcGwtServlet">
		<property name="service" ref="luClient" />
		<property name="translationService" ref="translationClient"/>
	</bean>

	<bean id="LuRpcGwtServlet"
		class="org.kuali.student.lum.lu.ui.course.server.gwt.LuRpcGwtServlet">
		<property name="service" ref="luClient" />
	</bean>

	<bean id="CluProposalRpcGwtServlet"
		class="org.kuali.student.lum.lu.ui.course.server.gwt.CluProposalRpcGwtServlet">
		<property name="service" ref="luClient" />
		<property name="orgService" ref="orgClient" />
		<property name="simpleDocService" ref="simpleDocActionsClient" />
		<property name="workflowUtilityService" ref="workflowUtilityClient" />
		<!--<property name="simpleDocService" ref="simpleDocClient"/>-->
	</bean>

	<bean id="ServerPropertiesServlet"
		class="org.kuali.student.common.ui.server.gwt.ServerPropertiesRpcGwtServlet">
	</bean>
	
	<bean id="messagesServiceGwt"
		class="org.kuali.student.common.ui.server.gwt.MessagesService">
		<property name="serviceImpl" ref="messageServiceImpl" />
	</bean>

	<bean id="OrgRpcGwtServlet"
		class="org.kuali.student.core.organization.ui.server.gwt.OrgRpcGwtServlet">
		<property name="service" ref="orgClient" />
	</bean>

	<bean id="messagesServiceRPCPreloader"
		class="org.kuali.student.common.ui.server.messages.MessageRPCPreloader">
		<property name="serviceImpl" ref="messageServiceImpl" />
	</bean>

	<bean id="SecurityGwtServlet"
		class="org.kuali.student.common.ui.server.gwt.SecurityRpcGwtServlet">
	</bean>

	<!-- Service Implementations -->
	<bean id="messageServiceImpl"
		class="org.kuali.student.core.messages.service.impl.MessageServiceMock">
		<property name="messageFiles">
			<list><value>classpath:org\kuali\student\common\ui\gwt-messages.xml</value></list>
		</property>
	</bean>

	<!-- Lu Service Client -->
	<bean id="luClient"
		class="org.kuali.student.common.ws.beans.JaxWsClientFactoryBean">
		<property name="wsdlLocation"
			value="classpath:META-INF/wsdl/LuService.wsdl" />
		<property name="serviceEndpointInterface"
			value="org.kuali.student.lum.lu.service.LuService" />
		<property name="serviceQNameString"
			value="{http://student.kuali.org/lum/lu}LuService" />
		<property name="address"
			value="http://localhost:8080/ks-lum-web/services/LuService" />
	</bean>

    <!-- Translation Service Client -->
    <bean id="translationClient"
        class="org.kuali.student.common.ws.beans.JaxWsClientFactoryBean">
        <property name="wsdlLocation"
            value="classpath:META-INF/wsdl/TranslationService.wsdl" />
        <property name="serviceEndpointInterface"
            value="org.kuali.student.lum.nlt.service.TranslationService" />
        <property name="serviceQNameString"
            value="{http://student.kuali.org/lum/nlt}TranslationService" />
        <property name="address"
            value="http://localhost:8080/ks-lum-web/services/TranslationService" />
    </bean>

	<bean id="orgClient"
		class="org.kuali.student.common.ws.beans.JaxWsClientFactoryBean">
		<property name="wsdlLocation"
			value="classpath:META-INF/wsdl/OrganizationService.wsdl" />
		<property name="serviceEndpointInterface"
			value="org.kuali.student.core.organization.service.OrganizationService" />
		<property name="serviceQNameString"
			value="{http://org.kuali.student/core/organization}OrganizationService" />
		<property name="address"
			value="http://localhost:8080/ks-lum-web/services/OrgService" />
	</bean>
	
	<bean id="workflowUtilityClient"
		class="org.kuali.student.common.ws.beans.JaxWsClientFactoryBean">
		<property name="wsdlLocation"
			value="classpath:META-INF/wsdl/WorkflowUtilityServiceSOAP.wsdl" />
		<property name="serviceEndpointInterface"
			value="org.kuali.rice.kew.service.WorkflowUtility" />
		<property name="serviceQNameString"
			value="{http://rice.kuali.org/wsdl/kew}WorkflowUtilityServiceSOAP" />
		<property name="address" 
            value="http://localhost:8081/ks-rice-dev/remoting/WorkflowUtilityServiceSOAP"/>		
	</bean>
	
	<bean id="simpleDocActionsClient"
		class="org.kuali.student.common.ws.beans.JaxWsClientFactoryBean">
		<property name="wsdlLocation"
			value="classpath:META-INF/wsdl/simpleDocumentActionsService.wsdl" />
		<property name="serviceEndpointInterface"
			value="org.kuali.rice.kew.webservice.SimpleDocumentActionsWebService" />
		<property name="serviceQNameString"
			value="{http://rice.kuali.org/wsdl/kew}simpleDocumentActionsService" />
		<property name="address" 
            value="http://localhost:8081/ks-rice-dev/remoting/simpleDocumentActionsService"/>		
	</bean>

</beans>
