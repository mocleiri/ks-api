<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseOfferingEditWrapper-InquiryView" parent="KS-Uif-InquiryView"
          p:headerText="Course Offering Inquiry"
          p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper"
          p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingEditInquirableImpl">

        <property name="page.header">
            <!-- suppress Expand/Collapse buttons -->
            <ref bean="KS-Uif-HeaderOne-Empty" />
        </property>
        <property name="Items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-GridGroup"
                                  p:layoutManager.numberOfColumns="2"
                                  p:layoutManager.applyDefaultCellWidths="false">
                                <property name="items">
                                    <list>
                                        <!--<bean parent="Uif-DataField" p:label="ID" p:propertyName="courseOfferingInfo.id" />-->
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.courseOfferingCode" />
                                        <bean parent="Uif-DataField" p:label="Cross listed as" p:propertyName="alternateCOCodesUIList" p:render="@{dataObject.alternateCOCodesUIList != ''}"/>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.courseNumberSuffix" />
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.courseOfferingTitle" />
                                        <bean parent="Uif-DataField" p:propertyName="termName" p:label="Term"/>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.creditCnt" />

                                        <!--<bean parent="Uif-DataField" p:label="Grading Option" p:propertyName="selectedGradingOptionName" />-->
                                        <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.gradingOptionId" p:id="gradingOptionId" p:label="Grading Options" p:componentSecurity.editAuthz="true">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.GradingOptionsKeyValues" />
                                            </property>
                                        </bean>

                                        <!-- displays "[]" when empty, not desired
                                        <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.studentRegistrationOptionIds" p:label="Student Registration Options" p:render="@{#dp.studentRegOptions.empty}">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.StudentRegistrationOptionsKeyValues" p:addBlankOption="false"/>
                                            </property>
                                        </bean>
                                        -->
                                        <bean parent="Uif-DataField" p:propertyName="selectedStudentRegOpts" p:label="Student Registration Options" />
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.finalExamType" />
                                        <bean parent="Uif-MessageField" p:label="Waited Listed" p:messageText="@{(dataObject.courseOfferingInfo.hasWaitlist eq null or !dataObject.courseOfferingInfo.hasWaitlist) ? 'NO':'YES'}"/>

                                        <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.waitlistLevelTypeKey" p:label="Waitlist Level" p:inquiry.render="false" p:fieldLabel.renderColon="true" p:labelPlacement="LEFT" p:render="@{!(dataObject.courseOfferingInfo.waitlistLevelTypeKey eq null) and (dataObject.courseOfferingInfo.hasWaitlist)}" >
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.WaitlistLevelOptionsKeyValues"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.waitlistTypeKey" p:label="Waitlist Type" p:inquiry.render="false" p:fieldLabel.renderColon="true" p:labelPlacement="LEFT" p:render="@{!(dataObject.courseOfferingInfo.waitlistTypeKey eq null) and (dataObject.courseOfferingInfo.hasWaitlist)}" >
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.WaitlistTypeOptionsKeyValues"/>
                                            </property>
                                        </bean>

                                        <bean parent="Uif-MessageField" p:label="Honors Flag" p:messageText="@{(dataObject.courseOfferingInfo.isHonorsOffering eq null or !dataObject.courseOfferingInfo.isHonorsOffering) ? 'NO':'YES'}" />


                                    </list>
                                </property>
                            </bean>
                            <bean  parent="Uif-TableCollectionSection">
                                <property name="headerText" value="Delivery Formats" />
                                <property name="propertyName" value="formatOfferingList" />
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.FormatOfferingWrapper" />
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.separateAddLine" value="false" />
                                <property name="layoutManager.richTable.render" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="formatOfferingInfo.name" p:label="Format Name" />
                                        <bean parent="Uif-InputField" p:propertyName="formatOfferingInfo.gradeRosterLevelTypeKey"
                                              p:label="Grade Roster Level">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.CourseOfferingTypeKeyValues"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField" p:propertyName="formatOfferingInfo.finalExamLevelTypeKey"
                                              p:label="Final Exam Driver" p:render="@{#dp.courseOfferingInfo.finalExamType eq 'STANDARD'}">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.CourseOfferingTypeKeyValues"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-MessageField" p:label="Final Exam Driver"
                                              p:messageText="Alternate exam for this offering"
                                              p:render="@{#dp.courseOfferingInfo.finalExamType eq 'ALTERNATE'}" />
                                        <bean parent="Uif-MessageField" p:label="Final Exam Driver"
                                              p:messageText="No final exam for this offering"
                                              p:render="@{#dp.courseOfferingInfo.finalExamType eq 'NONE'}" />
                                    </list>
                                </property>
                            </bean>

                            <bean  parent="Uif-TableCollectionSection">
                                <property name="headerText" value="Affiliated Personnel" />
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OfferingInstructorWrapper" />
                                <property name="propertyName" value="instructors" />
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.separateAddLine" value="false" />
                                <property name="layoutManager.richTable.render" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="renderAddBlankLineButton" value="true" />
                                <property name="addLinePlacement" value="BOTTOM" />
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:label="Affiliated Personnel Name" p:propertyName="offeringInstructorInfo.personName" />
                                        <bean parent="Uif-DataField" p:label="Affiliated Personnel Affiliation" p:propertyName="typeName" />
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-TableCollectionSection">
                                <property name="propertyName" value="organizationNames"/>
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OrganizationInfoWrapper"/>
                                <property name="headerText" value="Administering Organizations"/>
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.separateAddLine" value="false" />
                                <property name="layoutManager.richTable.render" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="organizationName" p:label="Organization Name"/>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="6"  p:readOnly="true" p:renderAddLine="false">
                                <property name="headerText" value="Activity Offerings" />
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
                                <property name="propertyName" value="aoWrapperList" />
                                <property name="collectionLookup.quickfinderAction.render" value="false" />
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:label="CODE" p:propertyName="aoInfo.activityCode">
                                            <property name="inquiry">
                                                <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" p:inquiryParameters="aoInfo.id" />
                                            </property>
                                        </bean>
                                        <bean parent="Uif-DataField" p:label="STATUS" p:propertyName="stateName" />
                                        <bean parent="Uif-DataField" p:label="TYPE" p:propertyName="typeName"/>
                                        <bean parent="Uif-DataField" p:label="FORMAT" p:propertyName="aoInfo.formatOfferingName"/>
                                        <bean parent="Uif-DataField" p:label="INSTRUCTOR" p:propertyName="firstInstructorDisplayName"/>
                                        <bean parent="Uif-DataField" p:label="MAX ENR" p:propertyName="aoInfo.maximumEnrollment"/>
                                    </list>
                                </property>
                            </bean>

                            <!-- end of Uif-GridGroup -->

                        </list>
                    </property>
                </bean>
                <!-- end of Uif-VerticalBoxSection -->

            </list>
        </property>
    </bean>

</beans>