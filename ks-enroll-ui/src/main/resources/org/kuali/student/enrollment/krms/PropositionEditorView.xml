<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="PropositionBo-LookupView" parent="Uif-LookupView">
        <property name="headerText" value="Proposition Lookup"/>
        <property name="theme">
            <bean parent="Uif-KradTheme"/>
        </property>
        <property name="dataObjectClassName" value="org.kuali.rice.krms.impl.repository.PropositionBo"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.krms.service.impl.PropositionLookupableHelperServiceImpl"/>
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="description"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="ruleId"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeId"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-InputField" p:propertyName="id"/>
                <bean parent="Uif-InputField" p:propertyName="description"/>
                <bean parent="Uif-InputField" p:propertyName="ruleId"/>
                <bean parent="Uif-InputField" p:propertyName="typeId"/>
                <bean parent="Uif-InputField" p:propertyName="propositionTypeCode"/>
            </list>
        </property>
    </bean>

    <bean id="PropositionBo-InquiryView" parent="Uif-InquiryView">
        <property name="headerText" value="Rule Inquiry"/>
        <property name="theme">
            <bean parent="Uif-KradTheme"/>
        </property>
        <property name="dataObjectClassName" value="org.kuali.rice.krms.impl.repository.PropositionBo"/>
        <property name="singlePageView" value="true"/>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="page1">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Disclosure-GridSection">
                                <property name="layoutManager.numberOfColumns" value="2"/>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField" p:propertyName="id"/>
                                        <bean parent="Uif-InputField" p:propertyName="description"/>
                                        <bean parent="Uif-InputField" p:propertyName="ruleId"/>
                                        <bean parent="Uif-InputField" p:propertyName="typeId"/>
                                        <bean parent="Uif-InputField" p:propertyName="propositionTypeCode"/>
                                    </list>
                                </property>
                                <property name="headerText" value="Proposition Attributes"/>
                            </bean>
                            <ref bean="PropositionBo-InquiryView-parameters"/>
                            <ref bean="PropositionBo-InquiryView-Custom"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="PropositionBo-InquiryView-parameters" parent="PropositionBo-InquiryView-parameters-parentBean"/>
    <bean id="PropositionBo-InquiryView-parameters-parentBean" abstract="true" parent="Uif-TableCollectionSection"
          p:layoutManager.numberOfColumns="4">
        <property name="headerText" value="Proposition Parameters"/>
        <property name="collectionObjectClass" value="org.kuali.rice.krms.impl.repository.PropositionParameterBo"/>
        <property name="propertyName" value="parameters"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="id"/>
                <bean parent="Uif-InputField" p:propertyName="value"/>
                <bean parent="Uif-InputField" p:propertyName="parameterType"/>
                <bean parent="Uif-InputField" p:propertyName="sequenceNumber"/>
            </list>
        </property>
    </bean>

    <bean id="PropositionBo-InquiryView-Custom" parent="PropositionBo-InquiryView-Custom-parentBean"/>
    <bean id="PropositionBo-InquiryView-Custom-parentBean" abstract="true" parent="Uif-VerticalBoxGroup"
          p:cssClasses="editModeNode">
        <property name="headerText" value="Proposition Custom"/>
        <property name="layoutManager.orientation" value="VERTICAL"/>
        <property name="items">
            <list>

                <!-- Hidden ID field -->
                <bean parent="Uif-InputField" p:propertyName="id"
                      p:showLabel="false" p:label="id" p:maxLength="255">
                    <property name="control">
                        <bean parent="Uif-HiddenControl" p:cssClasses="hiddenId"/>
                    </property>
                </bean>

                <bean parent="Uif-InputField-LabelTop" p:propertyName="typeId"
                      p:style="margin-left: 12pt" p:showLabel="true" p:label="Type" p:labelPlacement="TOP"
                      p:maxLength="40">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.PropositionTypeValuesFinder"/>
                    </property>
                </bean>

                <!-- outer div containing the elements of the comparison: term, operator & constant-->
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list merge="true">

                            <bean parent="Uif-InputField-LabelTop" p:propertyName="typeId"
                                  p:style="margin-left: 12pt" p:showLabel="true" p:label="Type" p:labelPlacement="TOP"
                                  p:maxLength="40">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.PropositionTypeValuesFinder"/>
                                </property>
                            </bean>

                            <bean parent="selectedNodeQuickActions"/>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="PropositionBo-MaintenanceView-Custom" parent="PropositionBo-MaintenanceView-Custom-parentBean"/>
    <bean id="PropositionBo-MaintenanceView-Custom-parentBean" abstract="true" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>

                <ref bean="KS-PropositionEdit-DefineSection"/>
                <ref bean="KS-PropositionEdit-DetailSection"/>
                
            </list>
        </property>
    </bean>

    <bean id="KS-PropositionEdit-DefineSection" parent="KS-PropositionEdit-DefineSection-parentBean"/>
    <bean id="KS-PropositionEdit-DefineSection-parentBean" abstract="true" parent="KS-VerticalBoxSubSection">
        <property name="headerText" value="Define Rule"/>
        <property name="items">
            <list>

                <!-- Hidden ID field -->
                <bean parent="Uif-InputField" p:propertyName="proposition.id"
                      p:showLabel="false" p:label="id" p:maxLength="255">
                    <property name="control">
                        <bean parent="Uif-HiddenControl" p:cssClasses="hiddenId"/>
                    </property>
                </bean>

                <!--Add the type droplist-->
                <bean parent="Uif-InputField-LabelTop" p:propertyName="proposition.typeId"
                      p:showLabel="true" p:label="Select rule type" p:maxLength="40">
                    <property name="instructionalText"
                              value="Use the list below to select the type or rule you would like to add to this requirement."/>
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"
                              p:onChangeScript="ajaxSubmitForm('updateProposition', null, jQuery(this).data('submitdata'), null, null, null);"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.PropositionTypeValuesFinder"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="KS-PropositionEdit-DetailSection" parent="KS-PropositionEdit-DetailSection-parentBean"/>
    <bean id="KS-PropositionEdit-DetailSection-parentBean" abstract="true" parent="KS-VerticalBoxSubSection">
        <property name="headerText" value="Add Rule Details"/>
        <property name="items">
            <list>

                <!--Add all the available custom components-->
                <ref bean="permission.instructor.required" />
                <ref bean="course.drop.org.permission.required" />
                <ref bean="max.limit.courses.at.org.for.program" />
                <ref bean="max.limit.courses.at.org.duration.for.program" />
                <ref bean="success.compl.course" />
                <ref bean="success.course.courseset.completed.nof" />
                <ref bean="success.course.courseset.completed.all" />
                <ref bean="success.credit.courseset.completed.nof" />
                <ref bean="success.credit.courseset.completed.nof.org" />
                <ref bean="cumulative.gpa.min" />
                <ref bean="duration.cumulative.gpa.min" />
                <ref bean="course.courseset.gpa.min" />
                <ref bean="course.courseset.grade.min" />
                <ref bean="course.courseset.nof.grade.min" />
                <ref bean="course.courseset.grade.max" />
                <ref bean="course.test.score.min" />
                <ref bean="course.test.score.max" />
                <!--<bean parent="course.notcompleted" />-->
                <ref bean="course.courseset.completed.none" />
                <ref bean="course.courseset.credits.completed.none" />
                <ref bean="course.courseset.credits.completed.nof" />
                <ref bean="course.courseset.completed.nof" />
                <ref bean="course.enrolled" />
                <ref bean="course.courseset.enrolled.nof" />
                <ref bean="course.courseset.enrolled.all" />
                <ref bean="credits.earned.min" />
                <ref bean="course.notccompleted" />
                <ref bean="course.credits.repeat.max" />
                <ref bean="admitted.to.program" />
                <ref bean="admitted.to.program.campus" />
                <ref bean="notadmitted.to.program" />
                <ref bean="test.score.between.values" />
                <ref bean="test.score" />

                <!--Add button to update the preview-->
                <bean id="update-button" parent="Uif-SecondaryActionButton-Small">
                    <property name="actionLabel" value="Update"/>
                    <property name="actionScript" value="ajaxSubmitForm('updatePreview', null, jQuery(this).data('submitdata'), null, null, null);"/>
                </bean>

            </list>
        </property>
    </bean>

</beans>
