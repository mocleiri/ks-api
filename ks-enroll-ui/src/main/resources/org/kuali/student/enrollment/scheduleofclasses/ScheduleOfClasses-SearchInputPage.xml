    <bean id="KS-ScheduleOfClasses-SearchInputPage" parent="Uif-Page" p:disclosure.render="false" p:id="scheduleOfClassesSearchInputPage">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="Display Schedule of Classes" />
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KS-ScheduleOfClasses-CriteriaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ScheduleOfClasses-CriteriaSection" parent="Uif-HorizontalBoxSection" p:id="scheduleOfClassesCriteriaSection">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="termCode" p:label="Term" p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.scheduleofclasses.keyvalue.TermKeyValues"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="searchType" p:label="Type of Search" p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.scheduleofclasses.keyvalue.TypeOfSearchKeyValues"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="course" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'course'}"/>
                            <bean parent="Uif-InputField" p:propertyName="department" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'department'}"/>
                            <bean parent="Uif-InputField" p:propertyName="instructor" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'instructor'}"/>
                            <bean parent="Uif-InputField" p:propertyName="titleDesc" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'titleDesc'}"/>
                            <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="false" p:actionLabel="Show" p:methodToCall="show" p:style="margin-top:17px;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>