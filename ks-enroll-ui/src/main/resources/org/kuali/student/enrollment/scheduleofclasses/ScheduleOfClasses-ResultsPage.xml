    <bean id="CourseOfferingDisplayInfo" parent="CourseOfferingDisplayInfo-parent">
        <property name="titleAttribute" value="id"/>
    </bean>

    <bean id="KS-ScheduleOfClasses-ResultsSection" parent="Uif-Page" p:disclosure.render="false" p:id="scheduleOfClassesResultsPage">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="Display Schedule of Classes"/>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-ScheduleOfClasses-CriteriaSection"/>
                <ref bean="KS-ScheduleOfClasses-ResultSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ScheduleOfClasses-ResultSection" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="@{termName} Schedule of Classes" />
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="KS-ScheduleOfClasses-CourseOfferingListSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ScheduleOfClasses-CourseOfferingListSection" parent="Uif-TableCollectionSection" p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.scheduleofclasses.dto.CourseOfferingDisplayWrapper" />
        <property name="propertyName" value="coDisplayWrapperList" />
        <property name="renderLineActions" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="bFilter" value="false"/>
                <entry key="sPaginationType" value="full_numbers"/>
                <entry key="bLengthChange" value="false"/>
                <entry key="aaSorting" value="[[1,'asc']]"/>
                <entry key="aoColumns"
                       value="[ {'bSortable':false, 'sWidth':'5%'},
                                {'bSortable':true, 'sWidth':'15%'},
                                {'bSortable':false, 'sWidth':'40%'},
                                {'bSortable':false, 'sWidth':'20%'},
                                {'bSortable':false, 'sWidth':'20%'}
                           ]"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-ImageField" p:source="../ks-enroll/images/details_open.png">
                    <property name="onClickScript" value="ajaxCallActivityOfferings('populateAOs', '@{#line.coDisplayInfo.id}')" />
                    <property name="id" value="@{#line.coDisplayInfo.id}" />
                </bean>
                <bean parent="Uif-DataField" p:label="COURSE" p:propertyName="coDisplayInfo.courseOfferingCode" />
                <bean parent="Uif-DataField" p:label="TITLE" p:propertyName="coDisplayInfo.courseOfferingTitle"/>
                <bean parent="Uif-DataField" p:label="CREDITS" p:propertyName="coDisplayInfo.creditOption.value"/>
                <bean parent="Uif-MessageField" p:label="INFORMATION" p:messageText="@{#line.information}"/>
            </list>
        </property>
        <property name="subCollections">
            <list>
                <!--bean parent="Uif-TableSubCollection-WithinSection" p:renderAddLine="false" p:renderLineActions="false" p:render="@{!#empty(#aoDisplayWrapperList)}"-->
                <bean parent="Uif-TableSubCollection-WithinSection" p:renderAddLine="false" p:renderLineActions="false" p:render="@{courseOfferingId != ''}">
                    <property name="id" value="@{#line.coDisplayInfo.id}-sub" />
                    <!-- property name="headerText" value="Activities" /-->
                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.scheduleofclasses.dto.ActivityOfferingDisplayWrapper" />
                    <property name="propertyName" value="aoDisplayWrapperList" />
                    <property name="layoutManager.renderSequenceField" value="false" />
                    <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                    <property name="layoutManager.richTable.render" value="false" />
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField"
                                  p:label="TYPE"
                                  p:propertyName="aoDisplayInfo.typeName">
                            </bean>
                            <bean parent="Uif-DataField"
                                  p:label="CODE"
                                  p:propertyName="aoDisplayInfo.activityOfferingCode">
                            </bean>
                            <bean parent="Uif-DataField"
                                  p:label="INSTRUCTOR"
                                  p:propertyName="aoDisplayInfo.instructorName" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>
