<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="Agenda-Student-MaintenanceView" parent="KSMaintenanceView">
        <property name="headerText" value="Manage Enrollment Eligibility"/>
        <property name="additionalScriptFiles">
            <list>
                <value>krms/scripts/agendaTree.js</value>
                <value>krms/scripts/ruleStudentTree.js</value>
                <value>krms/scripts/requiredAlerts.js</value>
                <value>krms/scripts/disableButtons.js</value>
                <value>krms/scripts/countdownInputs.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-enroll/css/krms.css</value>
            </list>
        </property>
        <property name="viewName" value="AgendaWithRuleView"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.RuleEditor"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.enrollment.class1.krms.service.impl.RuleStudentViewHelperServiceImpl"/>
        <property name="page.items">
            <list>
                <ref bean="Requisites-ManageSection"/>
            </list>
        </property>
        <property name="page.footer.items">
            <ref bean="KSDocumentPageFooter_SubmitCancel" />
        </property>
    </bean>

    <bean id="Requisites-ManageSection" parent="Uif-VerticalBoxSection">
        <!--<property name="disclosure.render" value="false"/>-->
        <!--<property name="style" value="margin-bottom:0;"/>-->
        <property name="items">
            <list>

                <bean parent="Uif-PageHeader" p:headerText="@{#dp.courseName}"/>

                <bean parent="Uif-InputField-LabelTop" p:label="Select Agenda" p:propertyName="agendaType">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"
                              p:onChangeScript="ajaxSubmitForm('retrieveAgenda', null, jQuery(this).data('submitdata'), null, null, null);"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.RequisiteAgendaTypeKeyValues"/>
                    </property>
                </bean>

                <bean id="RequisitesRuleType-ManageSection" parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>

                            <bean parent="Uif-InputField-LabelTop" p:label="Select Rule" p:propertyName="ruleType"
                                  p:optionsFinderClass="org.kuali.student.enrollment.class1.krms.keyvalues.RuleTypeKeyValues"
                                  p:refreshWhenChangedPropertyNames="#dp.agendaType">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"
                                          p:onChangeScript="ajaxSubmitForm('retrieveRule', null, jQuery(this).data('submitdata'), null, null, null);"/>
                                </property>
                            </bean>

                            <bean parent="Uif-InputField-LabelTop">
                                <property name="propertyName" value="activeSelections"/>
                                <property name="label" value="Activate / Deactivate Rule"/>
                                <property name="control">
                                    <bean parent="Uif-VerticalCheckboxesControl">
                                        <property name="options">
                                            <list>
                                                <bean parent="Uif-KeyLabelPair" p:key="1" p:value="Canonical Rule"/>
                                                <bean parent="Uif-KeyLabelPair" p:key="2" p:value="Course Offering Rule"/>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>

                <ref bean="Proposition-Tree-Section"/>

                <bean id="Enrollment-Eligibility-TabSection" parent="Uif-TabSection"
                      p:progressiveRender="@{#dp.ruleType ne null and #dp.ruleType ne '0'}">
                    <property name="items">
                        <list>
                            <bean parent="Edit-With-Object-Section" />
                            <bean parent="Edit-With-Logic-Section" />
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="Preview-Section-Parent" parent="Uif-VerticalBoxSection"
          p:headerText="Preview" p:header.render="false">
        <property name="items">
            <list>
                <bean parent="Uif-Message" abstract="true" p:style="margin-bottom:1em;">
                    <property name="messageText">
                        <value>
                            Conditions that will restrict student enrollment, addressing restrictions to majors,
                            locations, credit level requirements, etc. or courses, with or without grade requirements,
                            which a student must have completed in order to enroll.
                        </value>
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small">
                    <property name="actionLabel" value="See Example"/>
                    <property name="actionScript" value="alert('click');"/>
                </bean>
                <!--<ref bean="propositionGroup"/>-->
            </list>
        </property>
    </bean>





    <bean id="Edit-With-Object-Section" parent="Uif-VerticalBoxSection"
          p:headerText="Edit with Object" p:header.render="false">
        <property name="items">
            <list>
                <bean parent="propositionStudentSection-parent" p:style=""/>
            </list>
        </property>
    </bean>

    <bean id="Edit-With-Logic-Section" parent="Uif-VerticalBoxSection"
          p:headerText="Edit with Logic" p:header.render="false">
        <property name="items">
            <list>
                <!--<ref bean="propositionGroup"/>-->
            </list>
        </property>
    </bean>

    <bean id="Proposition-Tree-Section" parent="Uif-TreeSection">
        <property name="headerText" value="Prerequisite Rule"/>
        <property name="instructionalText" value="Tree Instructional Text"/>
        <property name="propertyName" value="previewTree"/>
        <property name="tree">
            <bean parent="RuleTreeWidget">
                <property name="templateOptions">
                    <map>
                        <entry key="'plugins'"
                               value="['themes','html_data', 'ui', 'crrm', 'dnd']"/>
                        <entry key="'themes'"
                               value="{'theme':'default','dots':'true','icons':'false'}"/>
                        <entry key="'ui'" value="{ 'select_limit' : 1 }"/>
                        <entry key="'dnd'" value="{ 'drag_target' : false, 'drop_target' : false }"/>
                    </map>
                </property>
            </bean>
        </property>
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <bean parent="Uif-VerticalBoxGroup" p:style="margin-left: 2em;">
                        <!--<property name="items">-->
                            <!--<list>-->
                                <!--<bean parent="Uif-InputField"  p:propertyName="data" p:readOnlyDisplayReplacement="true"-->
                                      <!--p:showLabel="false" p:label="id" p:maxLength="255"/>-->

                            <!--</list>-->
                        <!--</property>-->
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="propositionGroup" parent="Uif-GridGroup">
        <property name="headerText" value="Rule"/>
    </bean>

</beans>