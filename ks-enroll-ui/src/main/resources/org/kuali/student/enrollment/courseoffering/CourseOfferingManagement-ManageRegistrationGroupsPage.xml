    <bean id="KS-CourseOfferingManagement-ManageRegistrationGroupsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="manageRegistrationGroupsPage">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="Manage Registration Groups" />
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="headerText" value="@{theCourseOffering.courseOfferingCode} - @{theCourseOffering.courseOfferingTitle} (@{theCourseOffering.creditCnt} Credits)" />
                    <property name="disclosure.render" value="false"/>
                    <property name="header.cssClasses">
                        <list merge="true">
                            <value>ks-borderBottom</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="formatOfferingIdForViewRG" p:label="Select Format" p:labelPlacement="LEFT" p:required="true" >
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.FormatsForCreateRGKeyValues" p:addBlankOption="false" />
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxGroup" p:refreshWhenChangedPropertyNames="formatOfferingIdForViewRG" p:methodToCallOnRefresh="filterAOsAndRGsPerFO">
                                <property name="items">
                                    <list>
                                        <ref bean="KS-ViewRegistrationGroupsPage-UnassignedActivityOfferingsPerFormatSection"/>
                                        <ref bean="KS-ViewRegistrationGroupPage-NoClusterCondition"/>
                                        <!--<ref bean="KS-ViewRegistrationGroupPage-HasClusterCondition"/>-->



                                        <!--<bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Generate Unconstrained Registration Groups" p:methodToCall="generateUnconstrainedRegGroups"-->
                                              <!--p:actionScript = "showLightboxComponent('registrationGroupsPerFormatSection');" p:render="@{!filteredAOsForSelectedFO.empty}" p:id="generate_rgs_button"/>-->
                                        <!--<ref bean="KS-ViewRegistrationGroupsPage-RegistrationGroupsPerFormatSection"/>-->
                                        <!--<bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create New Cluster"-->
                                              <!--p:actionScript = "showLightboxComponent('createNewClusterSection');" p:render="@{!filteredAOsForSelectedFO.empty}" p:id="create_new_cluster_button"/>-->
                                        <!--<ref bean="KS-CreateNewCluster" />-->
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ViewRegistrationGroupsPage-UnassignedActivityOfferingsPerFormatSection" parent="Uif-Disclosure-TableCollectionSection"
          p:renderAddLine="false"  p:renderLineActions="false">
        <!--<property name="disclosure.render" value="true"/>-->
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="filteredUnassignedAOsForSelectedFO" />
        <property name="headerText" value="@{formatOfferingName} Unassigned Activity Offerings"/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 2, 'asc' ], [0, 'asc']]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <!--<bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false" p:render="@{hasAOCluster}">-->
                    <!--<property name="control">-->
                        <!--<bean parent="Uif-CheckboxControl" p:disabled="false"/>-->
                    <!--</property>-->
                <!--</bean>-->
                <bean parent="Uif-DataField"
                      p:label="CODE"
                      p:propertyName="aoInfo.activityCode">
                </bean>
                <bean parent="Uif-DataField"
                      p:label="STATUS"
                      p:propertyName="stateName" />
                <bean parent="Uif-DataField"
                      p:label="TYPE"
                      p:propertyName="typeName"/>
                <bean parent="Uif-DataField"
                      p:label="MAX ENR"
                      p:propertyName="aoInfo.maximumEnrollment"/>
                <bean parent="Uif-DataField"
                      p:label="DAYS"
                      p:propertyName="daysDisplayName"/>
                <bean parent="Uif-DataField"
                      p:label="START TIME"
                      p:propertyName="startTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="END TIME"
                      p:propertyName="endTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="BUILDING"
                      p:propertyName="buildingName"/>
                <bean parent="Uif-DataField"
                      p:label="ROOM"
                      p:propertyName="roomName"/>
                <bean parent="Uif-DataField"
                      p:label="INSTRUCTOR"
                      p:propertyName="firstInstructorDisplayName"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ViewRegistrationGroupPage-NoClusterCondition" parent="Uif-VerticalBoxSection" p:render="@{!hasAOCluster}">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="disclosure.render" value="false"/>
                    <property name="headerText" value="Generate registration groups"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message" p:messageText="Unconstrained registration groups for this course offering are listed below.  Generate unconstrained registration groups if additional activities have been added or removed since the groups were last generated." />
                            <bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="Generate Registration Groups" p:methodToCall="generateUnconstrainedRegGroups"
                                  p:id="generate_unconstrained_rgs_button"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="disclosure.render" value="false"/>
                    <property name="headerText" value="or create an activity offering cluster to manage constrained registration groups"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create New Cluster" p:methodToCall="createNewCluster"
                                  p:id="create_new_cluster_button"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--<bean id="KS-ViewRegistrationGroupPage-HasClusterCondition" parent="Uif-TableCollectionSection" p:render="@{hasAOCluster}"-->
          <!--p:renderAddLine="false"  p:renderLineActions="false">-->
    <!--</bean>        -->
</beans>