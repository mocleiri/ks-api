    <bean id="KS-CourseOfferingManagement-ManageRegistrationGroupsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="manageRegistrationGroupsPage">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="Manage Registration Groups" />
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="headerText" value="@{theCourseOffering.courseOfferingCode} - @{theCourseOffering.courseOfferingTitle} (@{theCourseOffering.creditCnt} Credits)" />
                    <property name="disclosure.render" value="false"/>
                    <property name="header.cssClasses">
                        <list merge="true">
                            <value>ks-borderBottom</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="formatOfferingIdForViewRG" p:label="Select Format" p:labelPlacement="LEFT" p:required="true" >
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.FormatsForCreateRGKeyValues" p:addBlankOption="false" />
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxGroup" p:refreshWhenChangedPropertyNames="formatOfferingIdForViewRG" p:methodToCallOnRefresh="filterAOsAndRGsPerFO">
                                <property name="items">
                                    <list>
                                        <ref bean="KS-ManageRegistrationGroupsPage-UnassignedActivityOfferingsPerFormatSection-WithDisclosure"/>
                                        <ref bean="KS-ManageRegistrationGroupsPage-UnassignedActivityOfferingsPerFormatSection"/>
                                        <ref bean="KS-ManageRegistrationGroupPage-ClusterForFormat"/>
                                        <ref bean="KS-ManageRegistrationGroupsPage-CreateNewClusterSection" />
                                        <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create New Cluster" p:methodToCall="createNewClusterFromLightBox"
                                              p:id="create_new_cluster_button"/>
                                        <ref bean="KS-ManageRegistrationGroupPage-NoClusterCondition"/>
                                        <ref bean="KS-ManageRegistrationGroupPage-HasClusterCondition"/>



                                        <!--<bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Generate Unconstrained Registration Groups" p:methodToCall="generateUnconstrainedRegGroups"-->
                                              <!--p:actionScript = "showLightboxComponent('registrationGroupsPerFormatSection');" p:render="@{!filteredAOsForSelectedFO.empty}" p:id="generate_rgs_button"/>-->
                                        <!--<ref bean="KS-ViewRegistrationGroupsPage-RegistrationGroupsPerFormatSection"/>-->
                                        <!--<bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create New Cluster"-->
                                              <!--p:actionScript = "showLightboxComponent('createNewClusterSection');" p:render="@{!filteredAOsForSelectedFO.empty}" p:id="create_new_cluster_button"/>-->
                                        <!--<ref bean="KS-CreateNewCluster" />-->
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ManageRegistrationGroupsPage-UnassignedActivityOfferingsPerFormatSection-WithDisclosure" parent="Uif-Disclosure-TableCollectionSection"
          p:renderAddLine="false"  p:renderLineActions="false" p:render="@{!hasAOCluster}">
        <!--<property name="disclosure.render" value="true"/>-->
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="filteredUnassignedAOsForSelectedFO" />
        <property name="headerText" value="@{formatOfferingName} Unassigned Activity Offerings"/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 2, 'asc' ], [0, 'asc']]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField"
                      p:label="CODE"
                      p:propertyName="aoInfo.activityCode">
                </bean>
                <bean parent="Uif-DataField"
                      p:label="STATUS"
                      p:propertyName="stateName" />
                <bean parent="Uif-DataField"
                      p:label="TYPE"
                      p:propertyName="typeName"/>
                <bean parent="Uif-DataField"
                      p:label="MAX ENR"
                      p:propertyName="aoInfo.maximumEnrollment"/>
                <bean parent="Uif-DataField"
                      p:label="DAYS"
                      p:propertyName="daysDisplayName"/>
                <bean parent="Uif-DataField"
                      p:label="START TIME"
                      p:propertyName="startTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="END TIME"
                      p:propertyName="endTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="BUILDING"
                      p:propertyName="buildingName"/>
                <bean parent="Uif-DataField"
                      p:label="ROOM"
                      p:propertyName="roomName"/>
                <bean parent="Uif-DataField"
                      p:label="INSTRUCTOR"
                      p:propertyName="firstInstructorDisplayName"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ManageRegistrationGroupsPage-UnassignedActivityOfferingsPerFormatSection" parent="Uif-TableCollectionSection"
          p:renderAddLine="false"  p:renderLineActions="false" p:render="@{hasAOCluster}">
        <!--<property name="disclosure.render" value="true"/>-->
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="filteredUnassignedAOsForSelectedFO" />
        <property name="headerText" value="@{formatOfferingName} Unassigned Activity Offerings"/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 3, 'asc' ], [1, 'asc']]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false" >
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:disabled="false"/>
                    </property>
                </bean>
                <bean parent="Uif-DataField"
                      p:label="CODE"
                      p:propertyName="aoInfo.activityCode">
                </bean>
                <bean parent="Uif-DataField"
                      p:label="STATUS"
                      p:propertyName="stateName" />
                <bean parent="Uif-DataField"
                      p:label="TYPE"
                      p:propertyName="typeName"/>
                <bean parent="Uif-DataField"
                      p:label="MAX ENR"
                      p:propertyName="aoInfo.maximumEnrollment"/>
                <bean parent="Uif-DataField"
                      p:label="DAYS"
                      p:propertyName="daysDisplayName"/>
                <bean parent="Uif-DataField"
                      p:label="START TIME"
                      p:propertyName="startTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="END TIME"
                      p:propertyName="endTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="BUILDING"
                      p:propertyName="buildingName"/>
                <bean parent="Uif-DataField"
                      p:label="ROOM"
                      p:propertyName="roomName"/>
                <bean parent="Uif-DataField"
                      p:label="INSTRUCTOR"
                      p:propertyName="firstInstructorDisplayName"/>
            </list>
        </property>
    </bean>


    <bean id="KS-ManageRegistrationGroupPage-ClusterForFormat" parent="Uif-HorizontalBoxSection" p:render="@{hasAOCluster}">
        <property name="headerText" value="Assign selected offerings to" />
        <property name="items">
            <list>
                <bean id="KS-ManageRegistrationGroupPage-ClusterForFormat" parent="Uif-InputField" p:propertyName="clusterIdIdForNewFO"  p:fieldLabel.render="false" >
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ListOfAOClustersForFOKeyValues" p:addBlankOption="false" />
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Assign" p:methodToCall="moveAO"  p:id="move_ao_button"/>
            </list>
        </property>
    </bean>


    <bean id="KS-ManageRegistrationGroupPage-NoClusterCondition" parent="Uif-VerticalBoxSection" p:render="@{!hasAOCluster}">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="disclosure.render" value="false"/>
                    <property name="headerText" value="Generate registration groups"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message" p:messageText="Unconstrained registration groups for this course offering are listed below.  Generate unconstrained registration groups if additional activities have been added or removed since the groups were last generated." />
                            <bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="Generate Registration Groups" p:methodToCall="generateUnconstrainedRegGroups"
                                  p:id="generate_unconstrained_rgs_button"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="disclosure.render" value="false"/>
                    <property name="headerText" value="or create an activity offering cluster to manage constrained registration groups"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create New Cluster" p:methodToCall="createNewCluster"
                                  p:id="create_new_cluster_button"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="KS-ManageRegistrationGroupPage-HasClusterCondition" parent="KS-HorizontalCollectionSection" p:render="@{hasAOCluster}"
          p:renderAddLine="false"  p:renderLineActions="false">
        <property name="disclosure.render" value="false"/>
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingClusterWrapper" />
        <property name="propertyName" value="filteredAOClusterWrapperList" />
        <property name="headerText" value="Activity Offering Clusters"/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.lineGroupPrototype.disclosure.render" value="true"/>
        <property name="layoutManager.lineGroupPrototype.header.headerText" value="@{#line.aoCluster.name}(@{#line.aoCluster.privateName})"/>
        <property name="layoutManager.addLineGroup.header.render" value="false"/>

        <property name="items">
            <list>
                <ref bean="KS-ManageRegistrationGroupPage-StateAndActionLinks"/>
            </list>
         </property>
        <property name="subCollections">
            <list>
                <ref bean="KS-ManageRegistrationGroupPage-ActivityOfferingsPerClusterSubSection" />
                <ref bean="KS-ManageRegistrationGroupPage-RegistrationGroupsPerClusterSubSection" />
            </list>
        </property>
    </bean>
    
    <bean id="KS-ManageRegistrationGroupsPage-CreateNewClusterSection" parent="Uif-VerticalBoxSection">
        <property name="id" value="createNewClusterSection" />
        <property name="disclosure.render" value="false"/>
        <property name="headerText" value="Create New Cluster"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"  p:propertyName="privateClusterName" p:label="Private Name" p:labelPlacement="LEFT" p:required="true" p:render="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10" p:minLength="5" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"  p:propertyName="publishedClusterName" p:label="Published Name" p:labelPlacement="LEFT" p:required="true" p:render="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:minLength="5" p:maxLength="20"/>
                    </property>
                </bean>

                <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="true" p:actionLabel="Add" p:methodToCall="createNewCluster" />

            </list>
        </property>
    </bean>

    <bean id="KS-ManageRegistrationGroupsPage-CreateNewClusterDialog" parent="Uif-DialogGroup">
        <property name="id" value="createNewClusterDialog" />
        <property name="hidden" value="true"/>
        <property name="disclosure.render" value="false"/>
        <property name="headerText" value="Create New Cluster..."/>
        <property name="promptText" value=""/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"  p:propertyName="privateClusterNameForLightBox" p:label="Private Name" p:labelPlacement="LEFT" p:required="true" p:render="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10" p:minLength="5" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"  p:propertyName="publishedClusterNameForLightBox" p:label="Published Name" p:labelPlacement="LEFT" p:required="true" p:render="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:minLength="5" p:maxLength="20"/>
                    </property>
                </bean>
                <!--<bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="true" p:actionLabel="Create Cluster" p:methodToCall="createNewClusterFromLightBox" />-->
            </list>
        </property>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Create Cluster"/>
                <bean parent="Uif-KeyLabelPair" p:key="N" p:value="Cancel"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ManageRegistrationGroupPage-StateAndActionLinks" parent="Uif-HorizontalFieldGroup" p:fieldLabel.render="false">
        <property name="items">
            <list>
                <bean parent="Uif-Label" p:labelText="@{#line.rgStatus}" p:renderColon="false"/>
                <bean parent="Uif-LinkGroup" p:style="float:right">
                    <property name="items">
                        <list>
                            <bean parent="Uif-ActionLink" p:methodToCall="viewRegGroupsPerCluster" p:actionLabel="View Registration Groups" p:render="@{#line.hasRegGroups}"
                                  p:onClickScript="writeHiddenToForm(&quot;actionParameters[selectedLineIndex]&quot;, &quot;@{#index}&quot;);" p:actionScript = "showLightboxComponent('registrationGroupsPerCluster');"/>
                            <bean parent="Uif-ActionLink" p:methodToCall="generateRegGroupsPerCluster" p:actionLabel="Generate Registration Groups" p:render="@{!#line.hasRegGroups}" p:onClickScript="writeHiddenToForm(&quot;actionParameters[selectedLineIndex]&quot;, &quot;@{#index}&quot;);"/>
                            <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" />
                            <bean parent="Uif-ActionLink" p:methodToCall="renameCluster" p:actionLabel="Rename Cluster" p:onClickScript="writeHiddenToForm(&quot;actionParameters[selectedLineIndex]&quot;, &quot;@{#index}&quot;);"/>
                            <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" />
                            <bean parent="Uif-ActionLink" p:methodToCall="removeACluster" p:actionLabel="Remove Cluster" p:onClickScript="writeHiddenToForm(&quot;actionParameters[selectedLineIndex]&quot;, &quot;@{#index}&quot;);"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ManageRegistrationGroupPage-ActivityOfferingsPerClusterSubSection" parent="Uif-TableCollectionSubSection"
          p:renderAddLine="false"  p:renderLineActions="true">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="aoWrapperList" />
        <property name="headerText" value=""/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 2, 'asc' ], [0, 'asc']]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false" >
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:disabled="false"/>
                    </property>
                </bean>
                <bean parent="Uif-DataField"
                      p:label="CODE"
                      p:propertyName="aoInfo.activityCode">
                </bean>
                <bean parent="Uif-DataField"
                      p:label="STATUS"
                      p:propertyName="stateName" />
                <bean parent="Uif-DataField"
                      p:label="TYPE"
                      p:propertyName="typeName"/>
                <bean parent="Uif-DataField"
                      p:label="MAX ENR"
                      p:propertyName="aoInfo.maximumEnrollment"/>
                <bean parent="Uif-DataField"
                      p:label="DAYS"
                      p:propertyName="daysDisplayName"/>
                <bean parent="Uif-DataField"
                      p:label="START TIME"
                      p:propertyName="startTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="END TIME"
                      p:propertyName="endTimeDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="BUILDING"
                      p:propertyName="buildingName"/>
                <bean parent="Uif-DataField"
                      p:label="ROOM"
                      p:propertyName="roomName"/>
                <bean parent="Uif-DataField"
                      p:label="INSTRUCTOR"
                      p:propertyName="firstInstructorDisplayName"/>
            </list>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="moveAActivityOffering" p:actionLabel="Move"/>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="removeACluster" p:actionLabel="Remove"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ManageRegistrationGroupPage-RegistrationGroupsPerClusterSubSection" parent="Uif-TableCollectionSubSection"
          p:renderAddLine="false"  p:renderLineActions="false">
        <property name="id" value="registrationGroupsPerCluster" />
        <!--<property name="hidden" value="true"/>-->
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.RegistrationGroupWrapper" />
        <property name="propertyName" value="rgWrapperList" />
        <property name="headerText" value="View Registration Groups"/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 0, 'asc' ]]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField"
                      p:label="REG GROUP ID"
                      p:propertyName="rgInfo.name" p:valign="middle">
                </bean>
                <bean parent="Uif-MessageField"
                      p:label="CODE"
                      p:messageText="@{#line.aoActivityCodeText}">
                </bean>
                <bean parent="Uif-MessageField"
                      p:label="STATUS"
                      p:messageText="@{#line.aoStateNameText}" />
                <bean parent="Uif-MessageField"
                      p:label="TYPE"
                      p:messageText="@{#line.aoTypeNameText}"/>
                <bean parent="Uif-MessageField"
                      p:label="INSTRUCTOR"
                      p:messageText="@{#line.aoInstructorText}"/>
                <bean parent="Uif-MessageField"
                      p:label="MAX ENR"
                      p:messageText="@{#line.aoMaxEnrText}"/>
            </list>
        </property>
    </bean>
</beans>