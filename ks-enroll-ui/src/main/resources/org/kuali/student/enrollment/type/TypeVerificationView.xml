    <bean id="KS-TypeVerification-View" parent="KSFormView" p:applyDirtyCheck="true"
          p:id="typeVerificationView"
          p:headerText="Type Verification"
          p:entryPageId="searchInputPage"
          p:formClass="org.kuali.student.enrollment.type.form.TypeValidationForm">
        <property name="header">
            <bean parent="Uif-HeaderOne" p:headerText="Verify Types" p:render="false"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>

        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-enroll/css/acal.css</value>
            </list>
        </property>
        <property name="items">
            <list>
                 <ref bean ="KS-TypeVerificationPage"></ref>
            </list>
        </property>
    </bean>

    <bean id="KS-TypeVerificationPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="validateTypeEntryPage">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="TYpe Verification" />
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KS-CourseOfferingManagement-CourseOfferingListSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="KS-CourseOfferingManagement-CourseOfferingListSection" parent="Uif-TableCollectionSection" p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.type.dto.TypeVerificationBasics" />
        <property name="propertyName" value="equivalences" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="true" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 1, 'asc' ]]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField"
                      p:label="Type Key"
                      p:propertyName="typeKey"/>
                <bean parent="Uif-DataField"
                      p:label="Service"
                      p:propertyName="service"/>
                <bean parent="Uif-DataField"
                      p:label="Constant"
                      p:propertyName="constant"/>
                <!--<bean parent="Uif-DataField"-->
                <!--p:label="STATUS"-->
                <!--p:propertyName="stateKey"/>-->
            </list>
        </property>
    </bean>
</beans>