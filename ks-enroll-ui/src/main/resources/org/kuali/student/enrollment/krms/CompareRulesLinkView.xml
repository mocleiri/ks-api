    <bean id="KRMS-CompareRules-View" parent="KSFormView">
        <property name="id" value="krmsCompareRulesView"/>
        <property name="headerText" value="Compare CLU and CO Rules"/>
        <property name="formClass" value="org.kuali.student.enrollment.class1.krms.dto.RuleEditor"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class1.krms.service.impl.RuleViewHelperServiceImpl"/>
