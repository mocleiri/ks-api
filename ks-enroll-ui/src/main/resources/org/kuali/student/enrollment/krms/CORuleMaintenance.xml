<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KSCO-AgendaManagement-View" parent="KRMS-AgendaManagement-View">
        <property name="viewName" value="COAgendaManagementView"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.enrollment.class1.krms.service.impl.CORuleViewHelperServiceImpl"/>
        <property name="dialogs">
            <list merge="true">
                <bean id="courseRangeLookup" parent="KRMS-CourseRangeResult-Lookup"/>
            </list>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Home"/>
                    <property name="url.href" value="@{#ConfigProperties['application.url']}/portal.do"/>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Enrollment"/>
                    <property name="url.viewId" value="enrollmentHomeView"/>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Manage Course Offerings"/>
                    <property name="url.viewId" value="courseOfferingManagementView"/>
                    <property name="url.controllerMapping" value="courseOfferingManagement"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CORuleWrapperMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
        <property name="maintainableClass" value="org.kuali.student.enrollment.class1.krms.service.impl.CORuleEditorMaintainableImpl"/>
        <property name="documentTypeName" value="CORuleMaintenanceDocument"/>
        <property name="businessRulesClass" value="org.kuali.rice.krms.util.RuleEditorBusRule" />
        <property name="lockingKeys">
            <list>
                <value>refObjectId</value>
            </list>
        </property>
    </bean>

    <bean id="EnrolRuleManagementWrapper" parent="RuleManagementWrapper-parentBean">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.EnrolRuleManagementWrapper"/>
    </bean>

    <bean id="CORuleManagementWrapper" parent="EnrolRuleManagementWrapper">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
    </bean>

    <bean id="EnrolRuleEditor" parent="RuleEditor-parentBean">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.EnrolRuleEditor"/>
    </bean>

    <bean id="KRMS-RuleEdit-Links" parent="Uif-LinkGroup" p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}">
        <property name="linkSeparator" value=" | "/>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Canonical" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="Compare CLU and CO Rules"/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Edit Rule" p:methodToCall="goToRuleView"/>
                <bean parent="Uif-ActionLink" p:actionLabel="Delete Rule" p:methodToCall="deleteRule"/>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RuleView-Links" parent="Uif-LinkGroup" p:render="@{!#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}">
        <property name="linkSeparator" value=" | "/>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Canonical" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="Compare CLU and CO Rules"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-RulePreview-Links" parent="Uif-LinkGroup">
        <property name="linkSeparator" value=" | "/>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Canonical" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="Compare CLU and CO Rules"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-EditRule-ToolbarSection" parent="KS-Uif-HorizontalBoxSection-ToolbarSection">
        <property name="onDocumentReadyScript" value="loadControlsInit();"/>
        <property name="items">
            <list>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-AddButton"/>
                            <ref bean="KRMS-RuleEditorView-EditButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-GroupButton"/>
                            <ref bean="KRMS-RuleEditorView-LeftButton"/>
                            <ref bean="KRMS-RuleEditorView-RightButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-UpButton"/>
                            <ref bean="KRMS-RuleEditorView-DownButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-CopyButton"/>
                            <ref bean="KRMS-RuleEditorView-CutButton"/>
                            <ref bean="KRMS-RuleEditorView-PasteButton"/>
                            <ref bean="KRMS-RuleEditorView-DeleteButton"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

</beans>
