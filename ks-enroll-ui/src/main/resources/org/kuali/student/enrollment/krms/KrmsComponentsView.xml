<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KrmsComponents-ManageView" parent="KSFormView">
        <property name="id" value="manageKrmsComponentsView"/>
        <property name="headerText" value="KS KRMS Custom Components"/>
        <property name="formClass" value="org.kuali.student.enrollment.class1.krms.form.KrmsComponentsForm"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class1.krms.service.impl.RuleStudentViewHelperServiceImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="items">
            <list>
                <ref bean="KRMS-Clu-Components-Section" />
                <ref bean="KRMS-Org-Components-Section" />
                <ref bean="KRMS-Tree-Section"/>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>
    </bean>

    <bean id="KRMS-Clu-Components-Section" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Clu Components"/>
                <ref bean="KRMS-SingleCourse-SuggestField" />
                <ref bean="KRMS-MultiCourse-Section" />
                <ref bean="KRMS-GPA-Field" />
                <ref bean="KRMS-TestScore-Field" />
                <ref bean="KRMS-TestName-Field" />
                <ref bean="KRMS-Grade-Section" />
            </list>
        </property>
    </bean>

    <bean id="KRMS-Org-Components-Section" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Organizational Components"/>
                <ref bean="KRMS-Department-Field" />
                <ref bean="KRMS-Administering-Org-Field" />
            </list>
        </property>
    </bean>

    <!--Generic Components-->
    <bean id="proposition-group" parent="Uif-VerticalFieldGroup" >
    </bean>

    <bean id="KRMS-Integer-ConstantValue-Parent" parent="Uif-InputField" p:propertyName="proposition.proposition.parameters[0].value" p:showLabel="true" p:label="Value" p:maxLength="255">
        <property name="control">
            <bean parent="Uif-TextControl" p:style="margin-top:null 2px;" p:watermarkText="Enter a Literal Value" />
        </property>
        <property name="validCharactersConstraint">
            <bean parent="IntegerPatternConstraint" p:allowNegative="false"/>
        </property>
    </bean>

    <!-- Integer constant Instance components -->
    <bean id="KRMS-NumberOfCourses-ConstantValue" parent="KRMS-Integer-ConstantValue-Parent" p:label="Number of Courses" />

    <bean id="KRMS-RepeatCourseNum-ConstantValue" parent="KRMS-Integer-ConstantValue-Parent" p:label="Number of Repeats" />

    <bean id="KRMS-Credits-ConstantValue" parent="KRMS-Integer-ConstantValue-Parent" p:label="Credits" />

    <bean id="KRMS-Minutes-ConstantValue" parent="KRMS-Integer-ConstantValue-Parent" p:label="Minutes" />

    <bean id="KRMS-CreditHours-ConstantValue" parent="KRMS-Integer-ConstantValue-Parent" p:label="Credit Hours" />

    <!-- TextArea component -->
    <bean id="KRMS-FreeForm-ConstantValue" parent="Uif-InputField" p:propertyName="proposition.proposition.parameters[0].value" p:showLabel="true" p:label="Text">
        <property name="control">
            <bean parent="Uif-TextAreaControl" />
        </property>
    </bean>

    <bean id="KRMS-SingleCourse-SuggestField-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.proposition.termParameter" p:label="Course">
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="displayName"/>
                <property name="templateOptions" value="minLength:1,delay:0"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <property name="queryMethodToCall" value="getCourseNamesForSuggest"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="KRMS-SingleCourse-SuggestField" parent="KRMS-SingleCourse-SuggestField-Parent" />

    <bean id="KRMS-MultiCourse-Section-Parent" parent="Uif-VerticalBoxSection" p:headerText="Courses">
        <property name="header.style" value="font-size:12px;"/>
        <property name="instructionalText" value="Add courses, course sets, or course ranges to your course set. You may add any combination of courses, dynamic course ranges, or Course sets." />
        <property name="items">
            <list>
                <ref bean="KRMS-MultiCourse-Type-Field" />
                <ref bean="KRMS-MultiCourse-AddToList-Section" />
            </list>
        </property>
    </bean>
    <bean id="KRMS-MultiCourse-Section" parent="KRMS-MultiCourse-Section-Parent" />

    <bean id="KRMS-MultiCourse-Type-Field-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.multipleCourseType" p:label="Add a course, course set, or course range">
        <property name="control">
            <bean parent="Uif-DropdownControl"/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.CourseTypeValuesFinder"/>
        </property>
    </bean>
    <bean id="KRMS-MultiCourse-Type-Field" parent="KRMS-MultiCourse-Type-Field-Parent" />

    <bean id="KRMS-MultiCourse-AddToList-Section-Parent" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-TableCollectionSection">
                    <property name="propertyName" value="proposition.proposition.termParameterList[0].parameter" />
                    <property name="collectionObjectClass"
                              value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="renderAddBlankLineButton" value="true" />
                    <property name="addLinePlacement" value="BOTTOM" />
                    <property name="layoutManager.cssClasses" value=""/>
                    <property name="layoutManager.richTable.render" value="false" />
                    <property name="layoutManager.actionFieldPrototype.label" value=""/>
                    <property name="header">
                        <bean parent="Uif-HeaderThree"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField">
                                <property name="propertyName" value="code"/>
                                <property name="label" value="Approved Courses"/>
                                <property name="suggest">
                                    <bean parent="Uif-Suggest">
                                        <property name="render" value="true"/>
                                        <property name="sourcePropertyName" value="displayName"/>
                                        <property name="templateOptions" value="minLength:1,delay:0"/>
                                        <property name="suggestQuery">
                                            <bean parent="Uif-AttributeQueryConfig">
                                                <property name="queryMethodToCall" value="getCourseNamesForSuggest"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                                <!--<property name="quickfinder.viewName" value="KS-KitchenSink-Lookup-TermInfo"/>-->
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="code" value="code"/>
                                    </map>
                                </property>
                                <property name="quickfinder.quickfinderAction">
                                    <bean parent="Uif-ActionLink">
                                        <property name="methodToCall" value="performLookup"/>
                                        <property name="actionLabel" value="Advanced Search"/>
                                        <property name="style" value="display:block"/>
                                    </bean>
                                </property>
                                <property name="quickfinder.lightBoxLookup">
                                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                    <!--<property name="lineActions">
                        <list>
                            <bean parent="Uif-ActionLink">
                                <property name="methodToCall" value="deleteLine"/>
                                <property name="loadingMessageText" value="Removing line..."/>
                                <property name="skipInTabOrder" value="true"/>
                                <property name="actionImage">
                                    <bean parent="Uif-Image">
                                        <property name="source" value="../ks-enroll-ksink/images/delete.png"/>
                                    </bean>
                                </property>
                            </bean>
                        </list>
                    </property>-->
                    <property name="lineActions">
                        <list>
                            <bean parent="Uif-ActionLink">
                                <property name="methodToCall" value="deleteLine"/>
                                <property name="actionLabel" value="delete"/>
                            </bean>
                        </list>
                    </property>
                    <property name="addBlankLineAction">
                        <bean parent="Uif-SecondaryActionButton-Small">
                            <property name="methodToCall" value="addBlankLine"/>
                            <property name="actionEvent" value="addBlankLine"/>
                            <property name="id" value="uif-addBlankLine"/>
                            <property name="actionLabel" value="Add to list"/>
                            <property name="actionImagePlacement" value="LEFT"/>
                            <property name="actionImage">
                                <bean parent="Uif-Image" p:source="../ks-enroll-ksink/images/plus_15px.png"/>
                            </property>
                            <property name="style" value="margin-top:5px;"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="KRMS-MultiCourse-AddToList-Section" parent="KRMS-MultiCourse-AddToList-Section-Parent" />

    <!--<bean id="approvedCoursesComponent" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="singleCourse-parent" p:label="Approved Courses" />
                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Add to list" p:style="margin-top:15px;"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" />
            </list>
        </property>
    </bean>-->

    <bean id="KRMS-GPA-Field-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.proposition.termParameter" p:label="GPA" p:minLength="3" p:maxLength="3">
        <property name="control">
            <bean parent="Uif-TextControl"/>
        </property>
        <property name="validCharactersConstraint">
            <bean parent="FixedPointPatternConstraint" p:precision="2" p:scale="1" p:allowNegative="false"/>
        </property>
    </bean>
    <bean id="KRMS-GPA-Field" parent="KRMS-GPA-Field-Parent" />

    <bean id="KRMS-OrgDepartment-Field-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.proposition.termParameter" p:required="true">
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="displayName"/>
                <property name="templateOptions" value="minLength:1,delay:0"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <property name="queryMethodToCall" value="getOrgDepartmentForSuggest"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.DepartmentInfo"/>
        <property name="quickfinder.quickfinderAction">
            <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
        </property>
        <property name="quickfinder.lightBoxLookup">
            <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
        </property>
    </bean>

    <bean id="KRMS-Department-Field" parent="KRMS-OrgDepartment-Field-Parent" p:label="Department" >
        <property name="quickfinder.fieldConversions">
            <map>
                <entry key="longName" value="orgDepartment"/>
            </map>
        </property>
    </bean>

    <bean id="KRMS-Administering-Org-Field" parent="KRMS-OrgDepartment-Field-Parent" p:label="Organization">
        <property name="quickfinder.fieldConversions">
            <map>
                <entry key="longName" value="administeringOrg"/>
            </map>
        </property>
    </bean>

    <bean id="KRMS-TestScore-Field-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.proposition.termParameter" p:label="Test Score" p:maxLength="6">
        <property name="control">
            <bean parent="Uif-TextControl" />
        </property>
        <property name="validCharactersConstraint">
            <bean parent="IntegerPatternConstraint" />
        </property>
    </bean>
    <bean id="KRMS-TestScore-Field" parent="KRMS-TestScore-Field-Parent" />

    <bean id="KRMS-TestName-Field-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.proposition.termParameter" p:label="Tests">
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="displayName"/>
                <property name="templateOptions" value="minLength:1,delay:0"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <property name="queryMethodToCall" value="getTestNamesForSuggest"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.TestSetInfo"/>
        <property name="quickfinder.fieldConversions">
            <map>
                <entry key="name" value="tests"/>
            </map>
        </property>
        <property name="quickfinder.quickfinderAction">
            <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
        </property>
        <property name="quickfinder.lightBoxLookup">
            <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
        </property>
    </bean>
    <bean id="KRMS-TestName-Field" parent="KRMS-TestName-Field-Parent" />

    <bean id="KRMS-GradeScale-Field-Parent" parent="Uif-InputField-LabelTop" p:propertyName="proposition.gradeScale" p:label="Grade">
        <property name="control">
            <bean parent="Uif-VerticalRadioControl" />
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.GradeScaleValuesFinder" />
        </property>
    </bean>
    <bean id="KRMS-GradeScale-Field" parent="KRMS-GradeScale-Field-Parent" />

    <bean id="KRMS-GradeValues-Field-Parent" parent="Uif-InputField" p:propertyName="proposition.proposition.termParameter" p:refreshWhenChangedPropertyNames="#np.proposition.gradeScale">
        <property name="control">
            <bean parent="Uif-DropdownControl"/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.GradeValuesKeyFinder" />
        </property>
    </bean>
    <bean id="KRMS-GradeValues-Field" parent="KRMS-GradeValues-Field-Parent" />

    <bean id="KRMS-Grade-Section" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                 <ref bean="KRMS-GradeScale-Field" />
                 <ref bean="KRMS-GradeValues-Field" />
            </list>
        </property>

    </bean>

    <bean id="KRMS-Tree-Section" parent="Uif-TreeSection">
        <property name="headerText" value="Basic String Data tree"/>
        <property name="instructionalText" value="Data Tree"/>
        <property name="propertyName" value="tree1"/>
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <bean parent="Uif-VerticalBoxGroup" p:style="margin-left: 2em;">
                        <property name="items">
                            <list>
                                <bean parent="Uif-InputField-LabelTop"
                                      p:propertyName="data" p:label="Course">
                                    <property name="suggest">
                                        <bean parent="Uif-Suggest">
                                            <property name="render" value="true"/>
                                            <property name="sourcePropertyName" value="displayName"/>
                                            <property name="templateOptions" value="minLength:1,delay:0"/>
                                            <property name="suggestQuery">
                                                <bean parent="Uif-AttributeQueryConfig">
                                                    <property name="queryMethodToCall" value="getCourseNamesForSuggest"/>
                                                </bean>
                                            </property>
                                        </bean>
                                    </property>
                                </bean>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

</beans>