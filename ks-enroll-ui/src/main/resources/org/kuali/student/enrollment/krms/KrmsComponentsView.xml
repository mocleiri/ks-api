<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KrmsComponents-ManageView" parent="KSFormView">
        <property name="id" value="manageKrmsComponentsView"/>
        <property name="headerText" value="KS KRMS Custom Components"/>
        <property name="formClass" value="org.kuali.student.enrollment.class1.krms.form.KrmsComponentsForm"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class1.krms.service.impl.KrmsComponentViewHelperServiceImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="items">
            <list>
                <ref bean="CluComponentsSection"/>
                <ref bean="OrgComponentsSection"/>
                <ref bean="ResultComponentsSection"/>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>

    </bean>

    <bean id="CluComponentsSection" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Clu Components"/>
                <ref bean="KRMS-SingleCourse-SuggestField"/>
                <ref bean="multipleCourse-Section"/>
                <ref bean="gpaComponent" />
                <ref bean="testScoreComponent" />
            </list>
        </property>
    </bean>

    <bean id="OrgComponentsSection" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Organizational Components"/>
                <ref bean="departmentComponent"/>
                <ref bean="administeringOrgComponent"/>
            </list>
        </property>
    </bean>

    <bean id="ResultComponentsSection" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Result Components"/>
            </list>
        </property>
    </bean>

    <bean id="parameter-parent" parent="Uif-InputField" p:propertyName="proposition.termParameter" p:render="true"
          p:style="margin-left: 12pt" p:showLabel="true" p:maxLength="40"/>

    <bean id="parameter-parent-dropdown" abstract="true" parent="parameter-parent">
        <property name="control">
            <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"
                  p:onChangeScript="ajaxSubmitForm('updateDescription', null, jQuery(this).data('submitdata'), null, null, null);"/>
        </property>
    </bean>

    <bean id="KRMS-SingleCourse-SuggestField-Parent" parent="Uif-InputField-LabelTop" p:propertyName="courseSuggest" p:label="Course">
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="displayName"/>
                <property name="templateOptions" value="minLength:1,delay:0"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <property name="queryMethodToCall" value="getCourseNamesForSuggest"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="KRMS-SingleCourse-SuggestField" parent="KRMS-SingleCourse-SuggestField-Parent" />

    <bean id="courseTypeSelector-parent" parent="Uif-InputField-LabelTop" p:propertyName="multipleCourseType" p:label="Add a course, course set, or course range">
        <property name="control">
            <bean parent="Uif-DropdownControl"/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.student.enrollment.class1.krms.keyvalues.CourseTypeValuesFinder"/>
        </property>
    </bean>
    <bean id="courseTypeSelector" parent="courseTypeSelector-parent" />

    <bean id="multipleCourse-Section" parent="Uif-VerticalBoxSection" p:headerText="Courses">
        <property name="instructionalText" value="Add courses, course sets, or course ranges to your course set. You may add any combination of courses, dynamic course ranges, or Course sets." />
        <property name="items">
            <list>
                <ref bean="courseTypeSelector" />
                <ref bean="addToList-Section" />
            </list>
        </property>
    </bean>

    <bean id="addToList-Section" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-TableCollectionSection">
                    <property name="propertyName" value="multipleCourses"/>
                    <property name="collectionObjectClass"
                              value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="renderAddBlankLineButton" value="true" />
                    <property name="addLinePlacement" value="BOTTOM" />
                    <property name="layoutManager.cssClasses" value=""/>
                    <property name="layoutManager.richTable.render" value="false" />
                    <property name="layoutManager.actionFieldPrototype.label" value=""/>
                    <property name="header">
                        <bean parent="Uif-HeaderThree"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField">
                                <property name="propertyName" value="code"/>
                                <property name="label" value="Approved Courses"/>
                                <property name="suggest">
                                    <bean parent="Uif-Suggest">
                                        <property name="render" value="true"/>
                                        <property name="sourcePropertyName" value="displayName"/>
                                        <property name="templateOptions" value="minLength:1,delay:0"/>
                                        <property name="suggestQuery">
                                            <bean parent="Uif-AttributeQueryConfig">
                                                <property name="queryMethodToCall" value="getCourseNamesForSuggest"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                                <!--<property name="quickfinder.viewName" value="KS-KitchenSink-Lookup-TermInfo"/>-->
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="code" value="code"/>
                                    </map>
                                </property>
                                <property name="quickfinder.quickfinderAction">
                                    <bean parent="Uif-ActionLink">
                                        <property name="methodToCall" value="performLookup"/>
                                        <property name="actionLabel" value="Advanced Search"/>
                                        <property name="style" value="display:block"/>
                                    </bean>
                                </property>
                                <property name="quickfinder.lightBoxLookup">
                                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                    <!--<property name="lineActions">
                        <list>
                            <bean parent="Uif-ActionLink">
                                <property name="methodToCall" value="deleteLine"/>
                                <property name="loadingMessageText" value="Removing line..."/>
                                <property name="skipInTabOrder" value="true"/>
                                <property name="actionImage">
                                    <bean parent="Uif-Image">
                                        <property name="source" value="../ks-enroll-ksink/images/delete.png"/>
                                    </bean>
                                </property>
                            </bean>
                        </list>
                    </property>-->
                    <property name="lineActions">
                        <list>
                            <bean parent="Uif-ActionLink">
                                <property name="methodToCall" value="deleteLine"/>
                                <property name="actionLabel" value="delete"/>
                            </bean>
                        </list>
                    </property>
                    <property name="addBlankLineAction">
                        <bean parent="Uif-SecondaryActionButton-Small">
                            <property name="methodToCall" value="addBlankLine"/>
                            <property name="actionEvent" value="addBlankLine"/>
                            <property name="id" value="uif-addBlankLine"/>
                            <property name="actionLabel" value="Add another item"/>
                            <property name="actionImagePlacement" value="LEFT"/>
                            <property name="actionImage">
                                <bean parent="Uif-Image" p:source="../ks-enroll-ksink/images/plus_15px.png"/>
                            </property>
                            <property name="style" value="margin-top:5px;"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--<bean id="approvedCoursesComponent" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="singleCourse-parent" p:label="Approved Courses" />
                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Add to list" p:style="margin-top:15px;"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" />
            </list>
        </property>
    </bean>-->

    <bean id="gpaComponent" parent="Uif-InputField-LabelTop" p:propertyName="gpa" p:label="GPA" p:minLength="3" p:maxLength="3">
        <property name="control">
            <bean parent="Uif-TextControl"/>
        </property>
        <property name="validCharactersConstraint">
            <bean parent="FixedPointPatternConstraint" p:precision="2" p:scale="1" p:allowNegative="false"/>
        </property>
    </bean>

    <bean id="department-parent" parent="Uif-InputField-LabelTop" >
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="displayName"/>
                <property name="templateOptions" value="minLength:1,delay:0"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <property name="queryMethodToCall" value="getOrgDepartmentForSuggest"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.DepartmentInfo"/>
        <property name="quickfinder.quickfinderAction">
            <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
        </property>
        <property name="quickfinder.lightBoxLookup">
            <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
        </property>
    </bean>

    <bean id="departmentComponent" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="department-parent" p:label="Department" p:propertyName="orgDepartment" p:required="true">
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="longName" value="orgDepartment"/>
                                    </map>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="administeringOrgComponent" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="department-parent" p:label="Organization" p:propertyName="administeringOrg" p:required="true">
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="longName" value="administeringOrg"/>
                                    </map>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="testNameComponent-parent" parent="Uif-InputField-LabelTop" p:propertyName="tests" p:label="Tests">
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="displayName"/>
                <property name="templateOptions" value="minLength:1,delay:0"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <property name="queryMethodToCall" value="getTestNamesForSuggest"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.TestSetInfo"/>
        <property name="quickfinder.fieldConversions">
            <map>
                <entry key="name" value="tests"/>
            </map>
        </property>
        <property name="quickfinder.quickfinderAction">
            <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
        </property>
        <property name="quickfinder.lightBoxLookup">
            <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
        </property>
    </bean>
    <bean id="testNameComponent" parent="testNameComponent-parent" />

    <bean id="testScoreComponent" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop" p:propertyName="testScore" p:label="Test Score" p:maxLength="6">
                    <property name="control">
                        <bean parent="Uif-TextControl" />
                    </property>
                    <property name="validCharactersConstraint">
                        <bean parent="IntegerPatternConstraint" />
                    </property>
                </bean>
                <bean parent="testNameComponent" />
            </list>
        </property>
    </bean>

</beans>