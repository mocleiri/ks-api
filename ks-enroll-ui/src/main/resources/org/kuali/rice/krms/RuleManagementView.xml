<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <bean id="KRMS-Rules-ManageSection" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>

                <bean parent="Uif-PageHeader" p:headerText="@{#dp.cluDescription}"/>

                <bean id="KRMS-RuleView-Section" parent="KRMS-VerticalBoxSection" p:style="max-width: 54em;">
                    <property name="headerText" value="@{#dp.ruleEditor.ruleTypeInfo.description}"/>
                    <property name="header.rightGroup">
                        <bean parent="Uif-HeaderRightGroup">
                            <property name="items">
                                <list>
                                    <ref bean="KRMS-RulePreview-Links"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="instructionalText" value="@{#dp.ruleEditor.ruleTypeInfo.instruction}"/>
                </bean>

                <bean id="KRMS-RuleEdit-TabSection" parent="Uif-TabSection">
                    <property name="forceSessionPersistence" value="true"/>
                    <property name="items">
                        <list>
                            <bean parent="KRMS-EditWithObject-EditSection"/>
                            <bean parent="KRMS-EditWithLogic-EditSection"/>
                        </list>
                    </property>
                    <property name="tabsWidget">
                        <bean parent="Uif-Tabs">
                            <property name="templateOptions">
                                <map>
                                    <entry key="selected" value="0"/>
                                    <entry key="select" value="function(event, ui) {ajaxCallOnTabSelect(event, ui);}"/>
                                </map>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>

    </bean>

    <bean id="KRMS-EditWithObject-EditSection" parent="Uif-VerticalBoxSection"
          p:headerText="Edit Rule" p:header.render="false">
        <property name="items">
            <list>
                <bean parent="KRMS-EditWithObject-EditGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KRMS-EditWithLogic-EditSection" parent="Uif-VerticalBoxSection"
          p:headerText="Edit Rule Logic" p:header.render="false">
        <property name="validationMessages.displayMessages" value="true"/>
        <property name="items">
            <list>
                <ref bean="KRMS-EditWithLogic-EditGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RulePreview-Links" parent="Uif-LinkGroup">
        <property name="linkSeparator" value=" | "/>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare Rules" p:methodToCall="compareRules"/>
            </list>
        </property>
    </bean>

    <bean id="propositionGroup" parent="Uif-GridGroup">
        <property name="headerText" value="Rule"/>
    </bean>

    <bean id="KRMS-VerticalBoxSubSection" parent="Uif-VerticalBoxSubSection">
        <property name="header">
            <bean parent="Uif-SubSectionHeader">
                <property name="cssClasses">
                    <list merge="true">
                        <value>krms-rulesubsection</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KRMS-VerticalBoxSection" parent="Uif-VerticalBoxSection">
        <property name="header">
            <bean parent="Uif-SectionHeader">
                <property name="cssClasses">
                    <list merge="true">
                        <value>krms-rulesection</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <!-- View only Tree -->
    <bean id="KRMS-Tree-parent" parent="Uif-Tree">
        <property name="template" value="/ks-enroll/ftl/rulePreviewTree.ftl"/>
        <property name="templateName" value="uif_rulePreviewTree"/>
        <property name="templateOptions">
            <map>
                <entry key="themes" value="{'theme' : 'viewrule', 'dots' : 'true', 'icons' : 'false'}"/>
                <entry key="plugins" value="[ 'themes','html_data' ]"/>
            </map>
        </property>
    </bean>
    <bean id="KRMS-Tree" parent="KRMS-Tree-parent"/>

    <bean id="KRMS-Tree-Section-parent" parent="Uif-TreeSection">
        <property name="template" value="/ks-enroll/ftl/ruleTreeGroup.ftl"/>
        <property name="templateName" value="uif_ruleTreeGroup"/>
        <property name="tree">
            <bean parent="KRMS-Tree"/>
        </property>
    </bean>
    <bean id="KRMS-Tree-Section" parent="KRMS-Tree-Section-parent"/>

    <bean id="KRMS-ViewTree-Section-parent" parent="KRMS-Tree-Section" class="org.kuali.rice.krms.util.ViewTreeGroup">
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">

                    <bean parent="Uif-StackedCollectionGroup" p:style="width: 400px; padding: 0;">
                        <property name="layoutManager">
                            <bean parent="Uif-StackedCollectionLayout-WithBoxItems">
                                <property name="lineGroupPrototype">
                                    <bean parent="Uif-CollectionHorizontalBoxItem">
                                        <property name="cssClasses">
                                            <list merge="true">
                                                <value>krms-stackedPreviewItem</value>
                                            </list>
                                        </property>
                                        <property name="renderFooter" value="false"/>
                                    </bean>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>krms-stackedCollectionLayout</value>
                                    </list>
                                </property>
                            </bean>
                        </property>
                        <property name="lineActions">
                            <list>
                            </list>
                        </property>
                        <property name="renderAddLine" value="false"/>
                        <property name="propertyName" value="listItems"/>
                        <property name="collectionObjectClass" value="java.lang.String"/>
                        <property name="items">
                            <list>
                                <bean parent="Uif-MessageField" p:messageText="@{#line}"
                                      p:style="width: 290px; margin: 0px;"/>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="layoutManager">
            <bean parent="Uif-GridLayoutBase"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>krms-ruleViewTreeSection</value>
            </list>
        </property>
    </bean>
    <bean id="KRMS-ViewTree-Section" parent="KRMS-ViewTree-Section-parent"/>

    <bean id="KRMS-View-Section-parent" parent="KRMS-ViewTree-Section">
        <property name="propertyName" value="viewTree"/>
    </bean>
    <bean id="KRMS-View-Section" parent="KRMS-View-Section-parent"/>

    <bean id="KRMS-CompareTree-Section-parent" parent="KRMS-Tree-Section" p:style="width: 800px;">
        <property name="propertyName" value="compareTree"/>
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <bean parent="Uif-GroupBase" p:style="margin-left: 2em;">
                        <property name="layoutManager">
                            <bean parent="Uif-BoxLayoutBase" p:style="display: table; width: 750px; margin: 0px;"/>
                        </property>
                        <property name="items">
                            <list>
                                <bean parent="Uif-MessageField" p:messageText="@{#np.original}"
                                      p:style="display: table-cell; width: 350px; margin: 0px;"/>
                                <bean parent="Uif-MessageField" p:messageText="@{#np.compared}"
                                      p:style="display: table-cell; width: 350px; margin: 0px;"/>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="KRMS-CompareTree-Section" parent="KRMS-CompareTree-Section-parent"/>

    <!--Compare Link-->
    <bean id="KRMS-CompareRule-parent" parent="Uif-VerticalBoxSection" p:style="width: 850px;">
        <property name="hidden" value="true"/>
        <property name="headerText" value="Compare CLU and CO Requisites"/>
        <property name="items">
            <list>
                <bean parent="KRMS-VerticalBoxSection">
                    <property name="headerText" value="@{#dp.compareLightBoxHeader}"/>
                    <property name="items">
                        <list>
                            <ref bean="KRMS-CompareTree-Section"/>
                        </list>
                    </property>

                    <property name="footer">
                        <bean parent="Uif-FooterBase">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-ActionLink" p:actionLabel="Cancel"
                                          p:actionScript="jQuery.fancybox.close();"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="KRMS-CompareRule" parent="KRMS-CompareRule-parent"/>

    <bean id="KRMS-Preview-Section-parent" parent="KRMS-Tree-Section">
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <bean id="KRMS-Edit-Section-Parent" parent="Uif-VerticalBoxGroup">
                        <property name="items">
                            <list>
                                <bean parent="Uif-HorizontalBoxGroup">
                                    <property name="items">
                                        <list>
                                            <bean parent="Uif-MessageField" p:messageText="@{#np.data}"
                                                  p:style="width: 290px; margin: 0px;" p:progressiveRender="#np.data != null"/>
                                            <bean parent="Uif-ActionLink" p:actionLabel="edit" p:align="right" p:methodToCall="getSelectedKey" p:progressiveRender="#np.data != null" >
                                                <property name="additionalSubmitData" value = "selectedKey:@{#np.key != null ? #np.key : -1}"/>
                                                <property name="toolTip">
                                                    <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                                                          p:tooltipContent="Edit Prerequisite Rule"/>
                                                </property>
                                                <property name="cssClasses">
                                                    <list merge="true">
                                                        <value>krms-edit-link</value>
                                                    </list>
                                                </property>
                                            </bean>
                                        </list>
                                    </property>
                                    <property name="cssClasses">
                                        <list merge="true">
                                            <value>krms-editVerticalBox</value>
                                        </list>
                                    </property>

                                </bean>
                                <bean parent="Uif-StackedCollectionGroup" p:style="width: 400px; padding: 0;">
                                    <property name="layoutManager">
                                        <bean parent="Uif-StackedCollectionLayout-WithBoxItems">
                                            <property name="lineGroupPrototype">
                                                <bean parent="Uif-CollectionHorizontalBoxItem">
                                                    <property name="cssClasses">
                                                        <list merge="true">
                                                            <value>krms-stackedPreviewItem</value>
                                                        </list>
                                                    </property>
                                                    <property name="renderFooter" value="false"/>
                                                </bean>
                                            </property>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>krms-stackedCollectionLayout</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </property>
                                    <property name="lineActions">
                                        <list>
                                        </list>
                                    </property>
                                    <property name="renderAddLine" value="false"/>
                                    <property name="propertyName" value="listItems" />
                                    <property name="collectionObjectClass" value="java.lang.String"/>
                                    <property name="items">
                                        <list>
                                            <bean parent="Uif-MessageField" p:messageText="@{#line}" p:style="width: 290px; margin: 0px;"/>
                                        </list>
                                    </property>
                                </bean>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>krms-ruleViewTreeSection</value>
            </list>
        </property>
    </bean>
    <bean id="KRMS-Preview-Section" parent="KRMS-Preview-Section-parent"/>

    <bean id="KRMS-PreviewTree-Section-parent" parent="KRMS-Preview-Section">
        <property name="propertyName" value="previewTree"/>
    </bean>
    <bean id="KRMS-PreviewTree-Section" parent="KRMS-PreviewTree-Section-parent"/>

</beans>