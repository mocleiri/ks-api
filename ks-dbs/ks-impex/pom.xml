<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-dbs</artifactId>
    <version>2.0.0-M7-SNAPSHOT</version>
  </parent>
  <artifactId>ks-impex</artifactId>
  <packaging>pom</packaging>
  <name>KS Impex</name>
  <description>Kuali Student Impex</description>
  <modules>
    <module>ks-impex-app-db</module>
    <module>ks-impex-rice-db</module>
    <module>ks-impex-bundled-db</module>
  </modules>
  <properties>
    <db.branch.qualifier>SANDBOX</db.branch.qualifier>
    <jdbc.source.db.base>KS_SOURCE_DB</jdbc.source.db.base>
    <oracle.source.dba.url>jdbc:oracle:thin:@oracle.ks.kuali.org:1521:ORACLE</oracle.source.dba.url>
    <jdbc.username>${jdbc.source.db.base}</jdbc.username>
    <jdbc.password>${jdbc.username}</jdbc.password>
    <impex.metainf.context>org.kuali.student.deploy.spring.DataMetaInfConfig</impex.metainf.context>
    <impex.data.resources>META-INF/${project.artifactId}-data.resources</impex.data.resources>
    <impex.metainf.outputFile>${project.build.outputDirectory}/${impex.data.resources}</impex.metainf.outputFile>
  </properties>
  <profiles>
    <profile>
      <!-- This profile builds the full KS database from the "system of record" set of Oracle sql files checked into SCM -->
      <id>source-db</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>spring-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>source-db-setup</id>
                <goals>
                  <goal>load</goal>
                </goals>
                <phase>validate</phase>
                <configuration>
                  <injectMavenProject>true</injectMavenProject>
                  <forceMojoExecution>true</forceMojoExecution>
                  <annotatedClass>org.kuali.common.maven.spring.SetSourceDbSchemaNameConfig</annotatedClass>
                </configuration>
              </execution>
              <execution>
                <id>source-db</id>
                <goals>
                  <goal>load</goal>
                </goals>
                <phase>initialize</phase>
                <configuration>
                  <propertySourcesConfig>org.kuali.student.deploy.spring.InitializeSourceDbMavenPropertySourceConfig</propertySourcesConfig>
                  <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerConfig</annotatedClass>
                  <forceMojoExecution>true</forceMojoExecution>
                  <removeExistingPropertySources>true</removeExistingPropertySources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <!-- Dump the db built from the Oracle SQL to disk -->
      <id>dump</id>
      <properties>
        <dump.rice.includes>KR.*</dump.rice.includes>
        <dump.ks.includes>KS.*</dump.ks.includes>
        <jdbc.url>${oracle.source.dba.url}</jdbc.url>
        <jdbc.dba.url>${jdbc.url}</jdbc.dba.url>
        <jdbc.username>${jdbc.source.db.username}</jdbc.username>
        <jdbc.dba.username>${jdbc.source.db.username}</jdbc.dba.username>

        <db.vendor>oracle</db.vendor>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>spring-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>source-db-setup</id>
                <phase>validate</phase>
                <goals>
                  <goal>load</goal>
                </goals>
                <configuration>
                  <injectMavenProject>true</injectMavenProject>
                  <forceMojoExecution>true</forceMojoExecution>
                  <annotatedClass>org.kuali.common.maven.spring.SetSourceDbSchemaNameConfig</annotatedClass>
                </configuration>
              </execution>
              <execution>
                <id>load</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>load</goal>
                </goals>
                <configuration>
                  <forceMojoExecution>true</forceMojoExecution>
                  <propertySourcesConfig>org.kuali.student.deploy.spring.ExportPropertyConfig</propertySourcesConfig>
                  <annotatedClass>org.kuali.student.deploy.spring.DbExportConfig</annotatedClass>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <!-- Load a db from the schema SQL + mpx files generated by Impex -->
      <id>db</id>
      <properties>
        <impex.import.artifactId>${project.artifactId}</impex.import.artifactId>
        <impex.import.schema>classpath:${project.groupId.path}/${project.artifactId}/${project.artifactId}-schema.xml</impex.import.schema>
        <impex.import.constraints>classpath:${project.groupId.path}/${project.artifactId}/${project.artifactId}-constraints-schema.xml</impex.import.constraints>
        <impex.import.data.list>${impex.data.resources}</impex.import.data.list>
        <impex.schema.location>${impex.import.schema}</impex.schema.location>
        <sql.schema.concurrent>impex.import.schema</sql.schema.concurrent>
        <sql.constraints.concurrent>impex.import.constraints</sql.constraints.concurrent>
        <sql.data.concurrent>impex.import.data.list</sql.data.concurrent>
        <sql.data.concurrent.trackProgressByUpdateCount>true</sql.data.concurrent.trackProgressByUpdateCount>
        <sql.execution.order>schema.concurrent,data.concurrent,constraints.concurrent</sql.execution.order>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>spring-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>load</id>
                <phase>initialize</phase>
                <goals>
                  <goal>load</goal>
                </goals>
                <configuration>
                  <forceMojoExecution>true</forceMojoExecution>
                  <propertySourcesConfig>org.kuali.common.jdbc.spring.JdbcMavenPropertySourceConfig</propertySourcesConfig>
                  <removeExistingPropertySources>true</removeExistingPropertySources>
                  <annotatedClasses>
                    <annotatedClass>org.kuali.common.impex.spring.MpxSupplierConfig</annotatedClass>
                    <annotatedClass>org.kuali.common.impex.spring.SchemaXmlSupplierConfig</annotatedClass>
                    <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerConfig</annotatedClass>
                  </annotatedClasses>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <!-- Add in the module specific dependencies -->
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-impex-rice-db</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-impex-app-db</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-impex-bundled-db</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.common</groupId>
                <artifactId>kuali-impex-producer</artifactId>
                <version>${kuali-impex.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>local</id>
      <properties>
        <properties.decrypt>false</properties.decrypt>
        <oracle.dba.username>system</oracle.dba.username>
        <oracle.dba.password>manager</oracle.dba.password>
        <oracle.dba.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.dba.url>
        <jdbc.url>${oracle.dba.url}</jdbc.url>
      </properties>
    </profile>
    <profile>
      <id>oracle</id>
      <properties>
        <db.vendor>oracle</db.vendor>
      </properties>
    </profile>
    <profile>
      <id>mysql</id>
      <properties>
        <db.vendor>mysql</db.vendor>
      </properties>
    </profile>
  </profiles>
</project>
