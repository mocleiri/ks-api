<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CourseUpdate" parent="CourseUpdate-parentBean" />

  <bean id="CourseUpdate-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.student.bo.CourseUpdate" />
    <property name="inquiryDefinition" >
      <ref bean="CourseUpdate-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="CourseUpdate-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="updateId" />
    <property name="objectLabel" value="Course Update" />

	<property name="relationships" >
      <list>
        <bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="courseTransient" />
          <property name="primitiveAttributes" >
            <list>
              <bean parent="PrimitiveAttributeDefinition"
                    p:sourceName="courseId"
                    p:targetName="courseId" />
            </list>
          </property>
          <!-- 
          <property name="supportAttributes" >
            <list>
               <bean parent="SupportAttributeDefinition"
                    p:sourceName="courseTitle"
                    p:targetName="courseTitle" />
              <bean parent="SupportAttributeDefinition"
                    p:sourceName="subjectArea"
                    p:targetName="subjectArea" />
            </list>
          </property>
          -->
        </bean>
      </list>
    </property>
 
    <property name="attributes" >
      <list>
        <ref bean="CourseUpdate-updateId" />
        <ref bean="CourseUpdate-courseId" />
        <ref bean="CourseUpdate-courseTitle" />
        <ref bean="CourseUpdate-courseCode" />
        <ref bean="CourseUpdate-subjectArea" />
       </list>
    </property>
  </bean>

<!-- Attribute Definitions -->
       
  <bean id="CourseUpdate-updateId" parent="CourseUpdate-updateId-parentBean" />

  <bean id="CourseUpdate-updateId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="updateId" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Update ID" />
    <property name="shortLabel" value="Update ID" />
    <property name="maxLength" value="9" />
    <property name="required" value="true" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>    
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
  </bean>

  <bean id="CourseUpdate-courseId" parent="CourseUpdate-courseId-parentBean" />

  <bean id="CourseUpdate-courseId-parentBean" abstract="true" parent="CourseTransient-courseId">
    <property name="name" value="courseId" />
    <property name="label" value="Course ID" />
  </bean>

  <bean id="CourseUpdate-courseCode" parent="CourseUpdate-courseCode-parentBean" />

  <bean id="CourseUpdate-courseCode-parentBean" abstract="true" parent="CourseTransient-courseCode">
    <property name="name" value="courseCode" />
    <property name="label" value="Course Code" />
  </bean>
   
  <bean id="CourseUpdate-courseTitle" parent="CourseUpdate-courseTitle-parentBean" />

  <bean id="CourseUpdate-courseTitle-parentBean" abstract="true" parent="CourseTransient-courseTitle">
    <property name="name" value="courseTitle" />
    <property name="label" value="Course Title" />
<!-- <property name="shortLabel" value="Course Title" />
    <property name="maxLength" value="100" />
    <property name="required" value="true"/>
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
-->
  </bean>
  
  <bean id="CourseUpdate-subjectArea" parent="CourseUpdate-subjectArea-parentBean" />

  <bean id="CourseUpdate-subjectArea-parentBean" abstract="true" parent="CourseTransient-subjectArea">
    <property name="name" value="subjectArea" />
    <property name="label" value="Subject Area" />
<!--     
    <property name="shortLabel" value="Subject Area" />
    <property name="maxLength" value="100" />
    <property name="required" value="true"/>
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
-->    
  </bean>


<!-- Business Object Inquiry Definition -->


  <bean id="CourseUpdate-inquiryDefinition" parent="CourseUpdate-inquiryDefinition-parentBean" />

  <bean id="CourseUpdate-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Course Update Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Course Update Inquiry" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="updateId" />
              <bean parent="FieldDefinition"
                    p:attributeName="courseId" />    
			  <bean parent="FieldDefinition"
              		p:attributeName="courseTitle" />   
        	  <bean parent="FieldDefinition"
                    p:attributeName="subjectArea" />   
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->
  <bean id="CourseUpdate-lookupDefinition" parent="CourseUpdate-lookupDefinition-parentBean" />

  <bean id="CourseUpdate-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Course Update Lookup" />

    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="updateId" />		 
        <bean parent="FieldDefinition"
              p:attributeName="courseId" />    
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="updateId" />
        <bean parent="FieldDefinition"
              p:attributeName="courseId" />        
        <bean parent="FieldDefinition"
              p:attributeName="courseTitle" />   
        <bean parent="FieldDefinition"
              p:attributeName="courseCode" />               
        <bean parent="FieldDefinition"
              p:attributeName="subjectArea" />   
      </list>
    </property>
  </bean>
</beans>
