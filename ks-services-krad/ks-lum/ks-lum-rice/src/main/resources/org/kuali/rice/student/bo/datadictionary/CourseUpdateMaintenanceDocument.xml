<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="CourseUpdateMaintenanceDocument" parent="CourseUpdateMaintenanceDocument-parentBean" />

  <bean id="CourseUpdateMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.student.bo.CourseUpdate" />
    <property name="maintainableClass" value="org.kuali.rice.student.maintenance.CourseUpdateMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CourseUpdateMaintenanceDocument-EditCourseUpdate" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>updateId</value>
      </list>
    </property>    

    <property name="documentTypeName" value="CourseUpdateMaintenanceDocument" />

    <property name="workflowAttributes">
    	<ref bean="CourseUpdateMaintenanceDocument-workflowAttributes" />
    </property>    
  </bean>

<!-- Maintenance Section Definitions -->
  <bean id="CourseUpdateMaintenanceDocument-EditCourseUpdate" parent="CourseUpdateMaintenanceDocument-EditCourseUpdate-parentBean" />

  <bean id="CourseUpdateMaintenanceDocument-EditCourseUpdate-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Course Title and Subject Area" />
    <property name="title" value="Edit Course Title and Subject Area" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="updateId"
              p:required="true"
              p:unconditionallyReadOnly="true" /> 
        <bean parent="MaintainableFieldDefinition"
              p:name="courseId"
              p:required="true" 
              p:unconditionallyReadOnly="true" />             
        <bean parent="MaintainableFieldDefinition"
              p:name="courseTitle"
              p:required="true"/>
        <bean parent="MaintainableFieldDefinition"
              p:name="courseCode"
              p:required="true"/>                                    
        <bean parent="MaintainableFieldDefinition"
              p:name="subjectArea"
              p:required="true"/> 
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="CourseUpdateMaintenanceDocument-workflowAttributes" parent="CourseUpdateMaintenanceDocument-workflowAttributes-parentBean" />
	
  <bean id="CourseUpdateMaintenanceDocument-workflowAttributes-parentBean" abstract="true" parent="WorkflowAttributes">    	
  </bean>
 </beans>