  <bean id="CourseInfoDto" parent="CourseInfoDto-parentBean"/>
  <bean id="CourseInfoDto-parentBean" abstract="true" parent="DataObjectEntry">
    <property name="objectClass" value="org.kuali.rice.student.dto.CourseInfoDto"/>
    <property name="titleAttribute" value="courseId"/>
    <property name="objectLabel" value="Course Info DTO"/>
    <property name="attributes">
      <list>
        <ref bean="CourseInfoDto-courseId"/>
        <ref bean="CourseInfoDto-courseTitle"/>
        <ref bean="CourseInfoDto-courseCode"/>
        <ref bean="CourseInfoDto-subjectArea"/>
      </list>
    </property>    
    <property name="primaryKeys">
      <list>
        <value>courseId</value>
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="CourseInfoDto-courseId" parent="CourseInfoDto-courseId-parentBean"/>
  <bean id="CourseInfoDto-courseId-parentBean" abstract="true" parent="AttributeDefinition">

    <!-- From Bonnie: do we need summary and description ?? -->
    <property name="summary" value="Course Id"/>    
    <property name="description" value="Course Id"/>

    <property name="name" value="courseId" />
    <property name="label" value="Course ID" />
    <property name="shortLabel" value="Course ID" />
<!--    <property name="forceUppercase" value="false"/> -->
    <property name="maxLength" value="100" />
    <property name="required" value="true"/>
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <!-- 
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
    -->
    <property name="controlField">
      <bean parent="TextControl" p:size="42"/>
    </property>    
  </bean>
  
  <bean id="CourseInfoDto-courseTitle" parent="CourseInfoDto-courseTitle-parentBean" />

  <bean id="CourseInfoDto-courseTitle-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="courseTitle" />
    <property name="label" value="Course Title" />
    <property name="shortLabel" value="Title" />
    <property name="maxLength" value="100" />
    <property name="required" value="true"/>
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="controlField">
      <bean parent="TextControl" p:size="42"/>
    </property> 
  </bean>
  
  <bean id="CourseInfoDto-courseCode" parent="CourseInfoDto-courseCode-parentBean" />

  <bean id="CourseInfoDto-courseCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="courseCode" />
    <property name="label" value="Course Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="100" />
    <property name="required" value="true"/>
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="false" />
    </property>
    <property name="controlField">
      <bean parent="TextControl" p:size="42"/>
    </property> 
  </bean>
  
  <bean id="CourseInfoDto-subjectArea" parent="CourseInfoDto-subjectArea-parentBean" />

  <bean id="CourseInfoDto-subjectArea-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="subjectArea" />
    <property name="label" value="Division / Subject Area" />
    <property name="shortLabel" value="Division" />
    <property name="maxLength" value="100" />
    <property name="required" value="true"/>
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="controlField">
      <bean parent="TextControl" p:size="42"/>
    </property> 
  </bean>

