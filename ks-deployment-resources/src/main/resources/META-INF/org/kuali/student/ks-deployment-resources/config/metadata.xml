<project>
  <context id="metainf">
    <context id="sql">
      <location value="${source.db.common}"/>
    </context>
  </context>
  <context id="source-db">
    <context id="initialize">
      <location value="${source.db.common}"/>
      <location value="${source.db.prefix}/initialize.properties"/>
    </context>
    <context id="dump">
      <location value="${source.db.common}"/>
      <location value="${source.db.dump}"/>
    </context>
    <context id="scm">
      <location value="${source.db.common}"/>
      <location value="${source.db.dump}"/>
      <location value="${source.db.prefix}/staging.properties"/>
      <location value="${source.db.prefix}/scm.properties"/>
    </context>
  </context>
  <context id="app-db">
    <context id="init">
      <context id="ks-impex-app-db">
        <location value="${app.db.common}"/>
        <location value="${db.app}"/>
      </context>
      <context id="ks-impex-bundled-db">
        <location value="${app.db.common}"/>
        <location value="${db.bundled}"/>
      </context>
      <context id="ks-impex-rice-db">
        <location value="${app.db.common}"/>
        <location value="${db.rice}"/>
      </context>
    </context>
  </context>
  <context id="deploy">
    <context id="ks-with-rice-bundled">
      <location value="${app.db.common}"/>
      <location value="${db.bundled}"/>
      <location value="${deploy.common}"/>
      <location value="${deploy.prefix}/ks-with-rice-bundled.properties"/>
    </context>
    <context id="ks-rice-standalone">
      <location value="${app.db.common}"/>
      <location value="${db.bundled}"/>
      <location value="${deploy.common}"/>
    </context>
    <context id="ks-with-rice-embedded">
      <location value="${app.db.common}"/>
      <location value="${db.bundled}"/>
      <location value="${deploy.common}"/>
    </context>
  </context>
</project>