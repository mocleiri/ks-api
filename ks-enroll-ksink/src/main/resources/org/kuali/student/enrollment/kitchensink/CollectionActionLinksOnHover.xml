<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!-- The Interesting Bits -->

    <bean id="KS-KitchenSink-CollectionActionLinksOnHover-View-Base" parent="KS-KitchenSink-FormView">
        <!--<property name="onDocumentReadyScript" value="ksCollectionActionLinksOnHover();"/>-->
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-krad/css/ks-krad-collection-actionLinksOnHover.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-krad/scripts/ks-krad-collection-actionLinksOnHover.js</value>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionActionLinksOnHover" parent="KS-KitchenSink-Collection-Base-ReadOnly">
        <!-- KS-KitchenSink-Collection-Base-ReadOnly is in KitchenSinkView.xml; parent="Uif-TableCollectionSection" -->
        <property name="layoutManager">
            <bean parent="Uif-TableCollectionLayout">
                <property name="cssClasses">
                    <list merge="true">
                        <value>uif-kskrad-collection-actionLinksOnHover</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>



    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-CollectionActionLinksOnHover-View"
          parent="KS-KitchenSink-CollectionActionLinksOnHover-View-Base">
        <property name="headerText" value="Collections"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:headerText="Collection Action Links On Hover">
                    <property name="items">
                        <list>
                            <bean parent="KS-KitchenSink-Page-Summary">
                                <property name="messageText">
                                    <value>
                                        A collection with action links that are hidden until the mouse hovers
                                        on the row.
                                    </value>
                                </property>
                            </bean>
                            <ref bean="KS-KitchenSink-CollectionActionLinksOnHover-Content"/>
                            <ref bean="KS-KitchenSink-CollectionActionLinksOnHover-Links"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--<bean id="KS-KitchenSink-CollectionActionLinksOnHover-Content" parent="Uif-TabSection" p:width="500px">-->
    <bean id="KS-KitchenSink-CollectionActionLinksOnHover-Content" parent="Uif-VerticalBoxSection"
          p:header.render="false" p:style="border:solid 1px black;margin-bottom:0;padding:1em 1em 0.5em 1em;">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-CollectionActionLinksOnHover-Section"/>
            </list>
        </property>
    </bean>

    <!-- Collection containers -->

    <bean id="KS-KitchenSink-CollectionActionLinksOnHover-View-Bare"
          parent="KS-KitchenSink-CollectionActionLinksOnHover-View-Base">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:header.render="false">
                    <property name="items">
                        <list>
                            <ref bean="KS-KitchenSink-CollectionActionLinksOnHover-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionActionLinksOnHover-Section" parent="KS-KitchenSink-VerticalBoxSection"
          p:headerText="Link fields" p:header.render="false">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-CollectionActionLinksOnHover"/>
            </list>
        </property>
    </bean>

    <!-- Links -->

    <bean id="KS-KitchenSink-CollectionActionLinksOnHover-Links" parent="KS-KitchenSink-Page-Links">
        <property name="items">
            <list>
                <bean parent="Uif-LinkField"
                      p:label="Page Configuration"
                      p:linkText="ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/CollectionActionLinksOnHover.xml" p:target="_blank"
                      p:href="https://svn.kuali.org/repos/student/enrollment/ks-enroll/trunk/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/CollectionActionLinksOnHover.xml"/>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD XML Configuration"
                                  p:linkText="UifGroupDefinitions.xml" p:target="_blank"
                                  p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifGroupDefinitions.xml"/>
                            <bean parent="Uif-MessageField"
                                  p:messageText="(Uif-TableCollectionSection)"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD Java Source"
                                  p:linkText="CollectionGroup.java" p:target="_blank"
                                  p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/container/CollectionGroup.java"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD Java API"
                                  p:linkText="CollectionGroup.html" p:target="_blank"
                                  p:href="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/container/CollectionGroup.html"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD Guide"
                                  p:linkText="Collection Groups" p:target="_blank"
                                  p:href="http://site.kuali.org/rice/2.2.0-M3/reference/html/KRAD_Guide.html#d6766e7731"/>
                        </list>
                    </property>
                </bean>
                <bean parent="KS-KitchenSink-Group-UimLinks">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="Widget-Only Links (UIM)"
                                  p:linkText="Collection Action Links On Hover" p:target="_blank"
                                  p:href="../kr-krad/kitchensink?viewId=KS-KitchenSink-CollectionActionLinksOnHover-View-Bare&amp;methodToCall=collection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>