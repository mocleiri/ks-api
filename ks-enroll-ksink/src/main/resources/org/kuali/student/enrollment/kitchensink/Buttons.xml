<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The Interesting Bits -->

    <bean id="KS-KitchenSink-Button-Primary" parent="Uif-PrimaryActionButton">
        <property name="actionLabel" value="Primary"/>
        <property name="actionScript" value="alert('click');"/>
    </bean>
    <bean id="KS-KitchenSink-Button-PrimarySmall" parent="Uif-PrimaryActionButton-Small">
        <property name="actionLabel" value="Primary Small"/>
        <property name="actionScript" value="alert('click');"/>
    </bean>
    <bean id="KS-KitchenSink-Button-Secondary" parent="Uif-SecondaryActionButton">
        <property name="actionLabel" value="Secondary"/>
        <property name="actionScript" value="alert('click');"/>
    </bean>
    <bean id="KS-KitchenSink-Button-SecondarySmall" parent="Uif-SecondaryActionButton-Small">
        <property name="actionLabel" value="Secondary Small"/>
        <property name="actionScript" value="alert('click');"/>
    </bean>
    <bean id="KS-KitchenSink-Button-SecondarySmallImage" parent="Uif-SecondaryActionButton-Small">
        <property name="actionLabel" value="Image Right"/>
        <property name="actionScript" value="alert('click');"/>
        <property name="actionImagePlacement" value="RIGHT"/>
        <property name="actionImage">
            <bean parent="Uif-Image">
                <property name="source" value="@{#ConfigProperties['krad.externalizable.images.url']}h2_expand-back-ks.png"/>
                <!-- using ConfigProperties sometimes throws a freemarker exception; if so use -->
                <!--<property name="source" value="../krad/images/h2_expand-back-ks.png"/>-->
            </bean>
        </property>
    </bean>
    <bean id="Uif-KsKrad-Button-ImageOnly-Example" parent="Uif-KsKrad-Button-ImageOnly">
        <!-- Uif-KsKrad-Button-ImageOnly defined in file ks-enroll-ui/../UifKradExtensionDefinitions.xml -->
        <property name="actionScript" value="alert('click');"/>
        <property name="imageSource" value="../ks-enroll-ksink/images/delete_16x16.png"/>
        <property name="imageSourceOnHover" value="../ks-enroll-ksink/images/delete2_16x16.png"/>
        <property name="title" value="Custom KS Image-Only Button"/>
    </bean>


    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-Buttons-View" parent="KS-KitchenSink-FormView">
        <property name="headerText" value="Button / Header Levels"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Buttons-Page">
                    <property name="headerText" value="Buttons"/>
                    <property name="footer">
                        <bean parent="Uif-VerticalBoxSection">
                            <property name="header.render" value="false"/>
                            <property name="style" value="margin-top:10px"/>
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message">
                                        <property name="style" value="margin-bottom:15px;font-size:125%"/>
                                        <property name="messageText">
                                            <value>
                                                Various button examples.  The final example is a custom class for
                                                image-only buttons, an extension of KRAD's secondary small button.
                                            </value>
                                        </property>
                                    </bean>
                                    <bean parent="KS-KitchenSink-Link-To-Source"
                                          p:href="https://svn.kuali.org/repos/student/enrollment/ks-enroll/trunk/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/Buttons.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-XML-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifElementDefinitions.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-Java-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/element/Action.java"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-API"
                                          p:href="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/element/Action.html"/>
                                    <bean parent="KS-KitchenSink-Link-To-Guide"
                                          p:href="http://site.kuali.org/rice/2.2.0-M3/reference/html/KRAD_Guide.html#d6766e6122"/>
                                    <bean parent="KS-KitchenSink-Link-To-Bare" />
                                    <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                                        <property name="items">
                                            <list>
                                                <bean parent="Uif-LinkField"
                                                      p:target="_blank" p:linkText="Primary Buttons (UIM)"
                                                      p:href="../kr-krad/kitchensink?viewId=KS-KitchenSink-Buttons-Primary-View-Bare&amp;methodToCall=start"/>
                                                <bean parent="Uif-LinkField"
                                                      p:target="_blank" p:linkText="Secondary Buttons (UIM)"
                                                      p:href="../kr-krad/kitchensink?viewId=KS-KitchenSink-Buttons-Secondary-View-Bare&amp;methodToCall=start"/>
                                            </list>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-Buttons-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Buttons-Page">
                    <property name="header.render" value="false"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-Buttons-Page" parent="KS-KitchenSink-Page">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:header.headerText="Default">
                                <property name="items">
                                    <list>
                                        <ref bean="KS-KitchenSink-Button-Primary"/>
                                        <ref bean="KS-KitchenSink-Button-PrimarySmall"/>
                                        <ref bean="KS-KitchenSink-Button-Secondary"/>
                                        <ref bean="KS-KitchenSink-Button-SecondarySmall"/>
                                        <ref bean="KS-KitchenSink-Button-SecondarySmallImage"/>
                                        <ref bean="Uif-KsKrad-Button-ImageOnly-Example"/>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSection" p:header.headerText="Disabled">
                                <property name="items">
                                    <list>
                                        <bean parent="KS-KitchenSink-Button-Primary" p:disabled="true"/>
                                        <bean parent="KS-KitchenSink-Button-PrimarySmall" p:disabled="true"/>
                                        <bean parent="KS-KitchenSink-Button-Secondary" p:disabled="true"/>
                                        <bean parent="KS-KitchenSink-Button-SecondarySmall" p:disabled="true"/>
                                        <bean parent="KS-KitchenSink-Button-SecondarySmallImage" p:disabled="true"/>
                                        <bean parent="Uif-KsKrad-Button-ImageOnly-Example" p:disabled="true"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- UIM-Only Primary Buttons -->

    <bean id="KS-KitchenSink-Buttons-Primary-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:header.render="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection" p:header.headerText="Default">
                                            <property name="items">
                                                <list>
                                                    <ref bean="KS-KitchenSink-Button-Primary"/>
                                                    <ref bean="KS-KitchenSink-Button-PrimaryImage"/>
                                                    <ref bean="KS-KitchenSink-Button-PrimarySmall"/>
                                                    <ref bean="KS-KitchenSink-Button-PrimarySmallImage"/>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-VerticalBoxSection" p:header.headerText="Disabled">
                                            <property name="items">
                                                <list>
                                                    <bean parent="KS-KitchenSink-Button-Primary" p:disabled="true"/>
                                                    <bean parent="KS-KitchenSink-Button-PrimaryImage" p:disabled="true"/>
                                                    <bean parent="KS-KitchenSink-Button-PrimarySmall" p:disabled="true"/>
                                                    <bean parent="KS-KitchenSink-Button-PrimarySmallImage" p:disabled="true"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-Button-PrimaryImage" parent="Uif-PrimaryActionButton"
          p:actionLabel="Image Left" p:actionScript="alert('click');" p:actionImagePlacement="LEFT">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll-ksink/images/plus_15px.png"/>
        </property>
    </bean>
    <bean id="KS-KitchenSink-Button-PrimarySmallImage" parent="Uif-PrimaryActionButton-Small"
          p:actionLabel="Image Left" p:actionScript="alert('click');" p:actionImagePlacement="LEFT">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll-ksink/images/plus_15px.png"/>
        </property>
    </bean>

    <!-- UIM-Only Secondary Buttons -->

    <bean id="KS-KitchenSink-Buttons-Secondary-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:header.render="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection" p:header.headerText="Default">
                                            <property name="items">
                                                <list>
                                                    <ref bean="KS-KitchenSink-Button-Secondary"/>
                                                    <ref bean="KS-KitchenSink-Button-SecondaryImage"/>
                                                    <ref bean="KS-KitchenSink-Button-SecondarySmall"/>
                                                    <ref bean="KS-KitchenSink-Button-SecondarySmallImage-Left"/>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-VerticalBoxSection" p:header.headerText="Disabled">
                                            <property name="items">
                                                <list>
                                                    <bean parent="KS-KitchenSink-Button-Secondary" p:disabled="true"/>
                                                    <bean parent="KS-KitchenSink-Button-SecondaryImage" p:disabled="true"/>
                                                    <bean parent="KS-KitchenSink-Button-SecondarySmall" p:disabled="true"/>
                                                    <bean parent="KS-KitchenSink-Button-SecondarySmallImage-Left" p:disabled="true"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-Button-SecondaryImage" parent="Uif-SecondaryActionButton"
          p:actionLabel="Image Left" p:actionScript="alert('click');" p:actionImagePlacement="LEFT">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll-ksink/images/plus_15px.png"/>
        </property>
    </bean>
    <bean id="KS-KitchenSink-Button-SecondarySmallImage-Left" parent="Uif-SecondaryActionButton-Small"
          p:actionLabel="Image Left" p:actionScript="alert('click');" p:actionImagePlacement="LEFT">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll-ksink/images/plus_15px.png"/>
        </property>
    </bean>

</beans>