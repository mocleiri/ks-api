<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The Interesting Bits -->

    <!-- NOTE: parent view/theme must include script file "ks-krad/scripts/ks-krad.js" for toggling -->

    <bean id="KS-KitchenSink-CollectionRowSelection" parent="KS-KitchenSink-Collection-Base">
        <!-- KS-KitchenSink-Collection-Base is in KitchenSinkView.xml; parent="Uif-TableCollectionSection" -->
        <property name="includeLineSelectionField" value="true"/>
        <property name="lineSelectPropertyName" value="selected"/>
        <!-- class "uif-kskrad-collection-selection" triggers javascript toggling -->
        <property name="cssClasses">
            <list merge="true">
                <value>uif-kskrad-collection-selection</value>
            </list>
        </property>
    </bean>


    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-CollectionRowSelection-View" parent="KS-KitchenSink-FormView">
        <property name="headerText" value="Collections"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionRowSelection-Page">
                    <property name="headerText" value="Collection Row Selection and Toggle"/>
                    <property name="footer">
                        <bean parent="Uif-VerticalBoxSection">
                            <property name="header.render" value="false"/>
                            <property name="style" value="margin-top:10px"/>
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message">
                                        <property name="style" value="margin-bottom:15px;font-size:125%"/>
                                        <property name="messageText">
                                            <value>
                                                This example shows how to add the selection checkbox to each row, and
                                                also how to add a checkbox to the selection header which toggles the
                                                row checkboxes on and off.
                                            </value>
                                        </property>
                                    </bean>
                                    <bean parent="KS-KitchenSink-Link-To-Source"
                                          p:href="https://svn.kuali.org/repos/student/enrollment/ks-enroll/trunk/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/CollectionRowSelection.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-XML-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifGroupDefinitions.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-Java-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/container/CollectionGroup.java"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-API"
                                          p:href="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/container/CollectionGroup.html"/>
                                    <bean parent="KS-KitchenSink-Link-To-Guide"
                                          p:href="http://site.kuali.org/rice/2.2.0-M3/reference/html/KRAD_Guide.html"/>
                                    <bean parent="KS-KitchenSink-Link-To-Bare">
                                        <property name="finalizeMethodAdditionalArguments">
                                            <list>
                                                <value>collection</value>
                                            </list>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionRowSelection-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionRowSelection-Page">
                    <property name="header.render" value="false"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionRowSelection-Page" parent="KS-KitchenSink-Page">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-CollectionRowSelection"/>
            </list>
        </property>
    </bean>

</beans>