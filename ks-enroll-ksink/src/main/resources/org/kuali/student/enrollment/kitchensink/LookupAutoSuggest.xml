<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The Interesting Bits -->

    <!-- in 2.2.0-M4 see ConfigurationTestView-Quickfinder.xml for Suggest examples -->
    <bean parent="Uif-InputField-LabelTop"  id="KS-KitchenSink-LookupAutoSuggest">
        <property name="propertyName" value="stringField1"/>
        <property name="label" value="Suggest"/>
        <property name="instructionalText" value="Start typing to begin a search"/>
        <property name="suggest">
            <bean parent="Uif-Suggest">
                <property name="render" value="true"/>
                <property name="sourcePropertyName" value="name"/>
                <property name="suggestQuery">
                    <bean parent="Uif-AttributeQueryConfig">
                        <!--<property name="queryMethodToCall" value="getTermNamesForSuggest"/>-->
                        <property name="queryMethodToCall" value="getPersonsForSuggest"/>
                        <property name="queryMethodArgumentFieldList" value="stringField1"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>



    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-LookupAutoSuggest-View" parent="KS-KitchenSink-FormView">
        <property name="headerText" value="Lookups, etc"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:headerText="Inline Auto-Suggest">
                    <property name="items">
                        <list>
                            <bean parent="KS-KitchenSink-Page-Summary">
                                <property name="messageText">
                                    <value>
                                        An inline auto-suggest lookup backed by a query can be used to
                                        fill in a field.
                                    </value>
                                </property>
                            </bean>
                            <ref bean="KS-KitchenSink-LookupAutoSuggest-Content"/>
                            <ref bean="KS-KitchenSink-LookupAutoSuggest-Links"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--<bean id="KS-KitchenSink-LookupAutoSuggest-Content" parent="KS-KitchenSink-TabSection">-->
    <bean id="KS-KitchenSink-LookupAutoSuggest-Content" parent="KS-KitchenSink-VerticalBoxSection-Contents">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-LookupAutoSuggest-Section"/>
            </list>
        </property>
    </bean>

    <!-- Autc-Suggest containers -->

    <bean id="KS-KitchenSink-LookupAutoSuggest-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:header.render="false">
                    <property name="items">
                        <list>
                            <ref bean="KS-KitchenSink-LookupAutoSuggest-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-LookupAutoSuggest-Section" parent="Uif-VerticalBoxSection"
          p:headerText="Lookup With Default Action" p:header.render="false">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-LookupAutoSuggest"/>
            </list>
        </property>
    </bean>

    <!-- Links -->

    <bean id="KS-KitchenSink-LookupAutoSuggest-Links" parent="KS-KitchenSink-Page-Links">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-FooterLinkSection">
                    <property name="footerLinkGroups">
                        <list>
                            <bean parent="KS-KitchenSink-FooterLinkGroup-PageXml">
                                <property name="footerLinks">
                                    <map>
                                        <entry key="ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/LookupAutoSuggest.xml"
                                               value="https://svn.kuali.org/repos/student/enrollment/ks-enroll/trunk/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/LookupAutoSuggest.xml"/>
                                    </map>
                                </property>
                            </bean>
                            <bean parent="KS-KitchenSink-FooterLinkGroup-KradXml">
                                <property name="footerLinks">
                                    <map>
                                        <!--
                                        <entry key="UifFieldDefinitions.xml (Uif-InputField)"
                                               value="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifFieldDefinitions.xml"/>
                                        <entry key="UifControlDefinitions.xml (Uif-TextControl)"
                                               value="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifControlDefinitions.xml"/>
                                        -->
                                    </map>
                                </property>
                            </bean>
                            <bean parent="KS-KitchenSink-FooterLinkGroup-KradJava">
                                <property name="footerLinks">
                                    <map>
                                        <!--
                                        <entry key="InputField.java"
                                               value="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/field/InputField.java"/>
                                        <entry key="TextControl.java"
                                               value="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/control/TextControl.java"/>
                                        -->
                                    </map>
                                </property>
                            </bean>
                            <bean parent="KS-KitchenSink-FooterLinkGroup-KradJavaApi">
                                <property name="footerLinks">
                                    <map>
                                        <!--
                                        <entry key="InputField.html"
                                               value="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/field/InputField.html"/>
                                        <entry key="TextControl.html"
                                               value="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/control/TextControl.html"/>
                                        -->
                                    </map>
                                </property>
                            </bean>
                            <bean parent="KS-KitchenSink-FooterLinkGroup-KradGuide">
                                <property name="footerLinks">
                                    <map>
                                        <!--
                                        <entry key="InputField"
                                               value="http://site.kuali.org/rice/2.2.0-M3/reference/html/KRAD_Guide.html#d6766e4967"/>
                                        -->
                                    </map>
                                </property>
                            </bean>
                            <bean parent="KS-KitchenSink-FooterLinkGroup-UIM">
                                <property name="footerLinks">
                                    <map>
                                        <entry key="Inline Auto-Suggest"
                                               value="../kr-krad/kitchensink?viewId=KS-KitchenSink-LookupAutoSuggest-View-Bare&amp;methodToCall=start"/>
                                    </map>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>