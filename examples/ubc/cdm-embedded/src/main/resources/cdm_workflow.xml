<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <documentTypes xmlns="ns:workflow/DocumentType" xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">
    <documentType>
      <name>CluCreditCourseProposal</name>
      <parent>CluCreditCourseParentDocument</parent>
      <description>Credit Course Proposal</description>
      <label>Credit Course Proposal</label>
      <postProcessorName>org.kuali.student.lum.workflow.CluPostProcessor</postProcessorName>
      <docHandler>${lum.application.url}/org.kuali.student.lum.lu.ui.main.LUMMain/LUMMain.jsp</docHandler>
      <active>true</active>
      <routingVersion>2</routingVersion>
      <routePaths>
        <routePath>
          <start name="PreRoute" nextNode="Department Curriculum Committee Review" />
          <role name="Department Curriculum Committee Review" nextNode="Department Review" />
          <role name="Department Review" nextNode="Faculty Curriculum Committee Review" />
          <role name="Faculty Curriculum Committee Review" nextNode="Faculty Review" />
          <role name="Faculty Review" nextNode="CourseTypeSplit" />
          <split name="CourseTypeSplit" nextNode="Senate Review">
            <branch name="UnderGraduate">
              <role name="SCC - Science Subcommittee" nextNode="Join" />                            
            </branch>
            <branch name="Graduate">
              <role name="SCC - Graduate Subcommittee" nextNode="Join" />
            </branch>
            <join name="Join" />
          </split>
          <role name="Senate Review" nextNode="Publication Review" />
          <role name="Publication Review" />
        </routePath>
      </routePaths>
      <routeNodes>      
        <start name="PreRoute">
          <activationType>P</activationType>
          <mandatoryRoute>false</mandatoryRoute>
          <finalApproval>false</finalApproval>
        </start>
        <split name="CourseTypeSplit">
          <activationType>P</activationType>
          <mandatoryRoute>false</mandatoryRoute>
          <finalApproval>false</finalApproval>        
          <type>ca.ubc.student.kuali.lum.workflow.actions.CourseTypeLogicSplitNode</type>
        </split>
        <join name="Join" />
        <role name="Department Curriculum Committee Review">
          <activationType>P</activationType>
          <qualifierResolverClass>org.kuali.student.lum.workflow.qualifierresolver.DepartmentCommitteeQualifierResolver</qualifierResolverClass>
        </role>
        <role name="Department Review">
          <activationType>P</activationType>
          <qualifierResolverClass>org.kuali.student.lum.workflow.qualifierresolver.AdminOrganizationQualifierResolver</qualifierResolverClass>
        </role>
        <role name="Faculty Curriculum Committee Review">
          <activationType>P</activationType>
          <qualifierResolverClass>ca.ubc.student.kuali.lum.workflow.qualifierresolver.FacultyCurriculumCommitteeQualifierResolver</qualifierResolverClass>
        </role>
        <role name="Faculty Review">
          <activationType>P</activationType>
          <qualifierResolverClass>ca.ubc.student.kuali.lum.workflow.qualifierresolver.FacultyQualifierResolver</qualifierResolverClass>
        </role>        
        <role name="Senate Review">
          <activationType>P</activationType>
          <qualifierResolverClass>ca.ubc.student.kuali.lum.workflow.qualifierresolver.SenateCurriculumCommitteeQualifierResolver</qualifierResolverClass>
        </role>
        <role name="Publication Review">
          <activationType>P</activationType>
          <qualifierResolverClass>ca.ubc.student.kuali.lum.workflow.qualifierresolver.SenateCurriculumServicesQualifierResolver</qualifierResolverClass>
        </role>
        <role name="SCC - Science Subcommittee">
          <activationType>P</activationType>
          <qualifierResolverClass>ca.ubc.student.kuali.lum.workflow.qualifierresolver.OrganizationQualifierResolver</qualifierResolverClass>
          <orgId>1033</orgId>
          <orgName>ScienceSubcommittee</orgName>        
        </role>        
        <role name="SCC - Graduate Subcommittee">
          <activationType>P</activationType>
          <qualifierResolverClass>ca.ubc.student.kuali.lum.workflow.qualifierresolver.OrganizationQualifierResolver</qualifierResolverClass>
          <orgId>1032</orgId>
          <orgName>GraduateSubcommittee</orgName>
        </role>
        
      </routeNodes>
    </documentType>
  </documentTypes>
</data>

