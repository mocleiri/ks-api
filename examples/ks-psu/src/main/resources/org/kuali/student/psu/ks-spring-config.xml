<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

  <bean id="prettyPrintListener" class="org.kuali.student.psu.util.PrettyPrintListener"
    init-method="init" destroy-method="destroy" p:filename="methods.csv" />

  <bean id="methodTrackerAdvice" class="org.kuali.student.psu.util.MethodTrackerAdvice">
    <property name="listener" ref="prettyPrintListener" />
  </bean>

  <aop:config>
    <aop:aspect id="serviceLoggingAspect" ref="methodTrackerAdvice">
      <!--
        For some reason this was causing the trackMethod to execute twice each
        time a service method was invoked. In the debugger it looked like there
        were 2 different Proxy objects containing a reference to the same
        LuServiceImpl.
      -->
      <!--
        <aop:pointcut id="serviceMethods" expression="execution (*
        org.kuali.student..service..*Service.*(..))" />
      -->

      <aop:pointcut id="serviceMethods"
        expression="execution (* org.kuali.student..service..impl.*Service*.*(..))" />
      <aop:around pointcut-ref="serviceMethods" method="trackMethod" />
    </aop:aspect>
  </aop:config>

</beans>
