			<id>kuali.release</id>
			<url>http://archiva.kuali.umd.edu/repository/release</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>kuali.snapshot</id>
			<url>http://archiva.kuali.umd.edu/repository/snapshot</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
        <repository>
            <id>maven2</id>
            <url>http://repo1.maven.org/maven2</url>
            <snapshots>
