<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
		<groupId>org.kuali.student.core</groupId>
		<artifactId>ks-parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kuali.student.brms</groupId>
	<artifactId>ks-brms-parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>BRMS</name>
	<description />
	
	
	<modules>
		<module>brms-api</module>
		<module>brms-impl</module>
		<module>execution-api</module>
		<module>execution-impl</module>
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.0</version>
			</plugin>
	        <plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-surefire-plugin</artifactId>
	            <configuration>
	                <systemProperties>
	                    <property>
	                        <name>catalina.base</name>
	                        <value>${project.build.outputDirectory}</value>
	                    </property>
	                </systemProperties>
	            </configuration>
	        </plugin>
		</plugins>
	</build>
	
	<repositories>
		<repository>
			<id>kuali.release</id>
			<url>http://archiva.kuali.umd.edu/repository/release</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>kuali.snapshot</id>
			<url>http://archiva.kuali.umd.edu/repository/snapshot</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
	
	<scm>
		<connection>
			scm:svn:https://test.kuali.org/svn/student/ks-core/branches/ks-core-dev
		</connection>
		<developerConnection>
			scm:svn:https://test.kuali.org/svn/student/ks-core/branches/ks-core-dev
		</developerConnection>
	</scm>
			
</project>