   <id>kuali.release</id>
   <name>Internal Release Repository</name>
   <url>dav:http://archiva.kuali.umd.edu/repository/release</url>
  </repository>
  <snapshotRepository>
   <id>kuali.snapshots</id>
   <name>Internal Snapshot Repository</name>
   <url>dav:http://archiva.kuali.umd.edu/repository/snapshot</url>
  </snapshotRepository>
 </distributionManagement>

 <build>
  <plugins>
   <plugin>
    <artifactId>maven-compiler-plugin</artifactId>
    <configuration>
     <source>1.5</source>
     <target>1.5</target>
     <archive>
      <manifest>
       <addClasspath>true</addClasspath>
       <mainClass>org.kuali.student.dictionary.DictionaryGeneratorFromCommandLine</mainClass>
      </manifest>
     </archive>
    </configuration>
   </plugin>
   <plugin>
    <groupId>org.apache.cxf</groupId>
    <artifactId>cxf-codegen-plugin</artifactId>
    <version>${cxf.version}</version>
    <executions>
     <execution>
      <id>generate-sources</id>
      <phase>generate-sources</phase>
      <configuration>
       <sourceRoot>${project.build.directory}/generated/cxf</sourceRoot>
       <wsdlOptions>
        <wsdlOption>
         <wsdl>${basedir}/src/main/resources/wsdl/EnumerationManagementService.wsdl</wsdl>
         <wsdl>${basedir}/src/main/resources/wsdl/CourseService.wsdl</wsdl>
         <wsdl>${basedir}/src/main/resources/wsdl/OrganizationService.wsdl</wsdl>
         <wsdl>${basedir}/src/main/resources/wsdl/AtpService.wsdl</wsdl>
         <wsdl>${basedir}/src/main/resources/wsdl/CommentService.wsdl</wsdl>
         <wsdl>${basedir}/src/main/resources/wsdl/DocumentService.wsdl</wsdl>
         <wsdl>${basedir}/src/main/resources/wsdl/ProposalService.wsdl</wsdl>
        </wsdlOption>
       </wsdlOptions>
      </configuration>
      <goals>
       <goal>wsdl2java</goal>
      </goals>
     </execution>
    </executions>
    <dependencies>
     <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.8.1</version>
     </dependency>
    </dependencies>

   </plugin>
  </plugins>
 </build>
